{% extends 'back_base.html.twig' %}

{% block title %}{{ fiche.title }} - Admin{% endblock %}

{% block body %}
<div class="admin-header">
    <div>
        <h1 class="admin-title">
            <i class="fa-solid fa-file-lines"></i>
            {{ fiche.title }}
        </h1>
        <p class="admin-subtitle">Fiche #{{ fiche.id }}</p>
    </div>
    <div class="d-flex gap-2">
        <a href="{{ path('admin_fiche_index') }}" class="btn admin-btn admin-btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Retour
        </a>
        <a href="{{ path('admin_fiche_moderateurs', {id: fiche.id}) }}" class="btn admin-btn admin-btn-primary">
            <i class="fa-solid fa-users"></i> Gérer les modérateurs
        </a>
        <a href="{{ path('fiche_show', {id: fiche.id}) }}" class="btn admin-btn admin-btn-secondary" target="_blank">
            <i class="fa-solid fa-external-link-alt"></i> Voir sur le site
        </a>
    </div>
</div>

<div class="row g-4">
    <!-- Main Info -->
    <div class="col-lg-8">
        <div class="admin-card">
            <div class="card-header-admin">
                <h5 class="mb-0">
                    <i class="fa-solid fa-info-circle"></i>
                    Informations
                </h5>
            </div>
            <div class="card-body-admin">
                <div class="info-grid">
                    <div class="info-item">
                        <label><i class="fa-solid fa-heading"></i> Titre</label>
                        <div class="info-value">{{ fiche.title }}</div>
                    </div>
                    
                    <div class="info-item">
                        <label><i class="fa-solid fa-graduation-cap"></i> Filière</label>
                        <div class="info-value">
                            {% if fiche.filiere %}
                                <span class="badge-filiere">
                                    {{ fiche.filiere.nom }} ({{ fiche.filiere.niveau }})
                                </span>
                            {% else %}
                                <span class="text-muted">Non définie</span>
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="info-item">
                        <label><i class="fa-solid fa-eye"></i> Visibilité</label>
                        <div class="info-value">
                            <span class="badge-status {{ fiche.isPublic ? 'badge-public' : 'badge-private' }}">
                                <i class="fa-solid {{ fiche.isPublic ? 'fa-eye' : 'fa-eye-slash' }}"></i>
                                {{ fiche.isPublic ? 'Publique' : 'Privée' }}
                            </span>
                        </div>
                    </div>
                    
                    <div class="info-item">
                        <label><i class="fa-regular fa-calendar"></i> Date de création</label>
                        <div class="info-value">{{ fiche.createdAt|date('d/m/Y à H:i') }}</div>
                    </div>
                    
                    <div class="info-item">
                        <label><i class="fa-regular fa-clock"></i> Dernière modification</label>
                        <div class="info-value">{{ fiche.updatedAt|date('d/m/Y à H:i') }}</div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Content -->
        <div class="admin-card mt-4">
            <div class="card-header-admin">
                <h5 class="mb-0">
                    <i class="fa-solid fa-file-text"></i>
                    Contenu
                </h5>
            </div>
            <div class="card-body-admin">
                <div class="content-preview">
                    {{ fiche.content|nl2br }}
                </div>
            </div>
        </div>
    </div>
    
    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Stats -->
        <div class="admin-card">
            <div class="card-header-admin">
                <h5 class="mb-0">
                    <i class="fa-solid fa-chart-simple"></i>
                    Statistiques
                </h5>
            </div>
            <div class="card-body-admin">
                <div class="stat-item">
                    <div class="stat-icon" style="background: linear-gradient(135deg, #6D5BFF, #2ED3FF);">
                        <i class="fa-solid fa-font"></i>
                    </div>
                    <div>
                        <div class="stat-label">Caractères</div>
                        <div class="stat-value">{{ fiche.content|length }}</div>
                    </div>
                </div>
                
                <div class="stat-item">
                    <div class="stat-icon" style="background: linear-gradient(135deg, #FF4D8D, #FFB86C);">
                        <i class="fa-solid fa-align-left"></i>
                    </div>
                    <div>
                        <div class="stat-label">Mots</div>
                        <div class="stat-value">{{ fiche.content|split(' ')|length }}</div>
                    </div>
                </div>
                
                <div class="stat-item">
                    <div class="stat-icon" style="background: linear-gradient(135deg, #35FFB6, #2E7BFF);">
                        <i class="fa-solid fa-list"></i>
                    </div>
                    <div>
                        <div class="stat-label">Lignes</div>
                        <div class="stat-value">{{ fiche.content|split('\n')|length }}</div>
                    </div>
                </div>
                
                <div class="stat-item">
                    <div class="stat-icon" style="background: linear-gradient(135deg, #6D5BFF, #2ED3FF);">
                        <i class="fa-solid fa-users"></i>
                    </div>
                    <div>
                        <div class="stat-label">Modérateurs</div>
                        <div class="stat-value">{{ moderateurs|length }}</div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Actions -->
        <div class="admin-card mt-4">
            <div class="card-header-admin">
                <h5 class="mb-0">
                    <i class="fa-solid fa-bolt"></i>
                    Actions rapides
                </h5>
            </div>
            <div class="card-body-admin">
                <div class="d-grid gap-2">
                    <form method="post" action="{{ path('admin_fiche_toggle_public', {id: fiche.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('toggle_public_' ~ fiche.id) }}">
                        <button type="submit" class="btn admin-btn admin-btn-primary w-100">
                            <i class="fa-solid {{ fiche.isPublic ? 'fa-eye-slash' : 'fa-eye' }}"></i>
                            {{ fiche.isPublic ? 'Rendre privée' : 'Rendre publique' }}
                        </button>
                    </form>
                    
                    <a href="{{ path('fiche_edit', {id: fiche.id}) }}" class="btn admin-btn admin-btn-secondary w-100" target="_blank">
                        <i class="fa-solid fa-edit"></i>
                        Modifier sur le site
                    </a>
                    
                    <button type="button" class="btn admin-btn admin-btn-danger w-100" 
                            onclick="confirmDelete()">
                        <i class="fa-solid fa-trash"></i>
                        Supprimer
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content admin-modal">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fa-solid fa-triangle-exclamation text-danger"></i>
                    Confirmer la suppression
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir supprimer cette fiche ?</p>
                <p class="text-danger mb-0">
                    <i class="fa-solid fa-exclamation-circle"></i>
                    Cette action est irréversible.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn admin-btn admin-btn-secondary" data-bs-dismiss="modal">
                    Annuler
                </button>
                <form method="post" action="{{ path('admin_fiche_delete', {id: fiche.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete_fiche_' ~ fiche.id) }}">
                    <button type="submit" class="btn admin-btn admin-btn-danger">
                        <i class="fa-solid fa-trash"></i> Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
function confirmDelete() {
    const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
    modal.show();
}
</script>

<style>
.info-grid {
    display: grid;
    gap: 1.5rem;
}

.info-item label {
    display: block;
    font-size: 0.875rem;
    color: var(--muted);
    margin-bottom: 0.5rem;
    font-weight: 600;
}

.info-item label i {
    margin-right: 0.5rem;
}

.info-value {
    font-size: 1rem;
    color: var(--text);
}

.content-preview {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1.5rem;
    max-height: 500px;
    overflow-y: auto;
    line-height: 1.8;
    color: var(--text);
}

.stat-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid var(--border);
    border-radius: 12px;
    margin-bottom: 0.75rem;
}

.stat-item:last-child {
    margin-bottom: 0;
}

.stat-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    color: white;
    flex-shrink: 0;
}

.stat-label {
    font-size: 0.875rem;
    color: var(--muted);
    margin-bottom: 0.25rem;
}

.stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text);
}
</style>
{% endblock %}
