{% extends 'back_base.html.twig' %}

{% block title %}Administration des Groupes{% endblock %}
{% block page_title %}Gestion des Groupes{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .stat-card {
            background: white;
            border-radius: 16px;
            padding: 25px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
            transition: all 0.3s;
        }
        
        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(0,0,0,0.12);
        }
        
        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-bottom: 15px;
        }
        
        .stat-icon.total { background: linear-gradient(135deg, #667eea20, #764ba220); color: #667eea; }
        .stat-icon.public { background: linear-gradient(135deg, #55efc420, #00b89420); color: #00b894; }
        .stat-icon.private { background: linear-gradient(135deg, #ffeaa720, #fdcb6e20); color: #fdcb6e; }
        
        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: #2d3436;
            margin-bottom: 5px;
        }
        
        .stat-label {
            color: #636e72;
            font-size: 0.9rem;
        }
        
        .table-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
            overflow: hidden;
        }
        
        .table-header {
            padding: 25px 30px;
            border-bottom: 1px solid #e8e8e8;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .table-header h2 {
            margin: 0;
            font-size: 1.3rem;
            font-weight: 600;
            color: #2d3436;
        }
        
        .table-responsive {
            overflow-x: auto;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
        }
        
        thead {
            background: #f8f9fa;
        }
        
        th {
            padding: 16px 20px;
            text-align: left;
            font-weight: 600;
            color: #636e72;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        td {
            padding: 16px 20px;
            border-top: 1px solid #f0f0f0;
            color: #2d3436;
        }
        
        tbody tr {
            transition: background 0.2s;
        }
        
        tbody tr:hover {
            background: #f8f9fa;
        }
        
        .visibility-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
        }
        
        .visibility-badge.public {
            background: #d4f4dd;
            color: #00b894;
        }
        
        .visibility-badge.private {
            background: #ffeaa7;
            color: #fdcb6e;
        }
        
        .action-buttons {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
        }
        
        .btn-action {
            padding: 8px 14px;
            border-radius: 8px;
            font-size: 0.85rem;
            font-weight: 500;
            border: none;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }
        
        .btn-view {
            background: #e8eaff;
            color: #667eea;
        }
        
        .btn-view:hover {
            background: #667eea;
            color: white;
        }
        
        .btn-chat {
            background: #e8f5e9;
            color: #48bb78;
        }
        
        .btn-chat:hover {
            background: #48bb78;
            color: white;
        }
        
        .btn-delete {
            background: #ffdddd;
            color: #d63031;
        }
        
        .btn-delete:hover {
            background: #d63031;
            color: white;
        }
        
        .group-name {
            font-weight: 600;
            color: #2d3436;
            max-width: 250px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
        
        .group-description {
            color: #636e72;
            font-size: 0.85rem;
            max-width: 300px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
        
        .member-count {
            display: inline-flex;
            align-items: center;
            gap: 4px;
            color: #636e72;
            font-size: 0.9rem;
        }
    </style>
{% endblock %}

{% block body %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon total">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-value">{{ stats.total }}</div>
            <div class="stat-label">Total Groupes</div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon public">
                <i class="fas fa-globe"></i>
            </div>
            <div class="stat-value">{{ stats.publics }}</div>
            <div class="stat-label">Groupes Publics</div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon private">
                <i class="fas fa-lock"></i>
            </div>
            <div class="stat-value">{{ stats.prives }}</div>
            <div class="stat-label">Groupes Privés</div>
        </div>
    </div>

    <div class="table-card">
        <div class="table-header">
            <h2>Liste des Groupes</h2>
        </div>

        <div class="table-responsive">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Visibilité</th>
                        <th>Membres</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for groupe in groupes %}
                        <tr>
                            <td>#{{ groupe.id }}</td>
                            <td>
                                <div class="group-name" title="{{ groupe.nom }}">
                                    {{ groupe.nom }}
                                </div>
                            </td>
                            <td>
                                <div class="group-description" title="{{ groupe.description }}">
                                    {{ groupe.description|default('Aucune description') }}
                                </div>
                            </td>
                            <td>
                                <span class="visibility-badge {{ groupe.isPublic ? 'public' : 'private' }}">
                                    <i class="fas {{ groupe.isPublic ? 'fa-globe' : 'fa-lock' }}"></i>
                                    {{ groupe.isPublic ? 'Public' : 'Privé' }}
                                </span>
                            </td>
                            <td>
                                <span class="member-count">
                                    <i class="fas fa-users"></i>
                                    {{ groupe.membres.count }}
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a href="{{ path('admin_groupe_show', {'id': groupe.id}) }}" class="btn-action btn-view">
                                        <i class="fas fa-eye"></i> Voir
                                    </a>
                                    <a href="{{ path('chat_groupe', {'id': groupe.id}) }}" class="btn-action btn-chat">
                                        <i class="fas fa-comments"></i> Chat
                                    </a>
                                    <form method="post" action="{{ path('admin_groupe_delete', {'id': groupe.id}) }}" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ groupe.id) }}">
                                        <button type="submit" class="btn-action btn-delete" onclick="return confirm('Supprimer définitivement ce groupe et tous ses membres ?')">
                                            <i class="fas fa-trash"></i> Supprimer
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center py-5">
                                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                <p class="text-muted">Aucun groupe trouvé</p>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
