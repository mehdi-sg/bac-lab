{% extends 'admin/base_admin.html.twig' %}

{% block title %}Modifier la Ressource{% endblock %}
{% block page_title %}Modifier la Ressource{% endblock %}

{% block body %}
<div class="form-page">
    <!-- Decorative Elements -->
    <div class="form-decoration decoration-1"></div>
    <div class="form-decoration decoration-2"></div>
    <div class="form-decoration decoration-3"></div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="form-card">
                <!-- Card Header -->
                <div class="form-card-header">
                    <div class="header-icon">
                        <i class="fas fa-edit"></i>
                    </div>
                    <div class="header-content">
                        <h2>Modifier la Ressource</h2>
                        <p>Mettez à jour les informations de la ressource</p>
                    </div>
                </div>

                <!-- Card Body -->
                <div class="form-card-body">
                    {{ include('admin/ressource/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                </div>

                <!-- Card Footer -->
                <div class="form-card-footer">
                    <div class="footer-info">
                        <i class="fas fa-info-circle"></i>
                        <span>Tous les champs marqués d'un * sont obligatoires</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    {% block stylesheets %}
    <style>
        .form-page {
            position: relative;
            padding: 20px 0;
        }

        /* Decorative Background Elements */
        .form-decoration {
            position: fixed;
            border-radius: 50%;
            pointer-events: none;
            z-index: 0;
        }

        .decoration-1 {
            width: 300px;
            height: 300px;
            background: radial-gradient(circle, rgba(109,91,255,0.15) 0%, transparent 70%);
            top: -100px;
            right: -50px;
            animation: float 8s ease-in-out infinite;
        }

        .decoration-2 {
            width: 200px;
            height: 200px;
            background: radial-gradient(circle, rgba(46,211,255,0.1) 0%, transparent 70%);
            bottom: 10%;
            left: -50px;
            animation: float 6s ease-in-out infinite reverse;
        }

        .decoration-3 {
            width: 150px;
            height: 150px;
            background: radial-gradient(circle, rgba(255,77,141,0.08) 0%, transparent 70%);
            top: 40%;
            right: 10%;
            animation: float 10s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(5deg); }
        }

        /* Form Card */
        .form-card {
            position: relative;
            background: rgba(255,255,255,0.05);
            border: 1px solid var(--border);
            border-radius: 24px;
            overflow: hidden;
            backdrop-filter: blur(20px);
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            z-index: 1;
        }

        .form-card-header {
            display: flex;
            align-items: center;
            gap: 20px;
            padding: 30px;
            background: linear-gradient(135deg, rgba(255,77,141,0.15), rgba(255,182,108,0.1));
            border-bottom: 1px solid var(--border);
        }

        .header-icon {
            width: 70px;
            height: 70px;
            border-radius: 18px;
            background: var(--grad2);
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 8px 24px rgba(255,77,141,0.3);
        }

        .header-icon i {
            font-size: 28px;
            color: white;
        }

        .header-content h2 {
            font-size: 1.5rem;
            font-weight: 800;
            color: var(--text);
            margin: 0 0 6px;
        }

        .header-content p {
            font-size: 0.9rem;
            color: var(--muted);
            margin: 0;
        }

        .form-card-body {
            padding: 30px;
        }

        .form-card-footer {
            padding: 20px 30px;
            background: rgba(255,255,255,0.02);
            border-top: 1px solid var(--border);
        }

        .footer-info {
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 0.85rem;
            color: var(--muted);
        }

        .footer-info i {
            color: var(--grad2);
        }
    </style>
    {% endblock %}
</style>
