{% extends 'admin/base_admin.html.twig' %}

{% block title %}Administration des Ressources{% endblock %}
{% block page_title %}Gestion des Ressources{% endblock %}

{% block topbar_actions %}
    <a href="{{ path('app_admin_ressource_new') }}" class="topbar-btn topbar-btn-primary">
        <i class="fas fa-plus"></i>
        Nouvelle ressource
    </a>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .stat-card {
            background: white;
            border-radius: 16px;
            padding: 25px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
            transition: all 0.3s;
        }
        
        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(0,0,0,0.12);
        }
        
        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-bottom: 15px;
        }
        
        .stat-icon.total { background: linear-gradient(135deg, #667eea20, #764ba220); color: #667eea; }
        .stat-icon.pending { background: linear-gradient(135deg, #ffeaa720, #fdcb6e20); color: #fdcb6e; }
        .stat-icon.validated { background: linear-gradient(135deg, #55efc420, #00b89420); color: #00b894; }
        .stat-icon.rejected { background: linear-gradient(135deg, #ff7f7f20, #ff525220); color: #ff5252; }
        
        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: #2d3436;
            margin-bottom: 5px;
        }
        
        .stat-label {
            color: #636e72;
            font-size: 0.9rem;
        }
        
        .table-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
            overflow: hidden;
        }
        
        .table-header {
            padding: 25px 30px;
            border-bottom: 1px solid #e8e8e8;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .table-header h2 {
            margin: 0;
            font-size: 1.3rem;
            font-weight: 600;
            color: #2d3436;
        }
        
        .table-responsive {
            overflow-x: auto;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
        }
        
        thead {
            background: #f8f9fa;
        }
        
        th {
            padding: 16px 20px;
            text-align: left;
            font-weight: 600;
            color: #636e72;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        td {
            padding: 16px 20px;
            border-top: 1px solid #f0f0f0;
            color: #2d3436;
        }
        
        tbody tr {
            transition: background 0.2s;
        }
        
        tbody tr:hover {
            background: #f8f9fa;
        }
        
        .status-badge {
            display: inline-block;
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
        }
        
        .status-badge.en-attente {
            background: #ffeaa7;
            color: #d63031;
        }
        
        .status-badge.validee {
            background: #d4f4dd;
            color: #00b894;
        }
        
        .status-badge.rejetee {
            background: #ffdddd;
            color: #d63031;
        }
        
        .active-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
        }
        
        .active-badge.active {
            background: #d4f4dd;
            color: #00b894;
        }
        
        .active-badge.inactive {
            background: #e8e8e8;
            color: #636e72;
        }
        
        .action-buttons {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
        }
        
        .btn-action {
            padding: 8px 14px;
            border-radius: 8px;
            font-size: 0.85rem;
            font-weight: 500;
            border: none;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }
        
        .btn-validate {
            background: #d4f4dd;
            color: #00b894;
        }
        
        .btn-validate:hover {
            background: #00b894;
            color: white;
        }
        
        .btn-reject {
            background: #ffdddd;
            color: #d63031;
        }
        
        .btn-reject:hover {
            background: #d63031;
            color: white;
        }
        
        .btn-toggle {
            background: #e8e8e8;
            color: #636e72;
        }
        
        .btn-toggle:hover {
            background: #636e72;
            color: white;
        }
        
        .btn-edit {
            background: #e8eaff;
            color: #667eea;
        }
        
        .btn-edit:hover {
            background: #667eea;
            color: white;
        }
        
        .btn-delete {
            background: #ffdddd;
            color: #d63031;
        }
        
        .btn-delete:hover {
            background: #d63031;
            color: white;
        }
        
        .resource-title {
            font-weight: 600;
            color: #2d3436;
            max-width: 300px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
        
        .type-icon {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 4px 10px;
            background: #f8f9fa;
            border-radius: 6px;
            font-size: 0.85rem;
        }
    </style>
{% endblock %}

{% block body %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon total">
                <i class="fas fa-database"></i>
            </div>
            <div class="stat-value">{{ stats.total }}</div>
            <div class="stat-label">Total Ressources</div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon pending">
                <i class="fas fa-clock"></i>
            </div>
            <div class="stat-value">{{ stats.en_attente }}</div>
            <div class="stat-label">En Attente</div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon validated">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stat-value">{{ stats.validees }}</div>
            <div class="stat-label">ValidÃ©es</div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon rejected">
                <i class="fas fa-times-circle"></i>
            </div>
            <div class="stat-value">{{ stats.rejetees }}</div>
            <div class="stat-label">RejetÃ©es</div>
        </div>
    </div>

    <div class="table-card">
        <div class="table-header">
            <h2>Liste des Ressources</h2>
        </div>

        <div class="table-responsive">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Titre</th>
                        <th>Type</th>
                        <th>CatÃ©gorie</th>
                        <th>Statut</th>
                        <th>Active</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ressource in ressources %}
                        <tr>
                            <td>#{{ ressource.id }}</td>
                            <td>
                                <div class="resource-title" title="{{ ressource.titre }}">
                                    {{ ressource.titre }}
                                </div>
                            </td>
                            <td>
                                <span class="type-icon">
                                    {% if ressource.typeFichier == 'PDF' %}
                                        ðŸ“„ PDF
                                    {% elseif ressource.typeFichier == 'VIDEO' %}
                                        ðŸŽ¬ VidÃ©o
                                    {% elseif ressource.typeFichier == 'LIEN' %}
                                        ðŸ”— Lien
                                    {% endif %}
                                </span>
                            </td>
                            <td>{{ ressource.categorie ?? '-' }}</td>
                            <td>
                                <span class="status-badge {{ ressource.statut|lower|replace({'_': '-'}) }}">
                                    {{ ressource.statut }}
                                </span>
                            </td>
                            <td>
                                <span class="active-badge {{ ressource.estActive ? 'active' : 'inactive' }}">
                                    <i class="fas fa-circle" style="font-size: 8px;"></i>
                                    {{ ressource.estActive ? 'Active' : 'Inactive' }}
                                </span>
                            </td>
                            <td>{{ ressource.dateAjout|date('d/m/Y') }}</td>
                            <td>
                                <div class="action-buttons">
                                    {% if ressource.statut == 'EN_ATTENTE' %}
                                        <form method="post" action="{{ path('app_admin_ressource_validate', {'id': ressource.id}) }}" style="display: inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('validate' ~ ressource.id) }}">
                                            <button type="submit" class="btn-action btn-validate" onclick="return confirm('Valider cette ressource ?')">
                                                <i class="fas fa-check"></i> Valider
                                            </button>
                                        </form>
                                        
                                        <form method="post" action="{{ path('app_admin_ressource_reject', {'id': ressource.id}) }}" style="display: inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ ressource.id) }}">
                                            <button type="submit" class="btn-action btn-reject" onclick="return confirm('Rejeter cette ressource ?')">
                                                <i class="fas fa-times"></i> Rejeter
                                            </button>
                                        </form>
                                    {% endif %}
                                    
                                    <form method="post" action="{{ path('app_admin_ressource_toggle_status', {'id': ressource.id}) }}" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ ressource.id) }}">
                                        <button type="submit" class="btn-action btn-toggle">
                                            <i class="fas fa-power-off"></i>
                                            {{ ressource.estActive ? 'DÃ©sactiver' : 'Activer' }}
                                        </button>
                                    </form>
                                    
                                    <a href="{{ path('app_admin_ressource_edit', {'id': ressource.id}) }}" class="btn-action btn-edit">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                    
                                    <form method="post" action="{{ path('app_admin_ressource_delete', {'id': ressource.id}) }}" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ressource.id) }}">
                                        <button type="submit" class="btn-action btn-delete" onclick="return confirm('Supprimer dÃ©finitivement cette ressource ?')">
                                            <i class="fas fa-trash"></i> Supprimer
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center py-5">
                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                <p class="text-muted">Aucune ressource trouvÃ©e</p>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
