<!-- Form Submit Button Macro -->
{% macro submit_button(button_label, icon_class = 'fas fa-save', button_id = null, disabled = false) %}
    <button
        type="submit"
        class="btn-save{% if disabled %} disabled{% endif %}"
        {% if button_id %}id="{{ button_id }}"{% endif %}
        {% if disabled %}disabled="disabled" aria-disabled="true"{% else %}aria-enabled="true"{% endif %}
        aria-label="{{ button_label|default('Enregistrer') }}"
        data-loading-text="Enregistrement..."
    >
        <span class="btn-icon" aria-hidden="true">
            <i class="{{ icon_class }}"></i>
        </span>
        <span class="btn-text">{{ button_label|default('Enregistrer') }}</span>
        <span class="btn-shine" aria-hidden="true"></span>
    </button>
{% endmacro %}

{% import _self as formMacros %}

<!-- Form Actions -->
<div class="form-actions">
    {{ formMacros.submit_button(button_label|default('Enregistrer'), 'fas fa-save') }}
    <a href="{{ path('app_admin_ressource_index') }}" class="btn-cancel" aria-label="Retour Ã  la liste">
        <span class="btn-icon" aria-hidden="true">
            <i class="fas fa-arrow-left"></i>
        </span>
        <span class="btn-text">Retour</span>
    </a>
</div>
