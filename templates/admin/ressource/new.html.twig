{% extends 'admin/dashboard.html.twig' %}

{% block title %}Créer une Ressource{% endblock %}
{% block page_title %}Créer une Ressource{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .create-resource-container {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 40px 0;
        }
        
        .create-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.15);
            overflow: hidden;
            animation: slideUp 0.5s ease-out;
        }
        
        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .create-card-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 30px;
            color: white;
            position: relative;
            overflow: hidden;
        }
        
        .create-card-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            animation: pulse 3s ease-in-out infinite;
        }
        
        @keyframes pulse {
            0%, 100% { transform: scale(1); opacity: 0.5; }
            50% { transform: scale(1.1); opacity: 0.8; }
        }
        
        .create-card-header h2 {
            font-size: 2rem;
            font-weight: 700;
            margin: 0;
            position: relative;
            z-index: 1;
        }
        
        .create-card-header p {
            margin: 10px 0 0 0;
            opacity: 0.9;
            position: relative;
            z-index: 1;
        }
        
        .create-card-body {
            padding: 40px;
        }
        
        .form-section {
            margin-bottom: 35px;
        }
        
        .form-section-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: #667eea;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #f0f0ff;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .form-section-title i {
            font-size: 1.3rem;
        }
        
        .form-label {
            font-weight: 600;
            color: #2d3436;
            margin-bottom: 8px;
            font-size: 0.95rem;
        }
        
        .form-control, .form-select {
            border: 2px solid #e8e8e8;
            border-radius: 10px;
            padding: 12px 16px;
            transition: all 0.3s;
            font-size: 0.95rem;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            outline: none;
        }
        
        textarea.form-control {
            min-height: 120px;
            resize: vertical;
        }
        
        .form-check {
            background: #f8f9fa;
            padding: 15px 20px;
            border-radius: 10px;
            border: 2px solid #e8e8e8;
            transition: all 0.3s;
        }
        
        .form-check:hover {
            border-color: #667eea;
            background: #f0f0ff;
        }
        
        .form-check-input {
            width: 20px;
            height: 20px;
            margin-top: 0;
            cursor: pointer;
        }
        
        .form-check-input:checked {
            background-color: #667eea;
            border-color: #667eea;
        }
        
        .form-check-label {
            font-weight: 600;
            color: #2d3436;
            margin-left: 10px;
            cursor: pointer;
        }
        
        .btn-save {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 14px 40px;
            border-radius: 10px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }
        
        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
            color: white;
        }
        
        .btn-back {
            background: white;
            color: #636e72;
            border: 2px solid #e8e8e8;
            padding: 14px 30px;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s;
        }
        
        .btn-back:hover {
            border-color: #667eea;
            color: #667eea;
            background: #f0f0ff;
        }
        
        .badge-type {
            display: inline-block;
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            margin-left: 10px;
        }
        
        .badge-pdf { background: #fff3cd; color: #e17055; }
        .badge-video { background: #e8e4ff; color: #6c5ce7; }
        .badge-lien { background: #d4f4dd; color: #00b894; }
        
        .preview-box {
            background: #f8f9fa;
            border: 2px dashed #e8e8e8;
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            margin-top: 10px;
        }
        
        .preview-box img {
            max-width: 100%;
            max-height: 200px;
            border-radius: 8px;
        }
        
        @media (max-width: 768px) {
            .create-card-body {
                padding: 25px;
            }
            
            .create-card-header {
                padding: 20px;
            }
            
            .create-card-header h2 {
                font-size: 1.5rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="create-resource-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="create-card">
                    <div class="create-card-header">
                        <h2>
                            <i class="fas fa-plus-circle me-3"></i>
                            Créer une Nouvelle Ressource
                        </h2>
                        <p class="mb-0">Ajoutez une nouvelle ressource pédagogique à la bibliothèque</p>
                    </div>
                    
                    <div class="create-card-body">
                        {{ include('admin/ressource/_form.html.twig', {'button_label': 'Créer la ressource'}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

