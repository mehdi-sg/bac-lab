{% extends 'base.html.twig' %}

{% block title %}Mes Évaluations{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4"><i class="fas fa-star text-warning"></i> Mes Évaluations</h1>
            
            {% if evaluations is empty %}
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Vous n'avez pas encore évalué de ressources.
                    <a href="{{ path('app_ressource_index') }}" class="alert-link">Découvrir les ressources</a>
                </div>
            {% else %}
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Ressource</th>
                                        <th>Ma Note</th>
                                        <th>Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for evaluation in evaluations %}
                                        <tr>
                                            <td>
                                                <a href="{{ path('app_ressource_show', {id: evaluation.ressource.id}) }}" class="text-decoration-none">
                                                    <strong>{{ evaluation.ressource.titre }}</strong>
                                                </a>
                                                <br>
                                                <small class="text-muted">
                                                    <span class="badge bg-primary">{{ evaluation.ressource.typeFichier }}</span>
                                                </small>
                                            </td>
                                            <td>
                                                <div class="text-warning">
                                                    {% for i in 1..5 %}
                                                        {% if i <= evaluation.note %}
                                                            <i class="fas fa-star"></i>
                                                        {% else %}
                                                            <i class="far fa-star"></i>
                                                        {% endif %}
                                                    {% endfor %}
                                                </div>
                                                <small class="text-muted">({{ evaluation.note }}/5)</small>
                                            </td>
                                            <td>
                                                <small>{{ evaluation.dateEvaluation|date('d/m/Y H:i') }}</small>
                                            </td>
                                            <td>
                                                <a href="{{ path('app_ressource_show', {id: evaluation.ressource.id}) }}" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-eye"></i> Voir
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                
                <div class="mt-3">
                    <p class="text-muted">
                        <i class="fas fa-chart-line"></i> Total : <strong>{{ evaluations|length }}</strong> évaluation(s)
                    </p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
