{% extends 'base.html.twig' %}

{% block title %}Mon Tableau de Bord | BacLab{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        .dashboard-container {
            padding: 40px 20px;
            background: #f8f9fa;
            min-height: 100vh;
            margin-top: 80px;
        }
        
        .dashboard-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 40px;
            border-radius: 16px;
            margin-bottom: 30px;
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        }
        
        .dashboard-header h1 {
            margin: 0;
            font-size: 2.2rem;
            font-weight: 700;
        }
        
        .dashboard-header p {
            margin: 8px 0 0;
            opacity: 0.9;
            font-size: 1.1rem;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }
        
        .stat-card {
            background: white;
            border-radius: 16px;
            padding: 25px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
        }
        
        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 100px;
            height: 100px;
            border-radius: 50%;
            opacity: 0.1;
            transform: translate(30%, -30%);
        }
        
        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(0,0,0,0.12);
        }
        
        .stat-card.resources::before {
            background: linear-gradient(135deg, #667eea, #764ba2);
        }
        
        .stat-card.evaluations::before {
            background: linear-gradient(135deg, #fdcb6e, #e17055);
        }
        
        .stat-card.favorites::before {
            background: linear-gradient(135deg, #ff5252, #d63363);
        }
        
        .stat-card.comments::before {
            background: linear-gradient(135deg, #0984e3, #74b9ff);
        }
        
        .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8rem;
            margin-bottom: 16px;
        }
        
        .stat-card.resources .stat-icon {
            background: linear-gradient(135deg, #667eea20, #764ba220);
            color: #667eea;
        }
        
        .stat-card.evaluations .stat-icon {
            background: linear-gradient(135deg, #fdcb6e20, #e1705520);
            color: #fdcb6e;
        }
        
        .stat-card.favorites .stat-icon {
            background: linear-gradient(135deg, #ff525220, #d6336320);
            color: #ff5252;
        }
        
        .stat-card.comments .stat-icon {
            background: linear-gradient(135deg, #0984e320, #74b9ff20);
            color: #0984e3;
        }
        
        .stat-value {
            font-size: 2.5rem;
            font-weight: 700;
            color: #2d3436;
            margin-bottom: 5px;
        }
        
        .stat-label {
            color: #636e72;
            font-size: 0.95rem;
            font-weight: 500;
        }
        
        .section-card {
            background: white;
            border-radius: 16px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        }
        
        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f0f0f0;
        }
        
        .section-title {
            font-size: 1.4rem;
            font-weight: 700;
            color: #2d3436;
            display: flex;
            align-items: center;
            gap: 12px;
        }
        
        .section-title i {
            color: #667eea;
        }
        
        .view-all-link {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 6px;
            transition: all 0.3s;
        }
        
        .view-all-link:hover {
            color: #764ba2;
            gap: 10px;
        }
        
        .items-list {
            display: grid;
            gap: 16px;
        }
        
        .item-card {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 20px;
            transition: all 0.3s;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .item-card:hover {
            background: #e8eaff;
            transform: translateX(4px);
        }
        
        .item-info {
            flex: 1;
        }
        
        .item-title {
            font-size: 1.05rem;
            font-weight: 600;
            color: #2d3436;
            margin-bottom: 8px;
        }
        
        .item-meta {
            display: flex;
            gap: 16px;
            font-size: 0.85rem;
            color: #636e72;
        }
        
        .item-meta span {
            display: flex;
            align-items: center;
            gap: 6px;
        }
        
        .item-actions {
            display: flex;
            gap: 8px;
        }
        
        .btn-icon {
            width: 36px;
            height: 36px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: none;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
        }
        
        .btn-view {
            background: #e8eaff;
            color: #667eea;
        }
        
        .btn-view:hover {
            background: #667eea;
            color: white;
        }
        
        .btn-edit {
            background: #fff3cd;
            color: #e17055;
        }
        
        .btn-edit:hover {
            background: #e17055;
            color: white;
        }
        
        .rating-stars {
            color: #fdcb6e;
            font-size: 1rem;
        }
        
        .status-badge {
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
        }
        
        .status-badge.en-attente {
            background: #ffeaa7;
            color: #d63031;
        }
        
        .status-badge.validee {
            background: #d4f4dd;
            color: #00b894;
        }
        
        .status-badge.rejetee {
            background: #ffdddd;
            color: #d63031;
        }
        
        .empty-state {
            text-align: center;
            padding: 40px;
            color: #636e72;
        }
        
        .empty-state i {
            font-size: 3rem;
            color: #dfe6e9;
            margin-bottom: 16px;
        }
        
        .empty-state p {
            margin: 0;
        }
        
        .quick-actions {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 16px;
            margin-bottom: 40px;
        }
        
        .quick-action-btn {
            background: white;
            border: 2px solid #e8e8e8;
            border-radius: 12px;
            padding: 20px;
            text-decoration: none;
            color: #2d3436;
            display: flex;
            align-items: center;
            gap: 16px;
            transition: all 0.3s;
        }
        
        .quick-action-btn:hover {
            border-color: #667eea;
            background: #f8f9ff;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.2);
        }
        
        .quick-action-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            background: linear-gradient(135deg, #667eea20, #764ba220);
            color: #667eea;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }
        
        .quick-action-text h3 {
            margin: 0;
            font-size: 1rem;
            font-weight: 600;
            color: #2d3436;
        }
        
        .quick-action-text p {
            margin: 4px 0 0;
            font-size: 0.8rem;
            color: #636e72;
        }
    </style>
{% endblock %}

{% block body %}
<div class="dashboard-container">
    <div class="container">
        <div class="dashboard-header">
            <h1><i class="fas fa-tachometer-alt me-3"></i>Mon Tableau de Bord</h1>
            <p>Bienvenue, {{ app.user.email|split('@')[0] }} !</p>
        </div>

        <!-- Statistics -->
        <div class="stats-grid">
            <div class="stat-card resources">
                <div class="stat-icon">
                    <i class="fas fa-folder-open"></i>
                </div>
                <div class="stat-value">{{ stats.total_ressources }}</div>
                <div class="stat-label">Mes Ressources</div>
            </div>
            
            <div class="stat-card evaluations">
                <div class="stat-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="stat-value">{{ stats.total_evaluations }}</div>
                <div class="stat-label">Mes Évaluations</div>
            </div>
            
            <div class="stat-card favorites">
                <div class="stat-icon">
                    <i class="fas fa-heart"></i>
                </div>
                <div class="stat-value">{{ stats.total_favorites }}</div>
                <div class="stat-label">Mes Favoris</div>
            </div>
            
            <div class="stat-card comments">
                <div class="stat-icon">
                    <i class="fas fa-comments"></i>
                </div>
                <div class="stat-value">{{ stats.total_comments }}</div>
                <div class="stat-label">Mes Commentaires</div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="quick-actions">
            <a href="{{ path('app_ressource_new') }}" class="quick-action-btn">
                <div class="quick-action-icon">
                    <i class="fas fa-plus"></i>
                </div>
                <div class="quick-action-text">
                    <h3>Créer une ressource</h3>
                    <p>Partagez vos documents</p>
                </div>
            </a>
            
            <a href="{{ path('app_bibliotheque_index') }}" class="quick-action-btn">
                <div class="quick-action-icon">
                    <i class="fas fa-book"></i>
                </div>
                <div class="quick-action-text">
                    <h3>Bibliothèque</h3>
                    <p>Découvrez les ressources</p>
                </div>
            </a>
            
            <a href="{{ path('app_evaluation_index') }}" class="quick-action-btn">
                <div class="quick-action-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="quick-action-text">
                    <h3>Mes Évaluations</h3>
                    <p>Gérez vos avis</p>
                </div>
            </a>
            
            <a href="{{ path('app_ressource_index') }}" class="quick-action-btn">
                <div class="quick-action-icon">
                    <i class="fas fa-folder"></i>
                </div>
                <div class="quick-action-text">
                    <h3>Mes Ressources</h3>
                    <p>Gérez vos documents</p>
                </div>
            </a>
        </div>

        <!-- Recent Resources -->
        <div class="section-card">
            <div class="section-header">
                <h2 class="section-title">
                    <i class="fas fa-folder-open"></i>
                    Mes Ressources Récentes
                </h2>
                <a href="{{ path('app_ressource_index') }}" class="view-all-link">
                    Voir tout
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            
            {% if recent_ressources|length > 0 %}
                <div class="items-list">
                    {% for ressource in recent_ressources %}
                        <div class="item-card">
                            <div class="item-info">
                                <div class="item-title">{{ ressource.titre }}</div>
                                <div class="item-meta">
                                    <span>
                                        <i class="fas fa-tag"></i>
                                        {{ ressource.categorie ?? 'Non catégorisé' }}
                                    </span>
                                    <span>
                                        <i class="fas fa-calendar"></i>
                                        {{ ressource.dateAjout|date('d/m/Y') }}
                                    </span>
                                    <span class="status-badge {{ ressource.statut|lower|replace({'_': '-'}) }}">
                                        {{ ressource.statut }}
                                    </span>
                                </div>
                            </div>
                            <div class="item-actions">
                                <a href="{{ path('app_ressource_show', {id: ressource.id}) }}" class="btn-icon btn-view" title="Voir">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_ressource_edit', {id: ressource.id}) }}" class="btn-icon btn-edit" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="empty-state">
                    <i class="fas fa-folder-open"></i>
                    <p>Vous n'avez pas encore créé de ressource</p>
                </div>
            {% endif %}
        </div>

        <!-- Recent Evaluations -->
        <div class="section-card">
            <div class="section-header">
                <h2 class="section-title">
                    <i class="fas fa-star"></i>
                    Mes Évaluations Récentes
                </h2>
                <a href="{{ path('app_evaluation_index') }}" class="view-all-link">
                    Voir tout
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            
            {% if recent_evaluations|length > 0 %}
                <div class="items-list">
                    {% for evaluation in recent_evaluations %}
                        <div class="item-card">
                            <div class="item-info">
                                <div class="item-title">{{ evaluation.ressource.titre }}</div>
                                <div class="item-meta">
                                    {% if evaluation.note %}
                                        <span class="rating-stars">
                                            {% for i in 1..5 %}
                                                <i class="fas fa-star{{ i <= evaluation.note ? '' : '-o' }}"></i>
                                            {% endfor %}
                                        </span>
                                    {% endif %}
                                    <span>
                                        <i class="fas fa-calendar"></i>
                                        {{ evaluation.dateEvaluation|date('d/m/Y') }}
                                    </span>
                                    {% if evaluation.estFavori %}
                                        <span style="color: #ff5252;">
                                            <i class="fas fa-heart"></i>
                                            Favori
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="item-actions">
                                <a href="{{ path('app_bibliotheque_show', {id: evaluation.ressource.id}) }}" class="btn-icon btn-view" title="Voir la ressource">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_evaluation_edit', {id: evaluation.id}) }}" class="btn-icon btn-edit" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="empty-state">
                    <i class="fas fa-star"></i>
                    <p>Vous n'avez pas encore évalué de ressource</p>
                </div>
            {% endif %}
        </div>

        <!-- Favorites -->
        <div class="section-card">
            <div class="section-header">
                <h2 class="section-title">
                    <i class="fas fa-heart"></i>
                    Mes Favoris
                </h2>
                <a href="{{ path('app_evaluation_index') }}" class="view-all-link">
                    Voir tout
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            
            {% if favorites|length > 0 %}
                <div class="items-list">
                    {% for favorite in favorites %}
                        <div class="item-card">
                            <div class="item-info">
                                <div class="item-title">{{ favorite.ressource.titre }}</div>
                                <div class="item-meta">
                                    {% if favorite.note %}
                                        <span class="rating-stars">
                                            {% for i in 1..5 %}
                                                <i class="fas fa-star{{ i <= favorite.note ? '' : '-o' }}"></i>
                                            {% endfor %}
                                        </span>
                                    {% endif %}
                                    <span>
                                        <i class="fas fa-heart" style="color: #ff5252;"></i>
                                        Ajouté le {{ favorite.dateFavori|date('d/m/Y') }}
                                    </span>
                                </div>
                            </div>
                            <div class="item-actions">
                                <a href="{{ path('app_bibliotheque_show', {id: favorite.ressource.id}) }}" class="btn-icon btn-view" title="Voir la ressource">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_bibliotheque_telecharger', {id: favorite.ressource.id}) }}" class="btn-icon btn-edit" title="Télécharger">
                                    <i class="fas fa-download"></i>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="empty-state">
                    <i class="fas fa-heart"></i>
                    <p>Vous n'avez pas encore de favoris</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
