{% extends 'base.html.twig' %}

{% block title %}Mes Commentaires{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4"><i class="fas fa-comment text-primary"></i> Mes Commentaires</h1>
            
            {% if commentaires is empty %}
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Vous n'avez pas encore commenté de ressources.
                    <a href="{{ path('app_ressource_index') }}" class="alert-link">Découvrir les ressources</a>
                </div>
            {% else %}
                {% for evaluation in commentaires %}
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <h5 class="card-title">
                                        <a href="{{ path('app_ressource_show', {id: evaluation.ressource.id}) }}" class="text-decoration-none">
                                            {{ evaluation.ressource.titre }}
                                        </a>
                                    </h5>
                                    <p class="card-text">{{ evaluation.commentaire }}</p>
                                    <small class="text-muted">
                                        <i class="fas fa-clock"></i> {{ evaluation.dateCommentaire|date('d/m/Y à H:i') }}
                                        {% if evaluation.note %}
                                            <span class="badge bg-success ms-2">
                                                <i class="fas fa-star"></i> {{ evaluation.note }}/5
                                            </span>
                                        {% endif %}
                                        {% if evaluation.estSignale %}
                                            <span class="badge bg-warning ms-2">
                                                <i class="fas fa-flag"></i> Signalé
                                            </span>
                                        {% endif %}
                                    </small>
                                </div>
                                <div class="ms-3">
                                    <a href="{{ path('app_ressource_show', {id: evaluation.ressource.id}) }}" class="btn btn-sm btn-primary">
                                        <i class="fas fa-eye"></i> Voir
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                
                <div class="mt-3">
                    <p class="text-muted">
                        <i class="fas fa-comments"></i> Total : <strong>{{ commentaires|length }}</strong> commentaire(s)
                    </p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
