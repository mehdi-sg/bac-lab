{% extends 'base.html.twig' %}

{% block title %}Calcul Score BAC - {{ filiereLabel }} - BacLab{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        /* Score Calculator Styles */
        .score-page {
            background: linear-gradient(135deg, #C86FFF 0%, #4255A4 100%);
            min-height: 100vh;
            padding: 120px 0 60px;
            position: relative;
            overflow: hidden;
        }
        
        .score-page::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
            pointer-events: none;
        }
        
        .score-container {
            position: relative;
            z-index: 2;
        }
        
        .score-header {
            text-align: center;
            color: white;
            margin-bottom: 40px;
        }
        
        .score-title {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 15px;
            text-shadow: 0 4px 20px rgba(0,0,0,0.3);
        }
        
        .score-subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
            margin-bottom: 10px;
        }
        
        .score-filiere {
            display: inline-block;
            background: rgba(255,255,255,0.2);
            padding: 8px 20px;
            border-radius: 25px;
            font-weight: 600;
            backdrop-filter: blur(10px);
        }
        
        .score-card {
            background: rgba(255,255,255,0.95);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            box-shadow: 0 25px 50px rgba(0,0,0,0.15);
            border: 1px solid rgba(255,255,255,0.3);
            overflow: hidden;
            margin-bottom: 30px;
        }
        
        .score-card-header {
            background: linear-gradient(135deg, rgba(200, 111, 255, 0.1), rgba(66, 85, 164, 0.1));
            padding: 25px 30px;
            border-bottom: 1px solid rgba(0,0,0,0.1);
        }
        
        .score-card-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1a1a2e;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 12px;
        }
        
        .score-card-body {
            padding: 30px;
        }
        
        .score-form-group {
            margin-bottom: 25px;
        }
        
        .score-form-group label {
            font-weight: 600;
            color: #1a1a2e;
            margin-bottom: 8px;
            display: block;
        }
        
        .score-input {
            border: 2px solid #e9ecef !important;
            border-radius: 12px !important;
            padding: 12px 16px !important;
            font-size: 1rem !important;
            transition: all 0.3s ease !important;
            background: white !important;
        }
        
        .score-input:focus {
            border-color: #C86FFF !important;
            box-shadow: 0 0 0 4px rgba(200, 111, 255, 0.15) !important;
            outline: none !important;
        }
        
        .score-input.is-invalid {
            border-color: #dc3545 !important;
        }
        
        .score-submit-btn {
            background: linear-gradient(135deg, #C86FFF 0%, #4255A4 100%) !important;
            border: none !important;
            border-radius: 25px !important;
            padding: 15px 40px !important;
            font-weight: 700 !important;
            font-size: 1.1rem !important;
            color: white !important;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) !important;
            box-shadow: 0 8px 25px rgba(200, 111, 255, 0.35) !important;
            width: 100% !important;
        }
        
        .score-submit-btn:hover {
            transform: translateY(-3px) scale(1.02) !important;
            box-shadow: 0 15px 40px rgba(200, 111, 255, 0.45) !important;
            color: white !important;
        }
        
        .score-result {
            text-align: center;
            padding: 40px 30px;
        }
        
        .score-result-value {
            font-size: 4rem;
            font-weight: 800;
            color: #C86FFF;
            margin-bottom: 15px;
            text-shadow: 0 4px 20px rgba(200, 111, 255, 0.3);
        }
        
        .score-result-label {
            font-size: 1.2rem;
            color: #6c757d;
            margin-bottom: 30px;
        }
        
        .score-details-table {
            margin-top: 30px;
        }
        
        .score-details-table table {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        }
        
        .score-details-table th {
            background: linear-gradient(135deg, #C86FFF 0%, #4255A4 100%);
            color: white;
            font-weight: 600;
            padding: 15px;
            border: none;
        }
        
        .score-details-table td {
            padding: 12px 15px;
            border-bottom: 1px solid #f8f9fa;
            vertical-align: middle;
        }
        
        .score-details-table tr:last-child td {
            border-bottom: none;
        }
        
        .score-details-table .table-total {
            background: rgba(200, 111, 255, 0.1);
            font-weight: 700;
        }
        
        .score-formule {
            background: rgba(200, 111, 255, 0.1);
            border: 1px solid rgba(200, 111, 255, 0.2);
            border-radius: 12px;
            padding: 20px;
            margin-top: 25px;
            font-family: 'Courier New', monospace;
            font-size: 1.1rem;
            font-weight: 600;
            color: #4255A4;
            text-align: center;
        }
        
        .score-actions {
            text-align: center;
            margin-top: 30px;
        }
        
        .score-btn-secondary {
            background: transparent;
            border: 2px solid #C86FFF;
            color: #C86FFF;
            border-radius: 25px;
            padding: 12px 30px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
            margin: 0 10px;
        }
        
        .score-btn-secondary:hover {
            background: #C86FFF;
            color: white;
            text-decoration: none;
            transform: translateY(-2px);
        }
        
        .form-help {
            font-size: 0.85rem;
            color: #6c757d;
            margin-top: 5px;
        }
        
        .invalid-feedback {
            display: block;
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 5px;
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            .score-title {
                font-size: 2.2rem;
            }
            
            .score-card-body {
                padding: 20px;
            }
            
            .score-result-value {
                font-size: 3rem;
            }
            
            .score-details-table {
                font-size: 0.9rem;
            }
        }
        
        /* Animation */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .score-card {
            animation: fadeInUp 0.6s ease-out;
        }
        
        .score-card:nth-child(2) {
            animation-delay: 0.2s;
        }
    </style>
{% endblock %}

{% block body %}
<div class="score-page">
    <div class="container score-container">
        <!-- Header -->
        <div class="score-header">
            <h1 class="score-title">Calcul Score BAC</h1>
            <p class="score-subtitle">Calculez votre Formule Globale (FG) selon les coefficients officiels</p>
            <div class="score-filiere">
                <i class="fas fa-graduation-cap mr-2"></i>
                {{ filiereLabel }}
            </div>
        </div>
        
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Formulaire -->
                <div class="score-card">
                    <div class="score-card-header">
                        <h2 class="score-card-title">
                            <i class="fas fa-calculator"></i>
                            Saisie des notes
                        </h2>
                    </div>
                    <div class="score-card-body">
                        {{ form_start(form, {'attr': {'class': 'score-form'}}) }}
                        
                        <div class="row">
                            {% for field in form %}
                                {% if field.vars.name != 'calculer' and field.vars.name != '_token' %}
                                    <div class="col-md-6">
                                        <div class="score-form-group">
                                            {{ form_label(field) }}
                                            {{ form_widget(field) }}
                                            {% if field.vars.help %}
                                                <div class="form-help">{{ field.vars.help }}</div>
                                            {% endif %}
                                            {{ form_errors(field) }}
                                        </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                        
                        <div class="text-center mt-4">
                            {{ form_widget(form.calculer) }}
                        </div>
                        
                        {{ form_end(form) }}
                    </div>
                </div>
                
                <!-- Résultat -->
                {% if result %}
                <div class="score-card">
                    <div class="score-card-header">
                        <h2 class="score-card-title">
                            <i class="fas fa-trophy"></i>
                            Votre Score BAC
                        </h2>
                    </div>
                    <div class="score-card-body">
                        <div class="score-result">
                            <div class="score-result-value">{{ result.fg }}<small>/20</small></div>
                            <div class="score-result-label">Formule Globale (FG) - {{ result.filiereLabel }}</div>
                            
                            <!-- Formule -->
                            <div class="score-formule">
                                {{ result.details.formule }}
                            </div>
                            
                            <!-- Détails du calcul -->
                            <div class="score-details-table">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Matière</th>
                                            <th>Note</th>
                                            <th>Coefficient</th>
                                            <th>Contribution</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for detail in result.details.details %}
                                        <tr>
                                            <td><strong>{{ detail.matiereLabel }}</strong></td>
                                            <td>{{ detail.note }}/20</td>
                                            <td>{{ detail.coefficient }}</td>
                                            <td>{{ detail.contribution }}</td>
                                        </tr>
                                        {% endfor %}
                                        <tr class="table-total">
                                            <td><strong>TOTAL</strong></td>
                                            <td>-</td>
                                            <td><strong>{{ result.details.totalCoefficient }}</strong></td>
                                            <td><strong>{{ result.fg }}</strong></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            
                            <!-- Actions -->
                            <div class="score-actions">
                                <a href="{{ path('score_calcul') }}" class="score-btn-secondary">
                                    <i class="fas fa-redo"></i>
                                    Nouveau calcul
                                </a>
                                <a href="{{ path('app_profile') }}" class="score-btn-secondary">
                                    <i class="fas fa-user"></i>
                                    Mon profil
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                {% endif %}
                
                <!-- Informations -->
                <div class="score-card">
                    <div class="score-card-header">
                        <h2 class="score-card-title">
                            <i class="fas fa-info-circle"></i>
                            Informations importantes
                        </h2>
                    </div>
                    <div class="score-card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h5><i class="fas fa-lightbulb text-warning mr-2"></i>À propos du calcul</h5>
                                <ul class="list-unstyled">
                                    <li><i class="fas fa-check text-success mr-2"></i>Formules officielles du BAC tunisien</li>
                                    <li><i class="fas fa-check text-success mr-2"></i>Coefficients exacts par filière</li>
                                    <li><i class="fas fa-check text-success mr-2"></i>Calcul automatique et précis</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h5><i class="fas fa-exclamation-triangle text-info mr-2"></i>Notes importantes</h5>
                                <ul class="list-unstyled">
                                    <li><i class="fas fa-arrow-right text-primary mr-2"></i>MG = Moyenne générale du BAC</li>
                                    <li><i class="fas fa-arrow-right text-primary mr-2"></i>Toutes les notes sont sur 20</li>
                                    <li><i class="fas fa-arrow-right text-primary mr-2"></i>Résultat arrondi à 2 décimales</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Preview en temps réel (optionnel)
    const inputs = document.querySelectorAll('.score-input');
    const previewEnabled = false; // Désactivé par défaut, le serveur reste la référence
    
    if (previewEnabled) {
        inputs.forEach(input => {
            input.addEventListener('input', function() {
                // Logique de preview JS ici si nécessaire
                console.log('Preview calculation...');
            });
        });
    }
    
    // Validation côté client
    inputs.forEach(input => {
        input.addEventListener('blur', function() {
            const value = parseFloat(this.value);
            if (this.value && (isNaN(value) || value < 0 || value > 20)) {
                this.classList.add('is-invalid');
            } else {
                this.classList.remove('is-invalid');
            }
        });
    });
    
    // Auto-focus sur le premier champ
    const firstInput = document.querySelector('.score-input');
    if (firstInput) {
        firstInput.focus();
    }
    
    console.log('✅ Score calculator loaded');
});
</script>
{% endblock %}