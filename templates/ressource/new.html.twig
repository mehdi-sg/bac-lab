{% extends 'base.html.twig' %}

{% block title %}Nouvelle ressource | BacLab{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        /* Creative Page Background */
        .creative-bg {
            min-height: 100vh;
            background: 
                radial-gradient(ellipse at 20% 20%, rgba(102, 126, 234, 0.15) 0%, transparent 50%),
                radial-gradient(ellipse at 80% 80%, rgba(118, 75, 162, 0.15) 0%, transparent 50%),
                radial-gradient(ellipse at 50% 50%, rgba(240, 147, 251, 0.1) 0%, transparent 50%),
                linear-gradient(180deg, #f8f9ff 0%, #ffffff 100%);
            position: relative;
            overflow: hidden;
        }
        
        /* Floating Shapes */
        .floating-shapes {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 0;
            overflow: hidden;
        }
        
        .shape {
            position: absolute;
            border-radius: 50%;
            opacity: 0.08;
            animation: float 20s infinite ease-in-out;
        }
        
        .shape-1 {
            width: 400px;
            height: 400px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            top: -150px;
            right: -100px;
            animation-delay: 0s;
        }
        
        .shape-2 {
            width: 300px;
            height: 300px;
            background: linear-gradient(135deg, #f093fb, #f5576c);
            bottom: -100px;
            left: -50px;
            animation-delay: -5s;
        }
        
        .shape-3 {
            width: 200px;
            height: 200px;
            background: linear-gradient(135deg, #4facfe, #00f2fe);
            top: 50%;
            left: 50%;
            animation-delay: -10s;
        }
        
        .shape-4 {
            width: 150px;
            height: 150px;
            background: linear-gradient(135deg, #43e97b, #38f9d7);
            top: 20%;
            left: 10%;
            animation-delay: -15s;
        }
        
        @keyframes float {
            0%, 100% { transform: translate(0, 0) rotate(0deg) scale(1); }
            25% { transform: translate(20px, -30px) rotate(5deg) scale(1.05); }
            50% { transform: translate(-10px, 20px) rotate(-5deg) scale(0.95); }
            75% { transform: translate(30px, 10px) rotate(3deg) scale(1.02); }
        }
        
        /* Main Container */
        .main-container {
            position: relative;
            z-index: 1;
            padding: 40px 20px 60px;
        }
        
        /* Glass Card */
        .glass-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            box-shadow: 
                0 25px 50px -12px rgba(0, 0, 0, 0.15),
                0 0 0 1px rgba(255, 255, 255, 0.3);
            overflow: hidden;
            max-width: 900px;
            margin: 0 auto;
        }
        
        /* Card Header */
        .card-header-creative {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 40px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }
        
        .card-header-creative::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 60%);
            animation: pulse 4s infinite;
        }
        
        @keyframes pulse {
            0%, 100% { transform: scale(1); opacity: 0.5; }
            50% { transform: scale(1.1); opacity: 0.8; }
        }
        
        .header-content {
            position: relative;
            z-index: 1;
        }
        
        .header-icon-wrapper {
            width: 80px;
            height: 80px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            animation: bounce 2s infinite;
        }
        
        @keyframes bounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }
        
        .header-icon-wrapper i {
            font-size: 2.5rem;
            color: white;
        }
        
        .card-header-creative h1 {
            color: white;
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 8px;
            text-shadow: 0 2px 10px rgba(0,0,0,0.2);
        }
        
        .card-header-creative p {
            color: rgba(255, 255, 255, 0.9);
            font-size: 1rem;
        }
        
        /* Card Body */
        .card-body-creative {
            padding: 40px;
        }
        
        /* Step Indicators */
        .step-indicator {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-bottom: 40px;
        }
        
        .step {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 12px 24px;
            background: #f8f9ff;
            border-radius: 50px;
            transition: all 0.3s ease;
            cursor: pointer;
        }
        
        .step.active {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        }
        
        .step.completed {
            background: #43e97b20;
            color: #43e97b;
        }
        
        .step-number {
            width: 28px;
            height: 28px;
            background: rgba(0,0,0,0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 0.9rem;
        }
        
        .step.active .step-number {
            background: rgba(255,255,255,0.3);
        }
        
        .step.active .step-label {
            color: white;
        }
        
        .step.completed .step-number {
            background: #43e97b;
            color: white;
        }
        
        /* Form Sections */
        .form-step {
            display: none;
            animation: fadeInUp 0.5s ease;
        }
        
        .form-step.active {
            display: block;
        }
        
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .section-card {
            background: linear-gradient(135deg, #f8f9ff 0%, #ffffff 100%);
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 25px;
            border: 1px solid #e8e8e8;
            transition: all 0.3s ease;
        }
        
        .section-card:hover {
            box-shadow: 0 10px 40px rgba(102, 126, 234, 0.1);
            transform: translateY(-2px);
        }
        
        .section-card-header {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 2px dashed #e8e8e8;
        }
        
        .section-card-icon {
            width: 50px;
            height: 50px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.4rem;
            flex-shrink: 0;
        }
        
        .section-card-icon.info {
            background: linear-gradient(135deg, #667eea20, #764ba220);
            color: #667eea;
        }
        
        .section-card-icon.file {
            background: linear-gradient(135deg, #f093fb20, #f5576c20);
            color: #f5576c;
        }
        
        .section-card-icon.category {
            background: linear-gradient(135deg, #4facfe20, #00f2fe20);
            color: #4facfe;
        }
        
        .section-card-title h3 {
            margin: 0;
            font-size: 1.2rem;
            font-weight: 600;
            color: #333;
        }
        
        .section-card-title p {
            margin: 5px 0 0;
            font-size: 0.9rem;
            color: #888;
        }
        
        /* Enhanced Inputs */
        .input-wrapper {
            position: relative;
            margin-bottom: 20px;
        }
        
        .input-wrapper label {
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: 600;
            color: #444;
            margin-bottom: 8px;
            font-size: 0.95rem;
        }
        
        .input-wrapper label i {
            color: #667eea;
        }
        
        .input-floating {
            position: relative;
        }
        
        .input-floating input,
        .input-floating textarea,
        .input-floating select {
            width: 100%;
            padding: 16px 20px 16px 50px;
            border: 2px solid #e8e8e8;
            border-radius: 14px;
            font-size: 1rem;
            background: #fafafa;
            transition: all 0.3s ease;
        }
        
        .input-floating input:focus,
        .input-floating textarea:focus,
        .input-floating select:focus {
            border-color: #667eea;
            background: white;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.15);
            outline: none;
        }
        
        .input-icon {
            position: absolute;
            left: 18px;
            top: 50%;
            transform: translateY(-50%);
            color: #aaa;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }
        
        .input-floating input:focus + .input-icon,
        .input-floating textarea:focus ~ .input-icon {
            color: #667eea;
        }
        
        /* File Upload Creative */
        .upload-zone {
            border: 3px dashed #d0d0d0;
            border-radius: 20px;
            padding: 40px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            background: linear-gradient(135deg, #fafafa 0%, #f0f0ff 100%);
        }
        
        .upload-zone:hover {
            border-color: #667eea;
            background: linear-gradient(135deg, #f8f9ff 0%, #e8eaff 100%);
            transform: scale(1.01);
        }
        
        .upload-zone.dragover {
            border-color: #667eea;
            background: rgba(102, 126, 234, 0.1);
        }
        
        .upload-icon {
            font-size: 3rem;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 15px;
        }
        
        .upload-zone h4 {
            color: #333;
            font-size: 1.1rem;
            margin-bottom: 8px;
        }
        
        .upload-zone p {
            color: #888;
            font-size: 0.9rem;
        }
        
        /* Custom Select */
        .custom-select-wrapper {
            position: relative;
        }
        
        .custom-select,
        .input-floating input,
        .input-floating textarea,
        .input-floating select {
            width: 100%;
            padding: 16px 20px 16px 50px;
            border: 2px solid #e8e8e8;
            border-radius: 14px;
            font-size: 1rem;
            background: #fafafa;
            transition: all 0.3s ease;
            text-align: center;
            text-align-last: center;
        }
        
        .input-floating textarea {
            text-align: left;
            text-align-last: left;
        }
        
        .custom-select:focus,
        .input-floating input:focus,
        .input-floating textarea:focus,
        .input-floating select:focus {
            border-color: #667eea;
            background: white;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.15);
            outline: none;
        }
        
        /* Center placeholders */
        .input-floating input::placeholder,
        .input-floating textarea::placeholder {
            text-align: center;
            opacity: 0.6;
        }
        
        /* Center select options */
        .custom-select option {
            text-align: center;
            padding: 10px;
        }
        
        /* Nice-select override */
        .nice-select {
            text-align: center !important;
            text-align-last: center !important;
            width: 100%;
            border-radius: 14px;
            padding: 16px 20px !important;
            border: 2px solid #e8e8e8;
            height: auto;
            line-height: normal;
        }
        
        .nice-select:after {
            right: 50% !important;
            transform: translateX(50%) !important;
            margin-right: 0 !important;
        }
        
        .nice-select .list {
            text-align: center;
            width: 100%;
        }
        
        .nice-select .list li {
            text-align: center;
        }
        
        /* Also center Symfony form_row selects */
        select.form-control,
        select.form-select {
            text-align: center;
            text-align-last: center;
        }
        
        select.form-control option,
        select.form-select option {
            text-align: center;
        }
        
        /* Toggle Switch */
        .toggle-wrapper {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 20px 25px;
            background: linear-gradient(135deg, #f8f9ff 0%, #ffffff 100%);
            border-radius: 16px;
            border: 2px solid #e8e8e8;
            margin-top: 20px;
        }
        
        .toggle-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }
        
        .toggle-icon {
            width: 45px;
            height: 45px;
            background: linear-gradient(135deg, #667eea20, #764ba220);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            color: #667eea;
        }
        
        .toggle-text h4 {
            margin: 0;
            font-size: 1rem;
            font-weight: 600;
            color: #333;
        }
        
        .toggle-text p {
            margin: 3px 0 0;
            font-size: 0.85rem;
            color: #888;
        }
        
        .toggle-switch {
            position: relative;
            width: 60px;
            height: 32px;
        }
        
        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }
        
        .toggle-slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #e0e0e0;
            transition: 0.4s;
            border-radius: 32px;
        }
        
        .toggle-slider:before {
            position: absolute;
            content: "";
            height: 24px;
            width: 24px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: 0.4s;
            border-radius: 50%;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }
        
        .toggle-switch input:checked + .toggle-slider {
            background: linear-gradient(135deg, #667eea, #764ba2);
        }
        
        .toggle-switch input:checked + .toggle-slider:before {
            transform: translateX(28px);
        }
        
        /* Buttons */
        .btn-group {
            display: flex;
            gap: 15px;
            margin-top: 35px;
            padding-top: 30px;
            border-top: 2px solid #f0f0f0;
        }
        
        .btn-primary-creative {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 16px 35px;
            border-radius: 14px;
            color: white;
            font-size: 1rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        }
        
        .btn-primary-creative:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(102, 126, 234, 0.5);
            color: white;
        }
        
        .btn-secondary-creative {
            background: transparent;
            border: 2px solid #e0e0e0;
            padding: 16px 30px;
            border-radius: 14px;
            color: #666;
            font-size: 1rem;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .btn-secondary-creative:hover {
            border-color: #667eea;
            color: #667eea;
            background: #f8f9ff;
        }
        
        .btn-success-creative {
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
            border: none;
            padding: 16px 35px;
            border-radius: 14px;
            color: white;
            font-size: 1rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 8px 25px rgba(67, 233, 123, 0.4);
        }
        
        .btn-success-creative:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(67, 233, 123, 0.5);
            color: white;
        }
        
        /* Help Tooltip */
        .help-badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 18px;
            height: 18px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border-radius: 50%;
            font-size: 10px;
            font-weight: bold;
            cursor: help;
            transition: all 0.3s ease;
        }
        
        .help-badge:hover {
            transform: scale(1.15);
        }
        
        /* Progress Bar */
        .progress-wrapper {
            margin-bottom: 30px;
        }
        
        .progress-bar-creative {
            height: 8px;
            background: #e8e8e8;
            border-radius: 10px;
            overflow: hidden;
        }
        
        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #667eea, #764ba2, #f093fb);
            border-radius: 10px;
            transition: width 0.5s ease;
            animation: progressGlow 2s infinite;
        }
        
        @keyframes progressGlow {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.8; }
        }
        
        /* Tags Display */
        .tags-display {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            padding: 10px;
            background: #fafafa;
            border: 2px solid #e8e8e8;
            border-radius: 14px;
            min-height: 50px;
        }
        
        .tag-creative {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 8px 14px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
            animation: tagPop 0.3s ease;
        }
        
        @keyframes tagPop {
            from { transform: scale(0); opacity: 0; }
            to { transform: scale(1); opacity: 1; }
        }
        
        .tag-remove {
            cursor: pointer;
            opacity: 0.8;
            transition: opacity 0.2s;
        }
        
        .tag-remove:hover {
            opacity: 1;
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            .main-container {
                padding: 20px 15px 40px;
            }
            
            .glass-card {
                border-radius: 20px;
            }
            
            .card-header-creative {
                padding: 30px 20px;
            }
            
            .card-header-creative h1 {
                font-size: 1.5rem;
            }
            
            .card-body-creative {
                padding: 25px 20px;
            }
            
            .step-indicator {
                flex-wrap: wrap;
            }
            
            .step {
                padding: 10px 16px;
            }
            
            .step-label {
                display: none;
            }
            
            .btn-group {
                flex-direction: column;
            }
            
            .btn-group button {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="creative-bg">
    <!-- Floating Shapes -->
    <div class="floating-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
        <div class="shape shape-4"></div>
    </div>
    
    <!-- Main Container -->
    <div class="main-container">
        <div class="glass-card">
            <!-- Card Header -->
            <div class="card-header-creative">
                <div class="header-content">
                    <div class="header-icon-wrapper">
                        <i class="fas fa-book-medical"></i>
                    </div>
                    <h1>Créer une Ressource</h1>
                    <p>Partagez votre savoir avec la communauté BacLab</p>
                </div>
            </div>
            
            <!-- Card Body -->
            <div class="card-body-creative">
                {{ form_start(form, { attr: { class: 'resource-form', id: 'resourceForm' } }) }}
                
                <!-- Progress Bar -->
                <div class="progress-wrapper">
                    <div class="progress-bar-creative">
                        <div class="progress-fill" id="progressFill" style="width: 33%;"></div>
                    </div>
                </div>
                
                <!-- Step Indicators -->
                <div class="step-indicator">
                    <div class="step active" data-step="1">
                        <span class="step-number">1</span>
                        <span class="step-label">Informations</span>
                    </div>
                    <div class="step" data-step="2">
                        <span class="step-number">2</span>
                        <span class="step-label">Fichier</span>
                    </div>
                    <div class="step" data-step="3">
                        <span class="step-number">3</span>
                        <span class="step-label">Finaliser</span>
                    </div>
                </div>
                
                <!-- Step 1: Informations -->
                <div class="form-step active" data-step="1">
                    <div class="section-card">
                        <div class="section-card-header">
                            <div class="section-card-icon info">
                                <i class="fas fa-info-circle"></i>
                            </div>
                            <div class="section-card-title">
                                <h3>Informations de Base</h3>
                                <p>Décrivez votre ressource</p>
                            </div>
                        </div>
                        
                        <div class="input-wrapper">
                            <label>
                                <i class="fas fa-heading"></i>
                                Titre de la ressource
                                <span class="help-badge" data-bs-toggle="tooltip" data-bs-placement="top" title="Un titre clair et descriptif">?</span>
                            </label>
                            <div class="input-floating">
                                {{ form_widget(form.titre, { attr: { placeholder: 'Ex: Cours Complet de Mathématiques - Terminale' }}) }}
                                <i class="fas fa-heading input-icon"></i>
                            </div>
                            {{ form_errors(form.titre) }}
                        </div>
                        
                        <div class="input-wrapper">
                            <label>
                                <i class="fas fa-align-left"></i>
                                Description détaillée
                            </label>
                            <div class="input-floating">
                                {{ form_widget(form.description, { attr: { placeholder: 'Décrivez le contenu, les objectifs d\'apprentissage...' }}) }}
                                <i class="fas fa-paragraph input-icon"></i>
                            </div>
                            {{ form_errors(form.description) }}
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="input-wrapper">
                                    <label>
                                        <i class="fas fa-user-edit"></i>
                                        Auteur
                                    </label>
                                    <div class="input-floating">
                                        {{ form_widget(form.auteur, { attr: { placeholder: 'Votre nom' }}) }}
                                        <i class="fas fa-user input-icon"></i>
                                    </div>
                                    {{ form_errors(form.auteur) }}
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="input-wrapper">
                                    <label>
                                        <i class="fas fa-tags"></i>
                                        Tags
                                        <span class="help-badge" data-bs-toggle="tooltip" data-bs-placement="top" title="Mots-clés séparés par des virgules">?</span>
                                    </label>
                                    <div class="input-floating">
