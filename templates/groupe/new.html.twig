{% extends 'base.html.twig' %}

{% block title %}Créer un groupe - BacLab{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        .form-card {
            border: none;
            border-radius: 20px;
            overflow: hidden;
        }
        
        .form-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
        }
        
        .form-body {
            padding: 30px;
        }
        
        .form-control {
            border-radius: 10px;
            padding: 12px 15px;
            border: 1px solid #e9ecef;
        }
        
        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }
        
        .form-label {
            font-weight: 600;
            color: #495057;
            margin-bottom: 8px;
        }
        
        .btn-submit {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 12px 30px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn-submit:hover {
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
        }
        
        .btn-cancel {
            background: transparent;
            color: #6c757d;
            border: 2px solid #6c757d;
            border-radius: 25px;
            padding: 10px 28px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn-cancel:hover {
            background: #6c757d;
            color: white;
        }
        
        .toggle-switch {
            position: relative;
            width: 60px;
            height: 30px;
        }
        
        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }
        
        .toggle-slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: 0.4s;
            border-radius: 30px;
        }
        
        .toggle-slider:before {
            position: absolute;
            content: "";
            height: 22px;
            width: 22px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: 0.4s;
            border-radius: 50%;
        }
        
        input:checked + .toggle-slider {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        input:checked + .toggle-slider:before {
            transform: translateX(30px);
        }
        
        .help-text {
            font-size: 0.85rem;
            color: #6c757d;
            margin-top: 5px;
        }
    </style>
{% endblock %}

{% block body %}
<section class="d-flex align-items-center" style="padding-top: 100px; min-height: calc(100vh - 100px); background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card form-card shadow-lg">
                    <div class="form-header text-center">
                        <i class="fas fa-users fa-3x mb-3"></i>
                        <h3 class="font-weight-bold mb-2">Créer un groupe de révision</h3>
                        <p class="mb-0 opacity-75">Créez un espace d'échange pour vos révisions</p>
                    </div>
                    <div class="form-body">
                        
                        {# Flash messages #}
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show mb-4" role="alert">
                                    {{ message }}
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            {% endfor %}
                        {% endfor %}
                        
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                            
                            <div class="mb-4">
                                <label for="nom" class="form-label">{{ form_label(form.nom) }}</label>
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Révision Mathématiques Bac 2024'}}) }}
                                <p class="help-text">Donnez un nom clair à votre groupe</p>
                                {{ form_errors(form.nom) }}
                            </div>
                            
                            <div class="mb-4">
                                <label for="description" class="form-label">{{ form_label(form.description) }}</label>
                                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Décrivez les objectifs et le sujet de ce groupe...', 'rows': 4}}) }}
                                <p class="help-text">Expliquez ce que les membres pourront faire dans ce groupe</p>
                                {{ form_errors(form.description) }}
                            </div>
                            
                            <div class="mb-4">
                                <label class="form-label">Type de groupe</label>
                                <div class="d-flex align-items-center">
                                    <label class="toggle-switch mr-3">
                                        {{ form_widget(form.isPublic) }}
                                        <span class="toggle-slider"></span>
                                    </label>
                                    <div>
                                        <span id="groupTypeLabel" class="font-weight-medium">Groupe public</span>
                                        <p class="help-text mb-0" id="groupTypeHelp">Tout le monde peut rejoindre et voir les messages</p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mb-4">
                                <label for="filiere" class="form-label">Filière (optionnel)</label>
                                {{ form_widget(form.filiere, {'attr': {'class': 'form-control'}}) }}
                                <p class="help-text">Associez ce groupe à une filière pour faciliter les recherches</p>
                            </div>
                            
                            <div class="d-flex justify-content-between mt-5">
                                <a href="{{ path('groupe_index') }}" class="btn btn-cancel">
                                    <i class="fas fa-times mr-2"></i>
                                    Annuler
                                </a>
                                <button type="submit" class="btn btn-submit">
                                    <i class="fas fa-check mr-2"></i>
                                    Créer le groupe
                                </button>
                            </div>
                            
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block js %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const toggle = document.querySelector('#{{ form.isPublic.vars.id }}');
        const label = document.getElementById('groupTypeLabel');
        const help = document.getElementById('groupTypeHelp');
        
        if (toggle) {
            toggle.addEventListener('change', function() {
                if (this.checked) {
                    label.textContent = 'Groupe public';
                    help.textContent = 'Tout le monde peut rejoindre et voir les messages';
                } else {
                    label.textContent = 'Groupe privé';
                    help.textContent = 'Seuls les membres invités peuvent accéder au groupe';
                }
            });
        }
    });
</script>
{% endblock %}
