{% extends 'base.html.twig' %}

{% block title %}{{ groupe.nom }} - BacLab{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        .profile-card {
            border: none;
            border-radius: 20px;
            overflow: hidden;
        }
        
        .profile-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
        }
        
        .profile-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            font-weight: bold;
        }
        
        .member-card {
            border: none;
            border-radius: 15px;
            transition: all 0.3s ease;
        }
        
        .member-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        }
        
        .role-badge {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
        }
        
        .role-badge.admin {
            background: rgba(237, 137, 54, 0.2);
            color: #ed8936;
        }
        
        .role-badge.animateur {
            background: rgba(102, 126, 234, 0.2);
            color: #667eea;
        }
        
        .role-badge.membre {
            background: rgba(72, 187, 120, 0.2);
            color: #48bb78;
        }
        
        .action-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 10px 25px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .action-btn:hover {
            color: white;
            transform: scale(1.05);
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
        }
        
        .action-btn-outline {
            background: transparent;
            border: 2px solid #667eea;
            color: #667eea;
            border-radius: 25px;
            padding: 8px 23px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .action-btn-outline:hover {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-color: transparent;
        }
        
        .stat-box {
            text-align: center;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 15px;
        }
        
        .stat-box .number {
            font-size: 2rem;
            font-weight: bold;
            color: #667eea;
        }
        
        .stat-box .label {
            font-size: 0.85rem;
            color: #6c757d;
        }
    </style>
{% endblock %}

{% block body %}
<section class="d-flex align-items-center" style="padding-top: 100px; min-height: calc(100vh - 100px); background: #f8f9fa;">
    <div class="container">
        <div class="row">
            <!-- Group Info -->
            <div class="col-lg-4 mb-4">
                <div class="card profile-card shadow-lg">
                    <div class="profile-header text-center">
                        <div class="profile-avatar mx-auto mb-3">
                            {{ groupe.nom|first|upper }}
                        </div>
                        <h3 class="font-weight-bold mb-2">{{ groupe.nom }}</h3>
                        {% if groupe.isPublic %}
                            <span class="badge badge-light rounded-pill">
                                <i class="fas fa-globe mr-1"></i>Groupe public
                            </span>
                        {% else %}
                            <span class="badge badge-warning rounded-pill">
                                <i class="fas fa-lock mr-1"></i>Groupe privé
                            </span>
                        {% endif %}
                    </div>
                    <div class="card-body">
                        <h5 class="font-weight-bold mb-3">Description</h5>
                        <p class="text-muted mb-4">
                            {% if groupe.description %}
                                {{ groupe.description }}
                            {% else %}
                                Aucune description disponible.
                            {% endif %}
                        </p>
                        
                        {% if groupe.filiere %}
                        <h5 class="font-weight-bold mb-3">Filière</h5>
                        <p class="mb-4">
                            <span class="badge badge-primary rounded-pill" style="background: linear-gradient(135deg, #667eea, #764ba2);">
                                {{ groupe.filiere.nom }}
                            </span>
                        </p>
                        {% endif %}
                        
                        <div class="row mb-4">
                            <div class="col-6">
                                <div class="stat-box">
                                    <div class="number">{{ groupe.membres.count }}</div>
                                    <div class="label">Membres</div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="stat-box">
                                    <div class="number">{{ groupe.messages.count }}</div>
                                    <div class="label">Messages</div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('chat_groupe', {'id': groupe.id}) }}" class="action-btn">
                                <i class="fas fa-comments mr-2"></i>
                                Ouvrir le chat
                            </a>
                            {% if app.user and app.user.id == groupe.createur.id %}
                                <a href="#" class="action-btn-outline">
                                    <i class="fas fa-cog mr-1"></i>
                                    Paramètres
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Members List -->
            <div class="col-lg-8">
                <div class="card shadow-lg" style="border-radius: 20px;">
                    <div class="card-header bg-white py-4 border-bottom">
                        <h4 class="font-weight-bold mb-0">
                            <i class="fas fa-users mr-2" style="color: #667eea;"></i>
                            Membres du groupe
                        </h4>
                    </div>
                    <div class="card-body">
                        {% if membres is empty %}
                            <div class="text-center py-5">
                                <i class="fas fa-user-slash fa-3x mb-3" style="color: #dee2e6;"></i>
                                <p class="text-muted">Aucun membre dans ce groupe</p>
                            </div>
                        {% else %}
                            <div class="row">
                                {% for membre in membres %}
                                    {% set roleClass = 'membre' %}
                                    {% if membre.roleMembre == 'ADMIN' %}
                                        {% set roleClass = 'admin' %}
                                    {% elseif membre.roleMembre == 'ANIMATEUR' %}
                                        {% set roleClass = 'animateur' %}
                                    {% endif %}
                                    
                                    <div class="col-md-6 mb-3">
                                        <div class="card member-card shadow-sm">
                                            <div class="card-body d-flex align-items-center">
                                                <div class="avatar-wrapper position-relative mr-3">
                                                    <div class="avatar rounded-lg d-flex align-items-center justify-content-center text-white font-weight-bold"
                                                         style="width: 50px; height: 50px; background: linear-gradient(135deg, #667eea, #764ba2);">
                                                        {% if membre.utilisateur.profil and membre.utilisateur.profil.nom %}
                                                            {{ membre.utilisateur.profil.nom|first|upper }}
                                                        {% else %}
                                                            {{ membre.utilisateur.email|first|upper }}
                                                        {% endif %}
                                                    </div>
                                                    {% if membre.roleMembre == 'ADMIN' %}
                                                    <span class="position-absolute" style="bottom: -5px; right: -5px; width: 20px; height: 20px; background: #ed8936; border: 2px solid #fff; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                                        <i class="fas fa-crown text-white" style="font-size: 0.6rem;"></i>
                                                    </span>
                                                    {% endif %}
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-1 font-weight-bold">
                                                        {% if membre.utilisateur.profil and membre.utilisateur.profil.nom %}
                                                            {{ membre.utilisateur.profil.nom }}
                                                        {% else %}
                                                            {{ membre.utilisateur.email|split('@')[0] }}
                                                        {% endif %}
                                                    </h6>
                                                    <span class="role-badge {{ roleClass }}">{{ membre.roleMembre }}</span>
                                                </div>
                                                <div class="text-right">
                                                    <small class="text-muted d-block">
                                                        {{ membre.dateJoint|date('d/m/Y') }}
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
