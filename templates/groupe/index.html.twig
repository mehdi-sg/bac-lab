{% extends 'base.html.twig' %}

{% block title %}Groupes de Révision - BacLab{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        .groupe-card {
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            border: none;
            border-radius: 20px;
            overflow: hidden;
            position: relative;
        }
        
        .groupe-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #667eea, #764ba2, #f093fb);
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }
        
        .groupe-card:hover::before {
            transform: scaleX(1);
        }
        
        .groupe-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(102, 126, 234, 0.25) !important;
        }
        
        .groupe-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 25px 20px;
            position: relative;
            overflow: hidden;
        }
        
        .groupe-header::after {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        }
        
        .groupe-avatar {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.25);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8rem;
            font-weight: bold;
            position: relative;
            z-index: 1;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        
        .membre-badge {
            background: rgba(255, 255, 255, 0.2);
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 0.85rem;
            backdrop-filter: blur(5px);
        }
        
        .stat-item {
            text-align: center;
            padding: 20px 15px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
            transition: all 0.3s ease;
        }
        
        .stat-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.15);
        }
        
        .stat-item .number {
            font-size: 2rem;
            font-weight: bold;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .stat-item .label {
            font-size: 0.85rem;
            color: #6c757d;
            margin-top: 5px;
        }
        
        .filiere-badge {
            display: inline-flex;
            align-items: center;
            padding: 5px 14px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }
        
        .filiere-badge.math {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.15), rgba(102, 126, 234, 0.05));
            color: #667eea;
        }
        
        .filiere-badge.science {
            background: linear-gradient(135deg, rgba(72, 187, 120, 0.15), rgba(72, 187, 120, 0.05));
            color: #48bb78;
        }
        
        .filiere-badge.physique {
            background: linear-gradient(135deg, rgba(236, 201, 75, 0.15), rgba(236, 201, 75, 0.05));
            color: #d69e2e;
        }
        
        .filiere-badge.chimie {
            background: linear-gradient(135deg, rgba(237, 137, 54, 0.15), rgba(237, 137, 54, 0.05));
            color: #ed8936;
        }
        
        .filiere-badge.technologie {
            background: linear-gradient(135deg, rgba(159, 122, 234, 0.15), rgba(159, 122, 234, 0.05));
            color: #9f7aea;
        }
        
        .filiere-badge.default {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.15), rgba(102, 126, 234, 0.05));
            color: #667eea;
        }
        
        .action-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 10px 25px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .action-btn:hover {
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        }
        
        .action-btn-outline {
            background: transparent;
            border: 2px solid #667eea;
            color: #667eea;
            border-radius: 25px;
            padding: 8px 23px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .action-btn-outline:hover {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border-color: transparent;
            transform: translateY(-2px);
        }
        
        .public-badge {
            background: linear-gradient(135deg, rgba(72, 187, 120, 0.2), rgba(72, 187, 120, 0.1));
            color: #48bb78;
            padding: 4px 12px;
            border-radius: 15px;
            font-size: 0.75rem;
            font-weight: 600;
        }
        
        .private-badge {
            background: linear-gradient(135deg, rgba(237, 137, 54, 0.2), rgba(237, 137, 54, 0.1));
            color: #ed8936;
            padding: 4px 12px;
            border-radius: 15px;
            font-size: 0.75rem;
            font-weight: 600;
        }
        
        .featured-badge {
            background: rgba(255, 255, 255, 0.2);
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.75rem;
        }
        
        .category-pill {
            display: inline-block;
            padding: 8px 20px;
            border-radius: 25px;
            font-size: 0.85rem;
            font-weight: 500;
            margin-right: 8px;
            margin-bottom: 8px;
            transition: all 0.3s ease;
            cursor: pointer;
            text-decoration: none;
        }
        
        .category-pill:hover, .category-pill.active {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        
        .search-wrapper {
            position: relative;
            width: 200px;
        }
        
        .search-input {
            width: 100%;
            padding: 10px 40px 10px 20px;
            border: 2px solid #e9ecef;
            border-radius: 25px;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            background: #f8f9fa;
        }
        
        .search-input:focus {
            outline: none;
            border-color: #667eea;
            background: white;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }
        
        .search-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #667eea;
            cursor: pointer;
        }
        
        .filter-btn {
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
            margin-right: 6px;
            margin-bottom: 6px;
            transition: all 0.3s ease;
            cursor: pointer;
            border: 2px solid transparent;
        }
        
        .filter-btn:hover, .filter-btn.active {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
    </style>
{% endblock %}

{% block body %}
<!-- Hero Section -->
<section class="hero-section d-flex align-items-center" style="padding-top: 100px; min-height: 50vh; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center text-white">
                <h1 class="display-4 font-weight-bold mb-4">Groupes de Révision</h1>
                <p class="lead mb-5">Rejoignez des groupes d'étude, discutez avec d'autres étudiants et préparez-vous ensemble au Baccalauréat</p>
                <a href="{{ path('groupe_new') }}" class="btn btn-light btn-lg rounded-pill px-5">
                    <i class="fas fa-plus-circle mr-2"></i>
                    Créer un groupe
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-4" style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%); margin-top: -30px; position: relative; z-index: 10;">
    <div class="container">
        <div class="row stats-section">
            <div class="col-md-3 col-6 mb-3">
                <div class="stat-item">
                    <div class="number" data-count="{{ stats.total }}">0</div>
                    <div class="label">Total Groupes</div>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-3">
                <div class="stat-item">
                    <div class="number" data-count="{{ stats.public }}">0</div>
                    <div class="label">Publics</div>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-3">
                <div class="stat-item">
                    <div class="number" data-count="{{ stats.private }}">0</div>
                    <div class="label">Privés</div>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-3">
                <div class="stat-item">
                    <div class="number" data-count="{{ stats.myGroups }}">0</div>
                    <div class="label">Mes Groupes</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Groupes Section -->
<section class="py-5" style="background: #f8f9fa;">
    <div class="container">
        <!-- Featured Groups -->
        {% if featuredGroups is not empty %}
        <div class="row mb-5">
            <div class="col-12">
                <h4 class="font-weight-bold text-dark mb-4">
                    <i class="fas fa-fire mr-2" style="color: #ed8936;"></i>
                    Groupes Populaires
                </h4>
                <div class="row">
                    {% for groupe in featuredGroups|slice(0, 3) %}
                    <div class="col-lg-4 col-md-6 mb-3">
                        <div class="featured-card shadow-sm h-100">
                            <div class="d-flex align-items-center mb-3">
                                <div class="groupe-avatar mr-3">{{ groupe.nom|first|upper }}</div>
                                <div>
                                    <h5 class="font-weight-bold mb-0">{{ groupe.nom }}</h5>
                                    <span class="featured-badge">
                                        <i class="fas fa-users mr-1"></i>
                                        {{ groupe.membres.count }} membres
                                    </span>
                                </div>
                            </div>
                            <p class="mb-3" style="opacity: 0.9; font-size: 0.9rem;">
                                {{ groupe.description[:100] }}{% if groupe.description|length > 100 %}...{% endif %}
                            </p>
                            <a href="{{ path('groupe_show', {'id': groupe.id}) }}" class="btn btn-light rounded-pill px-4">
                                <i class="fas fa-arrow-right mr-2"></i>
                                Découvrir
                            </a>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% endif %}
        
        <!-- Categories -->
        <div class="row mb-4">
            <div class="col-12">
                <h4 class="font-weight-bold text-dark mb-3">
                    <i class="fas fa-book mr-2" style="color: #667eea;"></i>
                    Par Matière
                </h4>
                <div class="d-flex flex-wrap">
                    <a href="{{ path('groupe_index') }}" class="category-pill {{ currentFilter == 'all' ? 'active' : '' }}" style="background: linear-gradient(135deg, #667eea, #764ba2); color: white;">
                        <i class="fas fa-th-large mr-1"></i> Tous
                    </a>
                    {% for filiere in filieres %}
                    <span class="category-pill" style="background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1)); color: #667eea;">
                        <i class="fas fa-book-open mr-1"></i> {{ filiere }}
                    </span>
                    {% endfor %}
                </div>
            </div>
        </div>
        
        <!-- Filters -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center flex-wrap">
                    <div>
                        <h2 class="font-weight-bold text-dark mb-0">Tous les groupes</h2>
                        <p class="text-muted mb-0">Découvrez et rejoignez des groupes de révision</p>
                    </div>
                    <div class="d-flex align-items-center mt-3 mt-md-0">
                        <div class="search-wrapper">
                            <input type="text" class="search-input" placeholder="Rechercher..." id="searchGroupe">
                            <i class="fas fa-search search-icon"></i>
                        </div>
                        <a href="{{ path('groupe_index', {'filter': 'all'}) }}" class="filter-btn {{ currentFilter == 'all' ? 'active' : '' }}" style="background: {{ currentFilter == 'all' ? 'linear-gradient(135deg, #667eea, #764ba2); color: white;' : '#e9ecef; color: #667eea;' }}">
                            <i class="fas fa-list mr-1"></i> Tous
                        </a>
                        <a href="{{ path('groupe_index', {'filter': 'public'}) }}" class="filter-btn {{ currentFilter == 'public' ? 'active' : '' }}" style="background: {{ currentFilter == 'public' ? 'linear-gradient(135deg, #667eea, #764ba2); color: white;' : '#e9ecef; color: #667eea;' }}">
                            <i class="fas fa-globe mr-1"></i> Publics
                        </a>
                        <a href="{{ path('groupe_index', {'filter': 'private'}) }}" class="filter-btn {{ currentFilter == 'private' ? 'active' : '' }}" style="background: {{ currentFilter == 'private' ? 'linear-gradient(135deg, #667eea, #764ba2); color: white;' : '#e9ecef; color: #667eea;' }}">
                            <i class="fas fa-lock mr-1"></i> Privés
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row" id="groupesContainer">
            {% if groupes is empty %}
                <div class="col-12 text-center py-5">
                    <i class="fas fa-users fa-4x mb-4" style="color: #dee2e6;"></i>
                    <h4 class="text-muted mb-3">Aucun groupe disponible</h4>
                    <p class="text-muted mb-4">Soyez le premier à créer un groupe de révision !</p>
                    <a href="{{ path('groupe_new') }}" class="btn" style="background: linear-gradient(135deg, #667eea, #764ba2); color: white;">
                        <i class="fas fa-plus mr-2"></i>
                        Créer un groupe
                    </a>
                </div>
            {% else %}
                {% for groupe in groupes %}
                    {% set filiereClass = 'default' %}
                    {% if groupe.filiere %}
                        {% set filiereLower = groupe.filiere.nom|lower %}
                        {% if 'math' in filiereLower %}
                            {% set filiereClass = 'math' %}
                        {% elseif 'science' in filiereLower %}
                            {% set filiereClass = 'science' %}
                        {% elseif 'physique' in filiereLower %}
                            {% set filiereClass = 'physique' %}
                        {% elseif 'chimie' in filiereLower %}
                            {% set filiereClass = 'chimie' %}
                        {% elseif 'technologie' in filiereLower %}
                            {% set filiereClass = 'technologie' %}
                        {% endif %}
                    {% endif %}
                    
                    <div class="col-lg-4 col-md-6 mb-4 groupe-item" data-nom="{{ groupe.nom|lower }}">
                        <div class="card groupe-card shadow-sm h-100">
                            <div class="groupe-header text-center">
                                <div class="groupe-avatar mx-auto mb-3">
                                    {{ groupe.nom|first|upper }}
                                </div>
                                <h4 class="font-weight-bold mb-2">{{ groupe.nom }}</h4>
                                {% if groupe.filiere %}
                                    <span class="filiere-badge {{ filiereClass }}">{{ groupe.filiere.nom }}</span>
                                {% else %}
                                    <span class="{{ groupe.isPublic ? 'public-badge' : 'private-badge' }}">
                                        {% if groupe.isPublic %}
                                            <i class="fas fa-globe mr-1"></i>Public
                                        {% else %}
                                            <i class="fas fa-lock mr-1"></i>Privé
                                        {% endif %}
                                    </span>
                                {% endif %}
                            </div>
                            <div class="card-body">
                                <p class="card-text text-muted mb-3">
                                    {% if groupe.description %}
                                        {{ groupe.description[:100] }}{% if groupe.description|length > 100 %}...{% endif %}
                                    {% else %}
                                        Groupe de révision
                                    {% endif %}
                                </p>
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="membre-badge">
                                        <i class="fas fa-users mr-1"></i>
                                        {{ groupe.membres.count }} membre{% if groupe.membres.count != 1 %}s{% endif %}
                                    </span>
                                    <span class="{{ groupe.isPublic ? 'public-badge' : 'private-badge' }}">
                                        {% if groupe.isPublic %}
                                            <i class="fas fa-globe mr-1"></i>Public
                                        {% else %}
                                            <i class="fas fa-lock mr-1"></i>Privé
                                        {% endif %}
                                    </span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    {% if app.user and groupe.createur.id == app.user.id %}
                                        <a href="{{ path('chat_groupe', {'id': groupe.id}) }}" class="action-btn">
                                            <i class="fas fa-crown mr-2"></i>
                                            Chat
                                        </a>
                                    {% elseif userMemberships[groupe.id] is defined %}
                                        {% set membre = userMemberships[groupe.id] %}
                                        {% if membre.isAccepted() or membre.roleMembre == 'ADMIN' or membre.statut is null %}
                                            <a href="{{ path('chat_groupe', {'id': groupe.id}) }}" class="action-btn">
                                                <i class="fas fa-comments mr-2"></i>
                                                Chat
                                            </a>
                                        {% elseif membre.isPending() %}
                                            <button class="action-btn" disabled style="opacity: 0.7; cursor: not-allowed;">
                                                <i class="fas fa-clock mr-2"></i>
                                                En attente
                                            </button>
                                        {% elseif membre.statut == 'REJECTED' %}
                                            <button class="action-btn join-groupe-btn" data-groupe-id="{{ groupe.id }}">
                                                <i class="fas fa-redo mr-2"></i>
                                                {% if groupe.isPublic %}Rejoindre{% else %}Demander{% endif %}
                                            </button>
                                        {% else %}
                                            <button class="action-btn join-groupe-btn" data-groupe-id="{{ groupe.id }}">
                                                <i class="fas fa-user-plus mr-2"></i>
                                                {% if groupe.isPublic %}Rejoindre{% else %}Demander{% endif %}
                                            </button>
                                        {% endif %}
                                    {% else %}
                                        <button class="action-btn join-groupe-btn" data-groupe-id="{{ groupe.id }}">
                                            <i class="fas fa-user-plus mr-2"></i>
                                            {% if groupe.isPublic %}Rejoindre{% else %}Demander{% endif %}
                                        </button>
                                    {% endif %}
                                    <a href="{{ path('groupe_show', {'id': groupe.id}) }}" class="action-btn-outline">
                                        <i class="fas fa-info-circle mr-1"></i>
                                        Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</section>
{% endblock %}

{% block js %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Animated counter for stats
        const animateCounters = () => {
            document.querySelectorAll('.stat-item .number').forEach(counter => {
                const target = parseInt(counter.getAttribute('data-count'));
                const duration = 1500;
                const step = target / (duration / 16);
                let current = 0;
                
                const updateCounter = () => {
                    current += step;
                    if (current < target) {
                        counter.textContent = Math.floor(current);
                        requestAnimationFrame(updateCounter);
                    } else {
                        counter.textContent = target;
                    }
                };
                
                updateCounter();
            });
        };
        
        // Trigger animation when stats section is visible
        const statsSection = document.querySelector('.stats-section');
        if (statsSection) {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        animateCounters();
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.3 });
            
            observer.observe(statsSection);
        }
        
        const searchInput = document.getElementById('searchGroupe');
        const groupItems = document.querySelectorAll('.groupe-item');
        
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                groupItems.forEach(function(item) {
                    const nom = item.dataset.nom;
                    if (nom.includes(searchTerm)) {
                        item.style.display = 'block';
                    } else {
                        item.style.display = 'none';
                    }
                });
            });
        }
        
        // Handle join button clicks
        document.querySelectorAll('.join-groupe-btn').forEach(function(btn) {
            btn.addEventListener('click', function() {
                const groupeId = this.dataset.groupeId;
                
                fetch('/groupes/' + groupeId + '/rejoindre', {
                    method: 'POST'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert(data.message || 'Une erreur est survenue');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Une erreur est survenue');
                });
            });
        });
    });
</script>
{% endblock %}
