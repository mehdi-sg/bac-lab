{% extends 'base.html.twig' %}

{% block title %}Groupes de Révision - BacLab{% endblock %}

{% block css %}
    {{ parent() }}
    {# Enhanced Groups CSS - Conflict-free #}
    <link rel="stylesheet" href="{{ asset('front/css/groupes-enhanced.css') }}">
{% endblock %}

{% block body %}
<div class="groupes-page">
    <!-- Hero Section -->
    <section class="groupes-hero">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto groupes-hero-content">
                    <h1 class="groupes-hero-title">Groupes de Révision</h1>
                    <p class="groupes-hero-subtitle">Rejoignez des groupes d'étude passionnés, partagez vos connaissances et préparez-vous ensemble au succès du Baccalauréat</p>
                    <a href="{{ path('groupe_new') }}" class="groupes-hero-btn">
                        <i class="fas fa-plus-circle"></i>
                        Créer un groupe
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <section class="groupes-main">
        <div class="container">
            <!-- Featured Groups -->
            {% if featuredGroups is not empty %}
            <div class="row mb-5">
                <div class="col-12">
                    <h2 class="groupes-section-title">
                        <i class="fas fa-fire"></i>
                        Groupes Populaires
                    </h2>
                    <div class="row">
                        {% for groupe in featuredGroups|slice(0, 3) %}
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="groupes-featured-card">
                                <div class="groupes-featured-icon">
                                    <i class="fas fa-users"></i>
                                </div>
                                <h5 class="font-weight-bold mb-3">{{ groupe.nom }}</h5>
                                <p class="text-muted mb-4" style="line-height: 1.6;">
                                    {{ groupe.description[:80] }}{% if groupe.description|length > 80 %}...{% endif %}
                                </p>
                                <div class="d-flex align-items-center justify-content-between">
                                    <span class="groupes-membre-badge">
                                        <i class="fas fa-users"></i>
                                        {{ groupe.membres.count }}
                                    </span>
                                    <a href="{{ path('groupe_show', {'id': groupe.id}) }}" class="groupes-btn-outline">
                                        <i class="fas fa-arrow-right"></i>
                                        Découvrir
                                    </a>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endif %}

            <!-- Filters & Search -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="groupes-filters">
                        <div class="d-flex justify-content-between align-items-center flex-wrap">
                            <div>
                                <h3 class="font-weight-bold text-dark mb-1">Tous les groupes</h3>
                                <p class="text-muted mb-0">Découvrez et rejoignez des communautés d'apprentissage</p>
                            </div>
                            <div class="d-flex align-items-center mt-3 mt-md-0 flex-wrap">
                                <div class="groupes-search-wrapper mr-3 mb-2 mb-md-0">
                                    <input type="text" class="groupes-search-input" placeholder="Rechercher un groupe..." id="searchGroupe">
                                    <i class="fas fa-search groupes-search-icon"></i>
                                </div>
                                <div class="d-flex flex-wrap">
                                    <a href="{{ path('groupe_index', {'filter': 'all'}) }}" class="groupes-filter-btn {{ currentFilter == 'all' ? 'active' : '' }}">
                                        <i class="fas fa-list"></i> Tous
                                    </a>
                                    <a href="{{ path('groupe_index', {'filter': 'public'}) }}" class="groupes-filter-btn {{ currentFilter == 'public' ? 'active' : '' }}">
                                        <i class="fas fa-globe"></i> Publics
                                    </a>
                                    <a href="{{ path('groupe_index', {'filter': 'private'}) }}" class="groupes-filter-btn {{ currentFilter == 'private' ? 'active' : '' }}">
                                        <i class="fas fa-lock"></i> Privés
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Groups Grid -->
            <div class="row" id="groupesContainer">
                {% if groupes is empty %}
                    <div class="col-12">
                        <div class="groupes-empty">
                            <div class="groupes-empty-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <h4 class="groupes-empty-title">Aucun groupe disponible</h4>
                            <p class="groupes-empty-subtitle">Soyez le premier à créer un groupe de révision !</p>
                            <a href="{{ path('groupe_new') }}" class="groupes-btn-primary">
                                <i class="fas fa-plus"></i>
                                Créer un groupe
                            </a>
                        </div>
                    </div>
                {% else %}
                    {% for groupe in groupes %}
                        {% set filiereClass = 'default' %}
                        {% if groupe.filiere %}
                            {% set filiereLower = groupe.filiere.nom|lower %}
                            {% if 'math' in filiereLower %}
                                {% set filiereClass = 'math' %}
                            {% elseif 'science' in filiereLower %}
                                {% set filiereClass = 'science' %}
                            {% elseif 'physique' in filiereLower %}
                                {% set filiereClass = 'physique' %}
                            {% elseif 'chimie' in filiereLower %}
                                {% set filiereClass = 'chimie' %}
                            {% elseif 'technologie' in filiereLower %}
                                {% set filiereClass = 'technologie' %}
                            {% endif %}
                        {% endif %}
                        
                        <div class="col-lg-4 col-md-6 mb-4 groupe-item" data-nom="{{ groupe.nom|lower }}">
                            <div class="card groupes-card shadow-sm h-100">
                                <div class="groupes-card-header text-center">
                                    <div class="groupes-card-avatar">
                                        {{ groupe.nom|first|upper }}
                                    </div>
                                    <h4 class="groupes-card-title">{{ groupe.nom }}</h4>
                                    {% if groupe.filiere %}
                                        <span class="groupes-badge groupes-badge-{{ filiereClass }}">{{ groupe.filiere.nom }}</span>
                                    {% else %}
                                        <span class="groupes-badge groupes-badge-public">
                                            <i class="fas fa-globe"></i>
                                            {% if groupe.isPublic %}Public{% else %}Privé{% endif %}
                                        </span>
                                    {% endif %}
                                </div>
                                <div class="groupes-card-body">
                                    <p class="groupes-card-description">
                                        {% if groupe.description %}
                                            {{ groupe.description[:100] }}{% if groupe.description|length > 100 %}...{% endif %}
                                        {% else %}
                                            Groupe de révision pour les étudiants du Baccalauréat
                                        {% endif %}
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center mb-4">
                                        <span class="groupes-membre-badge">
                                            <i class="fas fa-users"></i>
                                            {{ groupe.membres.count }} membre{% if groupe.membres.count != 1 %}s{% endif %}
                                        </span>
                                        {% if not groupe.filiere %}
                                        <span class="groupes-badge groupes-badge-public" style="font-size: 0.75rem;">
                                            <i class="fas fa-{% if groupe.isPublic %}globe{% else %}lock{% endif %}"></i>
                                            {% if groupe.isPublic %}Public{% else %}Privé{% endif %}
                                        </span>
                                        {% endif %}
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        {% if app.user and isAdmin %}
                                            <a href="{{ path('chat_groupe', {'id': groupe.id}) }}" class="groupes-btn-primary" style="background: linear-gradient(135deg, #ed8936, #dd6b20) !important;">
                                                <i class="fas fa-shield-alt"></i>
                                                Admin
                                            </a>
                                        {% elseif app.user and groupe.createur.id == app.user.id %}
                                            <a href="{{ path('chat_groupe', {'id': groupe.id}) }}" class="groupes-btn-primary">
                                                <i class="fas fa-crown"></i>
                                                Chat
                                            </a>
                                        {% elseif userMemberships[groupe.id] is defined %}
                                            {% set membre = userMemberships[groupe.id] %}
                                            {% if membre.isAccepted() or membre.roleMembre == 'ADMIN' or membre.statut is null %}
                                                <a href="{{ path('chat_groupe', {'id': groupe.id}) }}" class="groupes-btn-primary">
                                                    <i class="fas fa-comments"></i>
                                                    Chat
                                                </a>
                                            {% elseif membre.isPending() %}
                                                <button class="groupes-btn-primary" disabled>
                                                    <i class="fas fa-clock"></i>
                                                    En attente
                                                </button>
                                            {% elseif membre.statut == 'REJECTED' %}
                                                <button class="groupes-btn-primary join-groupe-btn" data-groupe-id="{{ groupe.id }}">
                                                    <i class="fas fa-redo"></i>
                                                    {% if groupe.isPublic %}Rejoindre{% else %}Demander{% endif %}
                                                </button>
                                            {% else %}
                                                <button class="groupes-btn-primary join-groupe-btn" data-groupe-id="{{ groupe.id }}">
                                                    <i class="fas fa-user-plus"></i>
                                                    {% if groupe.isPublic %}Rejoindre{% else %}Demander{% endif %}
                                                </button>
                                            {% endif %}
                                        {% else %}
                                            <button class="groupes-btn-primary join-groupe-btn" data-groupe-id="{{ groupe.id }}">
                                                <i class="fas fa-user-plus"></i>
                                                {% if groupe.isPublic %}Rejoindre{% else %}Demander{% endif %}
                                            </button>
                                        {% endif %}
                                        <a href="{{ path('groupe_show', {'id': groupe.id}) }}" class="groupes-btn-outline">
                                            <i class="fas fa-info-circle"></i>
                                            Détails
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </section>
</div>
{% endblock %}

{% block js %}
{{ parent() }}
<script>
    // Enhanced search functionality
    const searchInput = document.getElementById('searchGroupe');
    const groupItems = document.querySelectorAll('.groupe-item');
    
    if (searchInput) {
        searchInput.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase().trim();
            let visibleCount = 0;
            
            groupItems.forEach(function(item) {
                const nom = item.dataset.nom;
                const description = item.querySelector('.groupes-card-description')?.textContent.toLowerCase() || '';
                const filiere = item.querySelector('.groupes-badge')?.textContent.toLowerCase() || '';
                
                if (nom.includes(searchTerm) || description.includes(searchTerm) || filiere.includes(searchTerm)) {
                    item.style.display = 'block';
                    item.style.animation = 'fadeInUp 0.3s ease-out';
                    visibleCount++;
                } else {
                    item.style.display = 'none';
                }
            });
            
            // Show/hide empty state
            const container = document.getElementById('groupesContainer');
            const existingEmpty = container.querySelector('.search-empty-state');
            
            if (visibleCount === 0 && searchTerm !== '') {
                if (!existingEmpty) {
                    const emptyState = document.createElement('div');
                    emptyState.className = 'col-12 search-empty-state';
                    emptyState.innerHTML = `
                        <div class="groupes-empty">
                            <div class="groupes-empty-icon">
                                <i class="fas fa-search"></i>
                            </div>
                            <h4 class="groupes-empty-title">Aucun résultat trouvé</h4>
                            <p class="groupes-empty-subtitle">Essayez avec d'autres mots-clés ou créez un nouveau groupe</p>
                            <a href="{{ path('groupe_new') }}" class="groupes-btn-primary">
                                <i class="fas fa-plus"></i>
                                Créer un groupe
                            </a>
                        </div>
                    `;
                    container.appendChild(emptyState);
                }
            } else if (existingEmpty) {
                existingEmpty.remove();
            }
        });
        
        // Clear search on escape
        searchInput.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                this.value = '';
                this.dispatchEvent(new Event('input'));
                this.blur();
            }
        });
    }
    
    // Enhanced join button functionality
    document.querySelectorAll('.join-groupe-btn').forEach(function(btn) {
        btn.addEventListener('click', function() {
            const groupeId = this.dataset.groupeId;
            const originalText = this.innerHTML;
            
            // Show loading state
            this.disabled = true;
            this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Traitement...';
            
            fetch('/groupes/' + groupeId + '/rejoindre', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Show success animation
                    this.innerHTML = '<i class="fas fa-check"></i> Succès !';
                    this.style.background = 'linear-gradient(135deg, #48bb78, #38a169)';
                    
                    // Reload after short delay
                    setTimeout(() => {
                        location.reload();
                    }, 1500);
                } else {
                    // Show error
                    this.innerHTML = '<i class="fas fa-exclamation-triangle"></i> Erreur';
                    this.style.background = 'linear-gradient(135deg, #f56565, #e53e3e)';
                    
                    // Show error message
                    const errorMsg = document.createElement('div');
                    errorMsg.className = 'alert alert-danger mt-2';
                    errorMsg.style.fontSize = '0.8rem';
                    errorMsg.textContent = data.message || 'Une erreur est survenue';
                    this.parentElement.appendChild(errorMsg);
                    
                    // Reset button after delay
                    setTimeout(() => {
                        this.disabled = false;
                        this.innerHTML = originalText;
                        this.style.background = '';
                        errorMsg.remove();
                    }, 3000);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                
                // Show network error
                this.innerHTML = '<i class="fas fa-wifi"></i> Connexion';
                this.style.background = 'linear-gradient(135deg, #f56565, #e53e3e)';
                
                // Reset button after delay
                setTimeout(() => {
                    this.disabled = false;
                    this.innerHTML = originalText;
                    this.style.background = '';
                }, 3000);
            });
        });
    });
    
    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            const href = this.getAttribute('href');
            if (href !== '#' && document.querySelector(href)) {
                e.preventDefault();
                document.querySelector(href).scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });
    
    // Intersection Observer for animations
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0)';
            }
        });
    }, observerOptions);
    
    // Observe group cards for scroll animations
    document.querySelectorAll('.groupes-card, .groupes-featured-card').forEach(card => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(30px)';
        card.style.transition = 'all 0.6s ease';
        observer.observe(card);
    });
    
    // Keyboard navigation for filter buttons
    document.querySelectorAll('.groupes-filter-btn').forEach(btn => {
        btn.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' || e.key === ' ') {
                e.preventDefault();
                this.click();
            }
        });
    });
    
    // Auto-focus search on '/' key
    document.addEventListener('keydown', function(e) {
        if (e.key === '/' && !e.ctrlKey && !e.metaKey && !e.altKey) {
            const activeElement = document.activeElement;
            if (activeElement.tagName !== 'INPUT' && activeElement.tagName !== 'TEXTAREA') {
                e.preventDefault();
                searchInput?.focus();
            }
        }
    });
    
    console.log('✅ Groupes page enhanced JavaScript loaded');
</script>
{% endblock %}
