{% block js %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const contentDiv = document.getElementById('ficheContent');
            if (contentDiv) {
                const rawContent = contentDiv.textContent;
                contentDiv.innerHTML = parseFicheContent(rawContent);
            }
            
            function parseFicheContent(content) {
                // Escape HTML to prevent XSS
                const escapeHtml = (text) => {
                    const div = document.createElement('div');
                    div.textContent = text;
                    return div.innerHTML;
                };
                
                const lines = content.split('\n');
                let html = '';
                let inBlock = false;
                let blockType = '';
                let blockContent = '';
                
                for (let line of lines) {
                    line = line.trim();
                    
                    // Section headers
                    if (line.startsWith('== ')) {
                        if (inBlock) {
                            html += closeBlock(blockType, blockContent);
                            inBlock = false;
                        }
                        html += `<div class="fiche-section-header"><span class="section-icon">üß©</span>${escapeHtml(line.substring(3))}</div>`;
                        continue;
                    }
                    
                    // Important/Definition blocks
                    if (line.startsWith('!! ')) {
                        if (inBlock && blockType !== 'definition') {
                            html += closeBlock(blockType, blockContent);
                            blockContent = '';
                        }
                        if (!inBlock || blockType !== 'definition') {
                            inBlock = true;
                            blockType = 'definition';
                        }
                        blockContent += escapeHtml(line.substring(3)) + '<br>';
                        continue;
                    }
                    
                    // Example blocks
                    if (line.startsWith('>> ')) {
                        if (inBlock && blockType !== 'example') {
                            html += closeBlock(blockType, blockContent);
                            blockContent = '';
                        }
                        if (!inBlock || blockType !== 'example') {
                            inBlock = true;
                            blockType = 'example';
                        }
                        blockContent += escapeHtml(line.substring(3)) + '<br>';
                        continue;
                    }
                    
                    // Tip blocks
                    if (line.startsWith('!!+ ')) {
                        if (inBlock && blockType !== 'tip') {
                            html += closeBlock(blockType, blockContent);
                            blockContent = '';
                        }
                        if (!inBlock || blockType !== 'tip') {
                            inBlock = true;
                            blockType = 'tip';
                        }
                        blockContent += escapeHtml(line.substring(4)) + '<br>';
                        continue;
                    }
                    
                    // Trap blocks
                    if (line.startsWith('!!- ')) {
                        if (inBlock && blockType !== 'trap') {
                            html += closeBlock(blockType, blockContent);
                            blockContent = '';
                        }
                        if (!inBlock || blockType !== 'trap') {
                            inBlock = true;
                            blockType = 'trap';
                        }
                        blockContent += escapeHtml(line.substring(4)) + '<br>';
                        continue;
                    }
                    
                    // Question blocks
                    if (line.startsWith('?? ')) {
                        if (inBlock && blockType !== 'question') {
                            html += closeBlock(blockType, blockContent);
                            blockContent = '';
                        }
                        if (!inBlock || blockType !== 'question') {
                            inBlock = true;
                            blockType = 'question';
                        }
                        blockContent += escapeHtml(line.substring(3)) + '<br>';
                        continue;
                    }
                    
                    // List items
                    if (line.startsWith('- ')) {
                        if (inBlock) {
                            html += closeBlock(blockType, blockContent);
                            inBlock = false;
                        }
                        html += `<div class="fiche-list-item"><span class="list-arrow">‚Üí</span>${processInline(escapeHtml(line.substring(2)))}</div>`;
                        continue;
                    }
                    
                    // Empty line - close block
                    if (line === '') {
                        if (inBlock) {
                            html += closeBlock(blockType, blockContent);
                            inBlock = false;
                            blockContent = '';
                        }
                        html += '<br>';
                        continue;
                    }
                    
                    // Regular paragraph
                    if (inBlock) {
                        blockContent += escapeHtml(line) + '<br>';
                    } else {
                        html += `<p class="fiche-paragraph">${processInline(escapeHtml(line))}</p>`;
                    }
                }
                
                // Close any remaining block
                if (inBlock) {
                    html += closeBlock(blockType, blockContent);
                }
                
                return html;
            }
            
            function closeBlock(type, content) {
                const icons = {
                    'definition': '‚ö†Ô∏è',
                    'example': 'üìò',
                    'tip': 'üí°',
                    'trap': 'üö´',
                    'question': '‚ùì'
                };
                
                const titles = {
                    'definition': 'Important',
                    'example': 'Exemple',
                    'tip': 'Astuce',
                    'trap': 'Pi√®ge',
                    'question': 'Question'
                };
                
                return `<div class="fiche-block fiche-${type}">
                    <div class="block-header">
                        <span class="block-icon">${icons[type]}</span>
                        <span class="block-title">${titles[type]}</span>
                    </div>
                    <div class="block-content">${processInline(content)}</div>
                </div>`;
            }
            
            function processInline(text) {
                // Bold: **text**
                text = text.replace(/\*\*([^*]+)\*\*/g, '<strong>$1</strong>');
                
                // Italic: _text_
                text = text.replace(/_([^_]+)_/g, '<em>$1</em>');
                
                // Code: `text`
                text = text.replace(/`([^`]+)`/g, '<code class="inline-code">$1</code>');
                
                // Keywords: [[text]]
                text = text.replace(/\[\[([^\]]+)\]\]/g, '<mark class="keyword">$1</mark>');
                
                // Arrow: ->
                text = text.replace(/->/g, '<span class="arrow">‚Üí</span>');
                
                return text;
            }
        });
    </script>
