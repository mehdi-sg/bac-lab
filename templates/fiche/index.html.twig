{% extends 'fiche/_layout.html.twig' %}

{% block title %}Fiches de révision - BAC Lab{% endblock %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('front/css/fiche.css') }}">
{% endblock %}

{% block body_class %}fiche-index-page{% endblock %}

{% block fiche_title %}{% endblock %}

{% block fiche_subtitle %}{% endblock %}

{% block fiche_header_actions %}{% endblock %}

{% block fiche_content %}
<!-- Floating Background Shapes -->
<div class="fiche-shapes">
    <div class="fiche-shape fiche-shape-1"></div>
    <div class="fiche-shape fiche-shape-2"></div>
    <div class="fiche-shape fiche-shape-3"></div>
    <div class="fiche-shape fiche-shape-4"></div>
</div>


<!-- Hero Section -->
<div class="fiche-hero">
    <h1 class="fiche-hero-title">
        <i class="fa fa-graduation-cap mr-3"></i>
        Fiches de révision
    </h1>
    <p class="fiche-hero-subtitle">
        Explorez, créez et partagez vos fiches de révision pour réussir votre BAC !
    </p>
</div>

<!-- Filter Section -->
<div class="fiche-filter-section">
    <div class="fiche-filter-tabs">
        <a href="{{ path('fiche_index', {'filter': 'all', 'filiere': current_filiere}) }}" 
           class="fiche-filter-tab {{ current_filter == 'all' ? 'active' : '' }}">
            <i class="fa fa-th-large"></i>
            Toutes
        </a>
        <a href="{{ path('fiche_index', {'filter': 'own', 'filiere': current_filiere}) }}" 
           class="fiche-filter-tab {{ current_filter == 'own' ? 'active' : '' }}">
            <i class="fa fa-user"></i>
            Mes fiches
        </a>
        <a href="{{ path('fiche_index', {'filter': 'favorite', 'filiere': current_filiere}) }}" 
           class="fiche-filter-tab {{ current_filter == 'favorite' ? 'active' : '' }}">
            <i class="fa fa-heart"></i>
            Favorites
        </a>
    </div>
    
    <div class="fiche-filter-filiere">
        <form method="get" action="{{ path('fiche_index') }}" class="fiche-filter-form">
            <input type="hidden" name="filter" value="{{ current_filter }}">
            <div class="fiche-filter-select-wrapper">
                <i class="fa fa-graduation-cap"></i>
                <select name="filiere" class="fiche-filter-select" onchange="this.form.submit()">
                    <option value="">Toutes les filières</option>
                    {% for filiere in filieres %}
                        <option value="{{ filiere.id }}" {{ current_filiere == filiere.id ? 'selected' : '' }}>
                            {{ filiere.nom }} ({{ filiere.niveau }})
                        </option>
                    {% endfor %}
                </select>
            </div>
        </form>
    </div>
</div>

<!-- Create Button -->
<div class="fiche-create-btn-wrapper">
    <a href="{{ path('fiche_new') }}" class="fiche-btn-neon">
        <i class="fa fa-plus-circle"></i>
        Créer une nouvelle fiche
    </a>
</div>



{% if fiches is empty %}
    <!-- Empty State -->
    <div class="fiche-empty">
        <div class="fiche-empty-icon">
            <i class="fa fa-book"></i>
        </div>
        <h2 class="fiche-empty-title">Aucune fiche disponible</h2>
        <p class="fiche-empty-text">
            Commencez votre parcours de révision en créant votre première fiche !
        </p>
        <a href="{{ path('fiche_new') }}" class="fiche-btn-neon">
            <i class="fa fa-plus"></i>
            Créer ma première fiche
        </a>

    </div>
{% else %}
    <!-- Cards Grid -->
    <div class="fiche-grid">
        {% for fiche in fiches %}
            {% set isModerateur = fiche.id in user_moderateur_fiches %}
            <div class="fiche-ultimate-card">
                <!-- Card Header -->
                <div class="fiche-card-header">
                    <div class="fiche-card-icon">
                        <i class="fa fa-file-text-o"></i>
                    </div>
                    <h3 class="fiche-card-title">{{ fiche.title }}</h3>
                    {% if isModerateur %}
                        <span class="fiche-card-badge">
                            <i class="fa fa-check-circle mr-1"></i>
                            Modérateur
                        </span>
                    {% endif %}
                    {% if fiche.id in user_favorite_fiches %}
                        <span class="fiche-card-badge fiche-card-badge-favorite">
                            <i class="fa fa-heart mr-1"></i>
                            Favori
                        </span>
                    {% endif %}

                </div>
                
                <!-- Card Body -->
                <div class="fiche-card-body">
                    <p class="fiche-card-excerpt">
                        {{ fiche.content|slice(0, 180) }}{% if fiche.content|length > 180 %}...{% endif %}
                    </p>
                    
                    <!-- Meta -->
                    <div class="fiche-card-meta">
                        <div class="fiche-card-date">
                            <i class="fa fa-calendar-alt"></i>
                            {{ fiche.createdAt|date('d/m/Y') }}
                        </div>
                        <div class="fiche-card-stats">
                            {% if fiche.filiere %}
                                <span class="fiche-card-stat fiche-card-filiere">
                                    <i class="fa fa-graduation-cap"></i>
                                    {{ fiche.filiere.nom }} ({{ fiche.filiere.niveau }})
                                </span>
                            {% endif %}
                            <span class="fiche-card-stat">
                                <i class="fa fa-align-left"></i>
                                {{ fiche.content|length }} car.
                            </span>
                        </div>
                    </div>

                </div>
                
                <!-- Card Actions -->
                <div class="fiche-card-actions">
                    <a href="{{ path('fiche_show', {'id': fiche.id}) }}" class="fiche-btn fiche-btn-primary">
                        <i class="fa fa-eye"></i>
                        Voir
                    </a>
                    
                    {% if app.user %}
                        {% set isFav = fiche.id in user_favorite_fiches %}
                        <form action="{{ path('fiche_toggle_favorite', {'id': fiche.id}) }}" method="post" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('toggle_favorite_' ~ fiche.id) }}">
                            <button type="submit" class="fiche-btn {{ isFav ? 'fiche-btn-favorite-active' : 'fiche-btn-favorite' }}">
                                <i class="fa {{ isFav ? 'fa-heart' : 'fa-heart-o' }}"></i>
                            </button>
                        </form>
                    {% endif %}
                    
                    {% if isModerateur %}
                        <a href="{{ path('fiche_edit', {'id': fiche.id}) }}" class="fiche-btn fiche-btn-secondary">
                            <i class="fa fa-edit"></i>
                        </a>
                        <button type="button" class="fiche-btn fiche-btn-danger" data-toggle="modal" data-target="#deleteModal{{ fiche.id }}">
                            <i class="fa fa-trash"></i>
                        </button>
                    {% endif %}
                </div>

            </div>

            <!-- Delete Modal -->
            {% if isModerateur %}
                <div class="fiche-modal-overlay" id="deleteModal{{ fiche.id }}" tabindex="-1" role="dialog">
                    <div class="fiche-modal">
                        <div class="fiche-modal-header">
                            <h5 class="mb-0">
                                <i class="fa fa-exclamation-triangle mr-2"></i>
                                Confirmer la suppression
                            </h5>
                        </div>
                        <div class="fiche-modal-body">
                            <i class="fa fa-trash fa-4x text-danger opacity-50 mb-3 d-block"></i>
                            <p class="mb-1">Êtes-vous sûr de vouloir supprimer cette fiche ?</p>
                            <h6 class="text-primary">{{ fiche.title }}</h6>
                            <p class="text-danger mt-3 mb-0">
                                <small><i class="fa fa-exclamation-circle mr-1"></i>Cette action est irréversible.</small>
                            </p>
                        </div>
                        <div class="fiche-modal-footer">
                            <button type="button" class="fiche-btn fiche-btn-secondary" data-dismiss="modal">
                                <i class="fa fa-times mr-1"></i>Annuler
                            </button>
                            <form action="{{ path('fiche_delete', {'id': fiche.id}) }}" method="post" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete_fiche_' ~ fiche.id) }}">
                                <button type="submit" class="fiche-btn fiche-btn-danger">
                                    <i class="fa fa-trash mr-1"></i>Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endif %}

{# Pagination #}
{% if total_pages > 1 %}
<nav aria-label="Pagination des fiches" class="fiche-pagination mt-5">
    <ul class="fiche-pagination-list justify-content-center">
        {# Previous page #}
        {% if current_page > 1 %}
            <li class="fiche-pagination-item">
                <a href="{{ path('fiche_index', {'filter': current_filter, 'filiere': current_filiere, 'page': current_page - 1}) }}" class="fiche-pagination-link">
                    <i class="fa fa-chevron-left"></i>
                </a>
            </li>
        {% else %}
            <li class="fiche-pagination-item disabled">
                <span class="fiche-pagination-link"><i class="fa fa-chevron-left"></i></span>
            </li>
        {% endif %}

        {# Page numbers #}
        {% for i in 1..total_pages %}
            {% if i == 1 or i == total_pages or (i >= current_page - 2 and i <= current_page + 2) %}
                <li class="fiche-pagination-item {{ i == current_page ? 'active' : '' }}">
                    <a href="{{ path('fiche_index', {'filter': current_filter, 'filiere': current_filiere, 'page': i}) }}" class="fiche-pagination-link">
                        {{ i }}
                    </a>
                </li>
            {% elseif i == current_page - 3 or i == current_page + 3 %}
                <li class="fiche-pagination-item disabled">
                    <span class="fiche-pagination-link">...</span>
                </li>
            {% endif %}
        {% endfor %}

        {# Next page #}
        {% if current_page < total_pages %}
            <li class="fiche-pagination-item">
                <a href="{{ path('fiche_index', {'filter': current_filter, 'filiere': current_filiere, 'page': current_page + 1}) }}" class="fiche-pagination-link">
                    <i class="fa fa-chevron-right"></i>
                </a>
            </li>
        {% else %}
            <li class="fiche-pagination-item disabled">
                <span class="fiche-pagination-link"><i class="fa fa-chevron-right"></i></span>
            </li>
        {% endif %}
    </ul>
</nav>
{% endif %}

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Modal handling
    const modals = document.querySelectorAll('.fiche-modal-overlay');
    modals.forEach(modal => {
        const closeBtn = modal.querySelector('[data-dismiss="modal"]');
        closeBtn.addEventListener('click', () => {
            modal.classList.remove('active');
        });
        modal.addEventListener('click', (e) => {
            if (e.target === modal) {
                modal.classList.remove('active');
            }
        });
    });
    
    // Open modal on button click
    const deleteButtons = document.querySelectorAll('[data-target^="#deleteModal"]');
    deleteButtons.forEach(btn => {
        btn.addEventListener('click', () => {
            const target = btn.getAttribute('data-target');
            document.querySelector(target).classList.add('active');
        });
    });
});
</script>

{% endblock %}
