    {% block inline_css %}
        <style>
            /* Notification bell */
            .notification-bell {
                position: relative;
                display: flex;
                align-items: center;
                justify-content: center;
                width: 36px;
                height: 36px;
                border-radius: 50%;
                color: white;
                transition: all 0.3s ease;
                margin-right: 5px;
            }
            .notification-bell:hover { background: rgba(255, 255, 255, 0.15); }
            .notification-bell svg { width: 18px; height: 18px; }

            .badge-pulse {
                position: absolute;
                top: 0;
                right: 0;
                min-width: 16px;
                height: 16px;
                padding: 0 4px;
                font-size: 0.65rem;
                font-weight: 700;
                line-height: 16px;
                text-align: center;
                color: white;
                background: #667eea;
                border-radius: 8px;
                display: none;
            }

            /* ✅ FIX: missing bracket in your original code */
            .badge-pulse:not(:empty) {
                display: inline-flex;
            }
        </style>
    {% endblock %}
</head>

<body>
<div id="preloader-active">
    <div class="preloader d-flex align-items-center justify-content-center">
        <div class="preloader-inner position-relative">
            <div class="preloader-circle"></div>
            <div class="preloader-img pere-text">
                <img src="{{ asset('front/img/logo/loder.png') }}" alt="Chargement...">
            </div>
        </div>
    </div>
</div>

<header>
