                                                    <li><a href="#">Calcul du Score</a></li>
                                                    <li><a href="#">Guide des Filieres</a></li>
                                                </ul>
                                            </li>

                                            <li>
                                                <a href="#">Communaute</a>
                                                <ul class="submenu">
                                                    <li><a href="{{ path('groupe_index') }}"><i class="fas fa-users mr-2"></i>Groupes de revision</a></li>
                                                    <li><a href="{{ path('chat_index') }}"><i class="fas fa-comments mr-2"></i>Chat en direct</a></li>
                                                </ul>
                                            </li>

                                            {% if is_granted('ROLE_USER') %}
