    <style>
        /* Footer optimisé */
        .footer-area {
            padding: 60px 0 30px !important;
        }

        .footer-bottom-area {
            padding: 20px 0 !important;
        }

        .single-footer-caption {
            margin-bottom: 30px !important;
        }

        .footer-tittle h4 {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 20px;
            color: #fff;
        }

        .footer-tittle ul {
            padding: 0;
            margin: 0;
            list-style: none;
        }

        .footer-tittle ul li {
            margin-bottom: 10px;
        }

        .footer-tittle ul li a {
            font-size: 14px;
            color: rgba(255, 255, 255, 0.8);
            transition: all 0.3s;
            display: inline-block;
        }

        .footer-tittle ul li a:hover {
            color: #fff;
            padding-left: 5px;
        }

        .footer-contact li {
            display: flex;
            align-items: flex-start;
            gap: 10px;
            margin-bottom: 12px;
            font-size: 14px;
            color: rgba(255, 255, 255, 0.8);
        }

        .footer-contact li i {
            color: #667eea;
            margin-top: 3px;
        }

        .footer-social a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 36px;
            height: 36px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            margin-right: 10px;
            color: #fff;
            transition: all 0.3s;
        }

        .footer-social a:hover {
            background: #667eea;
            transform: translateY(-3px);
        }

        .footer-pera p {
            font-size: 14px;
            line-height: 1.6;
            color: rgba(255, 255, 255, 0.8);
        }

        .footer-copy-right p {
            margin: 0;
            font-size: 14px;
            color: rgba(255, 255, 255, 0.7);
        }

        .footer-menu ul {
            display: flex;
            gap: 20px;
            margin: 0;
            padding: 0;
            list-style: none;
            justify-content: end;
        }

        .footer-menu ul li a {
            font-size: 14px;
            color: rgba(255, 255, 255, 0.7);
            transition: color 0.3s;
        }

        .footer-menu ul li a:hover {
            color: #fff;
        }

        @media (max-width: 768px) {
            .footer-area {
                padding: 40px 0 20px !important;
            }
            
            .footer-menu ul {
                justify-content: center !important;
                flex-direction: column;
                gap: 10px;
            }
            
            .footer-bottom-area .row > div {
                margin-bottom: 15px;
            }
        }
    </style>
{% endblock %}
</head>

<body>
    <div id="preloader-active">
        <div class="preloader d-flex align-items-center justify-content-center">
            <div class="preloader-inner position-relative">
