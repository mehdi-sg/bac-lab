{% block js %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Get DOM elements
        const messageInput = document.getElementById('messageInput');
        const chatForm = document.getElementById('chatForm');
        const chatMessages = document.getElementById('chatMessages');
        const joinGroupBtn = document.getElementById('joinGroupBtn');
        const leaveGroupBtn = document.getElementById('leaveGroupBtn');
        const cancelRequestBtn = document.getElementById('cancelRequestBtn');
        const replyIndicator = document.getElementById('replyIndicator');
        const replyingToText = document.getElementById('replyingToText');
        const cancelReplyBtn = document.getElementById('cancelReplyBtn');
        const parentMessageId = document.getElementById('parentMessageId');
        const requestsBtn = document.getElementById('requestsBtn');
        
        let replyingToMessageId = null;
        let selectedFile = null;
        let selectedFicheId = null;
        
        // File upload handlers
        const attachBtn = document.getElementById('attachBtn');
        const attachDropdown = document.getElementById('attachDropdown');
        const fileInput = document.getElementById('fileInput');
        const uploadFileBtn = document.getElementById('uploadFileBtn');
        const shareFicheBtn = document.getElementById('shareFicheBtn');
        const selectedFileBadge = document.getElementById('selectedFileBadge');
        const selectedFileName = document.getElementById('selectedFileName');
        const cancelFileBtn = document.getElementById('cancelFileBtn');
        const ficheIndicator = document.getElementById('ficheIndicator');
        const selectedFicheTitle = document.getElementById('selectedFicheTitle');
        const cancelFicheBtn = document.getElementById('cancelFicheBtn');
        
        if (attachBtn && attachDropdown) {
            attachBtn.addEventListener('click', function(e) {
                e.stopPropagation();
                attachDropdown.classList.toggle('show');
            });
            
            document.addEventListener('click', function() {
                attachDropdown.classList.remove('show');
            });
            
            attachDropdown.addEventListener('click', function(e) {
                e.stopPropagation();
            });
        }
        
        if (uploadFileBtn && fileInput) {
            uploadFileBtn.addEventListener('click', function() {
                fileInput.click();
                attachDropdown.classList.remove('show');
            });
            
            fileInput.addEventListener('change', function() {
                if (this.files && this.files[0]) {
                    selectedFile = this.files[0];
                    selectedFileName.textContent = selectedFile.name;
                    selectedFileBadge.classList.remove('d-none');
                    attachDropdown.classList.remove('show');
                    messageInput.placeholder = 'Fichier selectionne...';
                }
            });
        }
        
        if (cancelFileBtn && selectedFileBadge) {
            cancelFileBtn.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                selectedFile = null;
                fileInput.value = '';
                selectedFileBadge.classList.add('d-none');
                messageInput.placeholder = 'Ecrivez votre message...';
            });
        }
        
        if (shareFicheBtn) {
            shareFicheBtn.addEventListener('click', function() {
                attachDropdown.classList.remove('show');
                $('#fichesModal').modal('show');
                
                fetch('{{ path('chat_fiches') }}')
                .then(response => response.json())
                .then(data => {
                    const fichesList = document.getElementById('fichesList');
                    if (data.success && data.fiches.length > 0) {
                        let html = '';
                        data.fiches.forEach(function(fiche) {
                            html += `
                                <div class="d-flex align-items-center justify-content-between p-3 mb-2 rounded cursor-pointer" style="background: rgba(255, 255, 255, 0.05); cursor: pointer;" onclick="selectFiche(${fiche.id}, '${escapeHtml(fiche.title)}')">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-file-alt mr-3" style="color: #667eea;"></i>
                                        <div>
                                            <p class="mb-0 text-white fw-medium" style="font-size: 0.9rem;">${escapeHtml(fiche.title)}</p>
                                            <small class="text-white-50" style="font-size: 0.75rem;">${escapeHtml(fiche.content)}</small>
                                        </div>
                                    </div>
                                    <i class="fas fa-chevron-right text-white-50" style="font-size: 0.8rem;"></i>
                                </div>
                            `;
                        });
                        fichesList.innerHTML = html;
                    } else {
                        fichesList.innerHTML = '<div class="text-center py-4"><p class="text-white-50 mb-0">Aucune fiche disponible</p></div>';
                    }
                })
                .catch(error => {
                    console.error('Error loading fiches:', error);
                    document.getElementById('fichesList').innerHTML = '<div class="text-center py-4"><p class="text-white-50 mb-0">Erreur lors du chargement des fiches</p></div>';
                });
            });
        }
        
        if (cancelFicheBtn && ficheIndicator) {
            cancelFicheBtn.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                selectedFicheId = null;
                document.getElementById('ficheId').value = '';
                ficheIndicator.classList.add('d-none');
                messageInput.placeholder = 'Ecrivez votre message...';
            });
        }
        
        window.selectFiche = function(ficheId, ficheTitle) {
            selectedFicheId = ficheId;
            document.getElementById('ficheId').value = ficheId;
            selectedFicheTitle.textContent = ficheTitle;
            ficheIndicator.classList.remove('d-none');
            $('#fichesModal').modal('hide');
            messageInput.placeholder = 'Fiche selectionnee...';
        };
        
        function getCurrentTime() {
            const now = new Date();
            return now.toLocaleTimeString('fr-FR', { hour: '2-digit', minute: '2-digit' });
        }
        
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
        
        function scrollToBottom() {
            setTimeout(() => {
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }, 100);
            setTimeout(() => {
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }, 300);
        }
        
        // Handle form submission
        if (chatForm) {
            chatForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const message = messageInput.value.trim();
                
                if (!message && !selectedFile && !selectedFicheId) {
                    messageInput.classList.add('is-invalid');
                    messageInput.focus();
                    return;
                }
                
                messageInput.classList.remove('is-invalid');
                
                // Add temporary message to UI
                let messageContent = `<p class="mb-0 text-white" style="font-size: 0.95rem; line-height: 1.5;">${escapeHtml(message)}</p>`;
                
                // Add file badge if file is selected (clickable for download)
                if (selectedFile) {
                    messageContent += `<div class="mt-2 p-2 rounded" style="background: rgba(255, 255, 255, 0.1);"><i class="fas fa-file mr-2"></i>${escapeHtml(selectedFile.name)} <small class="text-white-50">(sera joint au message)</small></div>`;
                }
                
                // Add fiche badge if fiche is selected
                if (selectedFicheId) {
                    messageContent += `<a href="/fiche/${selectedFicheId}" target="_blank" class="d-block mt-2 p-2 rounded text-decoration-none" style="background: rgba(72, 187, 120, 0.2);" onclick="event.stopPropagation();"><i class="fas fa-file-alt mr-2"></i>Fiche partagee</a>`;
                }
                
                const messageHtml = `
                    <div class="message d-flex mb-3 justify-content-end new-message">
                        <div class="message-content">
                            <div class="message-bubble sent p-3" style="max-width: 70%;">
                                ${messageContent}
                            </div>
                            <div class="d-flex align-items-center justify-content-end mt-1 mr-1">
                                <small class="text-white-50" style="font-size: 0.65rem;">${getCurrentTime()}</small>
                                <i class="fas fa-clock ml-1 text-white" style="font-size: 0.65rem;"></i>
                            </div>
                        </div>
                    </div>
                `;
                chatMessages.insertAdjacentHTML('beforeend', messageHtml);
                scrollToBottom();
                
                // Create form data
                const formData = new FormData();
                formData.append('contenu', message);
                
                if (selectedFile) {
                    formData.append('file', selectedFile);
                }
                
                if (selectedFicheId) {
                    formData.append('ficheId', selectedFicheId);
                }
                
                // Clear input immediately
                messageInput.value = '';
                messageInput.placeholder = 'Ecrivez votre message...';
                
                if (selectedFile) {
                    selectedFile = null;
                    fileInput.value = '';
                    selectedFileBadge.classList.add('d-none');
                }
                
                if (selectedFicheId) {
                    selectedFicheId = null;
                    document.getElementById('ficheId').value = '';
                    ficheIndicator.classList.add('d-none');
                }
                
                // Send to server
                fetch(chatForm.action, {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        const lastIcon = document.querySelector('.new-message:last-child .fa-clock');
                        if (lastIcon) {
                            lastIcon.className = 'fas fa-check ml-1 text-white';
                        }
                    } else {
                        alert(data.error || 'Une erreur est survenue');
                        const tempMsg = document.querySelector('.new-message:last-child');
                        if (tempMsg) {
                            tempMsg.remove();
                        }
                    }
                })
                .catch(error => {
                    console.error('Erreur:', error);
                    alert('Une erreur est survenue lors de l\'envoi du message');
                    const tempMsg = document.querySelector('.new-message:last-child');
                    if (tempMsg) {
                        tempMsg.remove();
                    }
                });
            });
        }
        
        // Handle Enter key in message input
        if (messageInput) {
            messageInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault();
                    if (chatForm) {
                        chatForm.dispatchEvent(new Event('submit'));
                    }
                }
            });
        }
        
        // Join group handler
        if (joinGroupBtn) {
            joinGroupBtn.addEventListener('click', function() {
                fetch('{{ path('groupe_join', {'id': groupe.id}) }}', {
                    method: 'POST'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert(data.message || 'Une erreur est survenue');
                    }
                })
                .catch(error => console.error('Error:', error));
            });
        }
        
        // Leave group handler
        if (leaveGroupBtn) {
            leaveGroupBtn.addEventListener('click', function(e) {
                e.preventDefault();
                if (confirm('Etes-vous sur de vouloir quitter ce groupe ?')) {
                    fetch('{{ path('groupe_leave', {'id': groupe.id}) }}', {
                        method: 'POST'
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            window.location.href = '{{ path('app_home') }}';
                        } else {
                            alert(data.message || 'Une erreur est survenue');
                        }
                    })
                    .catch(error => console.error('Error:', error));
                }
            });
        }
        
        // Cancel request handler
        if (cancelRequestBtn) {
            cancelRequestBtn.addEventListener('click', function() {
                if (confirm('Etes-vous sur de vouloir annuler votre demande ?')) {
                    fetch('{{ path('groupe_leave', {'id': groupe.id}) }}', {
                        method: 'POST'
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            location.reload();
                        } else {
                            alert(data.message || 'Une erreur est survenue');
                        }
                    })
                    .catch(error => console.error('Error:', error));
                }
            });
        }
        
        // Requests modal handler
        if (requestsBtn) {
            requestsBtn.addEventListener('click', function(e) {
                e.preventDefault();
                $('#requestsModal').modal('show');
                
                fetch('{{ path('groupe_requests', {'id': groupe.id}) }}')
                .then(response => response.json())
                .then(data => {
                    const requestsList = document.getElementById('requestsList');
                    
                    if (data.success && data.requests.length > 0) {
                        let html = '';
                        data.requests.forEach(function(request) {
                            html += `
                                <div class="d-flex align-items-center justify-content-between p-3 mb-2 rounded" style="background: rgba(255, 255, 255, 0.05);">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar rounded-xl d-flex align-items-center justify-content-center text-white mr-3" style="width: 40px; height: 40px; background: linear-gradient(135deg, #667eea, #764ba2);">
                                            ${request.utilisateur.nom.charAt(0).toUpperCase()}
                                        </div>
                                        <div>
                                            <p class="mb-0 text-white" style="font-size: 0.9rem;">${escapeHtml(request.utilisateur.nom)}</p>
                                            <small class="text-white-50">${request.date}</small>
                                        </div>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <button class="btn btn-sm accept-request-btn" data-membre-id="${request.id}" style="background: rgba(72, 187, 120, 0.2); color: #48bb78; border: 1px solid rgba(72, 187, 120, 0.5);">
                                            <i class="fas fa-check"></i>
                                        </button>
                                        <button class="btn btn-sm reject-request-btn" data-membre-id="${request.id}" style="background: rgba(239, 68, 68, 0.2); color: #ef4444; border: 1px solid rgba(239, 68, 68, 0.5);">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                            `;
                        });
                        requestsList.innerHTML = html;
                        
                        // Add event listeners for accept/reject buttons
                        document.querySelectorAll('.accept-request-btn').forEach(function(btn) {
                            btn.addEventListener('click', function() {
                                const membreId = this.dataset.membreId;
                                fetch('/groupes/' + {{ groupe.id }} + '/accepter/' + membreId, {
                                    method: 'POST'
                                })
                                .then(response => response.json())
                                .then(data => {
                                    if (data.success) {
                                        // Remove this request from the list visually
                                        this.closest('.d-flex.align-items-center.justify-content-between').remove();
                                        
                                        // Update badge count
                                        const badge = requestsBtn.querySelector('.badge');
                                        if (badge) {
                                            let count = parseInt(badge.textContent) - 1;
                                            if (count <= 0) {
                                                badge.remove();
                                                requestsBtn.querySelector('.fa-user-clock').classList.remove('text-warning');
                                            } else {
                                                badge.textContent = count;
                                            }
                                        }
                                        
                                        // If no more requests, show empty message
                                        const requestsList = document.getElementById('requestsList');
                                        if (requestsList.children.length === 0) {
                                            requestsList.innerHTML = '<p class="text-white-50 text-center py-4">Aucune demande en attente</p>';
                                        }
                                    } else {
                                        alert(data.error || 'Une erreur est survenue');
                                    }
                                });
                            });
                        });
                        
                        document.querySelectorAll('.reject-request-btn').forEach(function(btn) {
                            btn.addEventListener('click', function() {
                                const membreId = this.dataset.membreId;
                                fetch('/groupes/' + {{ groupe.id }} + '/rejeter/' + membreId, {
                                    method: 'POST'
                                })
                                .then(response => response.json())
                                .then(data => {
                                    if (data.success) {
                                        // Remove this request from the list visually
                                        this.closest('.d-flex.align-items-center.justify-content-between').remove();
                                        
                                        // Update badge count
                                        const badge = requestsBtn.querySelector('.badge');
                                        if (badge) {
                                            let count = parseInt(badge.textContent) - 1;
                                            if (count <= 0) {
                                                badge.remove();
                                                requestsBtn.querySelector('.fa-user-clock').classList.remove('text-warning');
                                            } else {
                                                badge.textContent = count;
                                            }
                                        }
                                        
                                        // If no more requests, show empty message
                                        const requestsList = document.getElementById('requestsList');
                                        if (requestsList.children.length === 0) {
                                            requestsList.innerHTML = '<p class="text-white-50 text-center py-4">Aucune demande en attente</p>';
                                        }
                                    } else {
                                        alert(data.error || 'Une erreur est survenue');
                                    }
                                });
                            });
                        });
                    } else if (data.success) {
                        requestsList.innerHTML = `
                            <div class="text-center py-4">
                                <i class="fas fa-check-circle mb-3" style="color: #48bb78; font-size: 2rem;"></i>
                                <p class="text-white-50 mb-0">Aucune demande en attente</p>
                            </div>
                        `;
                    } else {
                        requestsList.innerHTML = `
                            <div class="text-center py-4">
                                <p class="text-white-50 mb-0">${data.error || 'Une erreur est survenue'}</p>
                            </div>
                        `;
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    document.getElementById('requestsList').innerHTML = `
                        <div class="text-center py-4">
                            <p class="text-white-50 mb-0">Une erreur est survenue</p>
                        </div>
                    `;
                });
            });
        }
        
        // Reply handler - using event delegation
        document.addEventListener('click', function(e) {
            const replyBtn = e.target.closest('.reply-btn');
            if (replyBtn) {
                const messageId = replyBtn.dataset.messageId;
                const messageContent = replyBtn.dataset.messageContent;
                
                replyingToMessageId = messageId;
                parentMessageId.value = messageId;
                
                // Show reply indicator
                replyingToText.textContent = 'Reponse a: "' + messageContent + '"';
                replyIndicator.classList.remove('d-none');
                
                // Update form action for reply
                chatForm.action = '/chat/groupe/' + messageId + '/repondre';
                
                // Focus on input
                messageInput.focus();
            }
        });
        
        // Cancel reply handler
        if (cancelReplyBtn) {
            cancelReplyBtn.addEventListener('click', function() {
                replyingToMessageId = null;
                parentMessageId.value = '';
                replyIndicator.classList.add('d-none');
                chatForm.action = '{{ path('chat_send_message', {'id': groupe.id}) }}';
            });
        }
        
        // Delete handler - using event delegation
        document.addEventListener('click', function(e) {
            const deleteBtn = e.target.closest('.delete-btn');
            if (deleteBtn) {
                const messageId = deleteBtn.dataset.messageId;
                
                if (confirm('Etes-vous sur de vouloir supprimer ce message ?')) {
                    fetch('/chat/message/' + messageId + '/supprimer', {
                        method: 'POST'
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Find and hide the message
                            const messageElement = document.querySelector('[data-message-id="' + messageId + '"]');
                            if (messageElement) {
                                const messageBubble = messageElement.closest('.message');
                                if (messageBubble) {
                                    messageBubble.style.opacity = '0';
                                    messageBubble.style.transform = 'translateY(-10px)';
                                    setTimeout(() => {
                                        messageBubble.remove();
                                    }, 300);
                                }
                            }
                        } else {
                            alert(data.error || 'Une erreur est survenue');
                        }
                    })
                    .catch(error => {
                        console.error('Erreur:', error);
                        alert('Une erreur est survenue');
                    });
                }
            }
        });
        
        // Edit handler - using event delegation
        let editingMessageId = null;
        document.addEventListener('click', function(e) {
            const editBtn = e.target.closest('.edit-btn');
            if (editBtn) {
                editingMessageId = editBtn.dataset.messageId;
                const messageContent = editBtn.dataset.messageContent;
                
                // Set the textarea content
                document.getElementById('editMessageContent').value = messageContent;
                
                // Show the modal
                $('#editMessageModal').modal('show');
            }
        });
        
        // Save edit handler
        document.getElementById('saveEditBtn').addEventListener('click', function() {
            const newContent = document.getElementById('editMessageContent').value.trim();
            
            if (!newContent) {
                alert('Le message ne peut pas tre vide');
                return;
            }
            
            fetch('/chat/message/' + editingMessageId + '/editer', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: 'contenu=' + encodeURIComponent(newContent)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Update the message content in the UI
                    const messageElement = document.querySelector('[data-message-id="' + editingMessageId + '"]');
                    if (messageElement) {
                        const messageBubble = messageElement.closest('.message');
                        if (messageBubble) {
                            const contentPara = messageBubble.querySelector('.message-bubble p');
                            if (contentPara) {
                                contentPara.textContent = newContent;
                            }
                            
                            // Update data attribute for future edits
                            const editBtn = messageBubble.querySelector('.edit-btn');
                            if (editBtn) {
                                editBtn.dataset.messageContent = newContent;
                            }
                        }
                    }
                    
                    $('#editMessageModal').modal('hide');
                } else {
                    alert(data.error || 'Une erreur est survenue');
                }
            })
            .catch(error => {
                console.error('Erreur:', error);
                alert('Une erreur est survenue');
            });
        });
        
        // Members management handler
        if (document.getElementById('membersBtn')) {
            document.getElementById('membersBtn').addEventListener('click', function(e) {
                e.preventDefault();
                $('#membersModal').modal('show');
                
                fetch('{{ path('groupe_membres', {'id': groupe.id}) }}')
                .then(response => response.json())
                .then(data => {
                    const membersList = document.getElementById('membersList');
                    
                    // Combine accepted members with any members we can get
                    const members = data.requests || [];
                    
                    if (members.length > 0) {
                        let html = '';
                        members.forEach(function(member) {
                            html += `
                                <div class="d-flex align-items-center justify-content-between p-3 mb-2 rounded" style="background: rgba(255, 255, 255, 0.05);">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar rounded-xl d-flex align-items-center justify-content-center text-white mr-3" style="width: 40px; height: 40px; background: linear-gradient(135deg, #667eea, #764ba2);">
                                            ${member.utilisateur.nom ? member.utilisateur.nom.charAt(0).toUpperCase() : '?'}
                                        </div>
                                        <div>
                                            <p class="mb-0 text-white" style="font-size: 0.9rem;">${escapeHtml(member.utilisateur.nom || 'Membre')}</p>
                                            <small class="text-white-50">${member.date || ''}</small>
                                        </div>
                                    </div>
                                    ${member.utilisateur.id != {{ app.user.id }} ? `
                                    <button class="btn btn-sm kick-member-btn" data-membre-id="${member.id}" style="background: rgba(239, 68, 68, 0.2); color: #ef4444; border: 1px solid rgba(239, 68, 68, 0.5);">
                                        <i class="fas fa-user-times"></i>
                                    </button>
                                    ` : ''}
                                </div>
                            `;
                        });
                        membersList.innerHTML = html;
                        
                        // Add kick handler
                        document.querySelectorAll('.kick-member-btn').forEach(function(btn) {
                            btn.addEventListener('click', function() {
                                const membreId = this.dataset.membreId;
                                if (confirm('Etes-vous sur de vouloir expulser ce membre ?')) {
                                    fetch('/groupes/' + {{ groupe.id }} + '/kicker/' + membreId, {
                                        method: 'POST'
                                    })
                                    .then(response => response.json())
                                    .then(data => {
                                        if (data.success) {
                                            // Refresh the modal
                                            document.getElementById('membersBtn').click();
                                        } else {
                                            alert(data.error || 'Une erreur est survenue');
                                        }
                                    });
                                }
                            });
                        });
                    } else {
                        membersList.innerHTML = `
                            <div class="text-center py-4">
                                <i class="fas fa-users mb-3" style="color: #667eea; font-size: 2rem;"></i>
                                <p class="text-white-50 mb-0">Aucun membre</p>
                            </div>
                        `;
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    document.getElementById('membersList').innerHTML = `
                        <div class="text-center py-4">
                            <p class="text-white-50 mb-0">Une erreur est survenue</p>
                        </div>
                    `;
                });
            });
        }
        
        // Delete group handler
        if (document.getElementById('deleteGroupBtn')) {
            document.getElementById('deleteGroupBtn').addEventListener('click', function(e) {
                e.preventDefault();
                $('#deleteGroupModal').modal('show');
            });
            
            document.getElementById('confirmDeleteGroupBtn').addEventListener('click', function() {
                fetch('/groupes/' + {{ groupe.id }} + '/supprimer', {
                    method: 'POST'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.href = data.redirect || '{{ path('groupe_index') }}';
                    } else {
                        alert(data.error || 'Une erreur est survenue');
                    }
                })
                .catch(error => {
                    console.error('Erreur:', error);
                    alert('Une erreur est survenue');
                });
            });
        }
        
        scrollToBottom();
    });
</script>

