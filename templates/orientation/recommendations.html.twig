{% extends 'base.html.twig' %}

{% block title %}Recommandations d'Orientation - BacLab{% endblock %}

{% set body_class = 'orientation-body' %}

{% block css %}
    {{ parent() }}
    <!-- Orientation-specific enhancements -->
    <style>
        /* SPECTACULAR ORIENTATION PAGE - DARK LIKE HOME PAGE */
        .orientation-page {
            background: #0a0a0f !important;
            background-color: #0a0a0f !important;
            min-height: 100vh;
            padding-top: 100px;
            position: relative;
        }
        
        /* Fix scrolling issues */
        html, body {
            overflow-x: hidden !important;
            overflow-y: auto !important;
            scroll-behavior: smooth !important;
        }
        
        /* Prevent scroll jumping */
        .orientation-page * {
            scroll-behavior: smooth !important;
        }
        
        /* ANIMATED BACKGROUND PARTICLES */
        .orientation-page::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 20% 80%, rgba(0, 212, 255, 0.08) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(183, 148, 246, 0.08) 0%, transparent 50%),
                radial-gradient(circle at 40% 40%, rgba(255, 107, 157, 0.06) 0%, transparent 50%),
                radial-gradient(circle at 60% 70%, rgba(102, 126, 234, 0.05) 0%, transparent 50%);
            animation: backgroundShift 20s ease-in-out infinite;
            pointer-events: none;
            z-index: 0;
        }
        
        @keyframes backgroundShift {
            0%, 100% { 
                transform: translateX(0) translateY(0) scale(1);
                opacity: 0.8;
            }
            25% { 
                transform: translateX(-20px) translateY(-30px) scale(1.05);
                opacity: 1;
            }
            50% { 
                transform: translateX(30px) translateY(20px) scale(0.95);
                opacity: 0.9;
            }
            75% { 
                transform: translateX(-10px) translateY(40px) scale(1.02);
                opacity: 0.85;
            }
        }
        
        /* Enhanced page container with floating effect */
        .orientation-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px 40px;
            position: relative;
            z-index: 1;
        }
        
        /* FLOATING PARTICLES OVERLAY */
        .orientation-container::before {
            content: '';
            position: absolute;
            top: -100px;
            left: -100px;
            right: -100px;
            bottom: -100px;
            background: 
                radial-gradient(circle at 15% 85%, rgba(0, 212, 255, 0.04) 0%, transparent 40%),
                radial-gradient(circle at 85% 15%, rgba(183, 148, 246, 0.04) 0%, transparent 40%),
                radial-gradient(circle at 45% 55%, rgba(255, 107, 157, 0.03) 0%, transparent 40%),
                radial-gradient(circle at 75% 25%, rgba(102, 126, 234, 0.03) 0%, transparent 40%);
            animation: particleFloat 25s linear infinite;
            pointer-events: none;
            z-index: 0;
        }
        
        @keyframes particleFloat {
            0% { transform: rotate(0deg) translateX(0px) translateY(0px); }
            25% { transform: rotate(90deg) translateX(20px) translateY(-15px); }
            50% { transform: rotate(180deg) translateX(-10px) translateY(25px); }
            75% { transform: rotate(270deg) translateX(15px) translateY(-20px); }
            100% { transform: rotate(360deg) translateX(0px) translateY(0px); }
        }
        
        /* All content above background */
        .orientation-container > * {
            position: relative;
            z-index: 1;
        }
        
        /* SPECTACULAR MODERN CARDS WITH ADVANCED EFFECTS */
        .card-modern {
            background: var(--glass-bg);
            backdrop-filter: blur(25px);
            -webkit-backdrop-filter: blur(25px);
            border: 1px solid var(--glass-border);
            border-radius: 24px;
            box-shadow: 
                0 8px 32px rgba(0, 0, 0, 0.12),
                0 0 0 1px rgba(255, 255, 255, 0.05) inset;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            margin-bottom: 2rem;
        }
        
        /* ANIMATED TOP BORDER */
        .card-modern::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, 
                var(--neon-blue) 0%, 
                var(--neon-purple) 33%, 
                var(--neon-pink) 66%, 
                var(--neon-blue) 100%);
            background-size: 200% 100%;
            opacity: 0;
            transition: opacity 0.3s ease;
            animation: gradientShift 3s ease-in-out infinite;
        }
        
        @keyframes gradientShift {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }
        
        /* FLOATING GLOW EFFECT */
        .card-modern::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(0, 212, 255, 0.03) 0%, transparent 70%);
            opacity: 0;
            transition: opacity 0.4s ease;
            animation: floatingGlow 8s ease-in-out infinite;
            pointer-events: none;
        }
        
        @keyframes floatingGlow {
            0%, 100% { 
                transform: translateX(0) translateY(0) scale(1);
                opacity: 0;
            }
            50% { 
                transform: translateX(-20px) translateY(-30px) scale(1.1);
                opacity: 0.6;
            }
        }
        
        .card-modern:hover {
            transform: translateY(-12px) scale(1.02);
            box-shadow: 
                0 25px 50px rgba(0, 212, 255, 0.2),
                0 0 0 1px rgba(0, 212, 255, 0.3) inset,
                0 0 30px rgba(0, 212, 255, 0.1);
            border-color: rgba(0, 212, 255, 0.4);
        }
        
        .card-modern:hover::before {
            opacity: 1;
        }
        
        .card-modern:hover::after {
            opacity: 0.8;
        }
        
        /* SPECTACULAR PAGE HEADER WITH ROTATING COMPASS */
        .page-header {
            text-align: center;
            margin-bottom: 4rem;
            padding: 3rem 0;
            position: relative;
        }
        
        .page-title {
            font-size: 4rem;
            font-weight: 900;
            color: var(--text-white);
            margin-bottom: 1.5rem;
            text-shadow: 
                0 0 30px rgba(0, 212, 255, 0.6),
                0 0 60px rgba(183, 148, 246, 0.4),
                0 0 90px rgba(255, 107, 157, 0.2);
            background: linear-gradient(135deg, 
                var(--neon-blue) 0%, 
                var(--neon-purple) 50%, 
                var(--neon-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            position: relative;
        }
        
        .page-title i {
            display: inline-block;
            animation: iconRotate 10s linear infinite;
            margin-right: 1rem;
            color: var(--neon-blue);
            text-shadow: 0 0 20px rgba(0, 212, 255, 0.8);
        }
        
        @keyframes iconRotate {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .page-subtitle {
            font-size: 1.4rem;
            color: var(--text-gray);
            max-width: 800px;
            margin: 0 auto;
            line-height: 1.7;
            position: relative;
        }
        
        /* PULSING BACKGROUND EFFECT FOR SUBTITLE */
        .page-subtitle::before {
            content: '';
            position: absolute;
            top: -10px;
            left: -20px;
            right: -20px;
            bottom: -10px;
            background: linear-gradient(45deg, 
                rgba(0, 212, 255, 0.05) 0%, 
                rgba(183, 148, 246, 0.05) 50%, 
                rgba(255, 107, 157, 0.05) 100%);
            border-radius: 16px;
            opacity: 0;
            animation: pulseBackground 4s ease-in-out infinite;
            z-index: -1;
        }
        
        @keyframes pulseBackground {
            0%, 100% { 
                opacity: 0;
                transform: scale(0.95);
            }
            50% { 
                opacity: 1;
                transform: scale(1.05);
            }
        }
        
        /* SPECTACULAR STATS CARDS WITH ADVANCED ANIMATIONS */
        .header-stats {
            background: linear-gradient(135deg, 
                rgba(0, 212, 255, 0.1) 0%, 
                rgba(183, 148, 246, 0.1) 50%, 
                rgba(255, 107, 157, 0.1) 100%);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(0, 212, 255, 0.3);
            border-radius: 20px;
            padding: 2.5rem;
            margin: 2rem 0;
            position: relative;
            overflow: hidden;
        }
        
        /* ANIMATED STATS BACKGROUND */
        .header-stats::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, 
                rgba(0, 212, 255, 0.08) 0%, 
                rgba(183, 148, 246, 0.06) 30%, 
                transparent 70%);
            animation: statsFloat 12s ease-in-out infinite;
            pointer-events: none;
        }
        
        @keyframes statsFloat {
            0%, 100% { 
                transform: translateY(0px) rotate(0deg) scale(1);
                opacity: 0.6;
            }
            33% { 
                transform: translateY(-30px) rotate(120deg) scale(1.1);
                opacity: 0.8;
            }
            66% { 
                transform: translateY(20px) rotate(240deg) scale(0.9);
                opacity: 0.7;
            }
        }
        
        .stat-item {
            text-align: center;
            position: relative;
            padding: 1.5rem;
            transition: all 0.3s ease;
        }
        
        .stat-item:hover {
            transform: translateY(-8px) scale(1.05);
        }
        
        /* ANIMATED BOTTOM BORDER FOR STATS */
        .stat-item::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--neon-blue), var(--neon-purple));
            border-radius: 2px;
            transition: width 0.4s ease;
        }
        
        .stat-item:hover::after {
            width: 60px;
        }
        
        .score-display {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--text-white);
            margin-bottom: 0.8rem;
            text-shadow: 
                0 2px 10px rgba(0, 212, 255, 0.4),
                0 0 20px rgba(0, 212, 255, 0.2);
            transition: all 0.3s ease;
        }
        
        .score-display:hover {
            transform: scale(1.1);
            text-shadow: 
                0 4px 20px rgba(0, 212, 255, 0.6),
                0 0 40px rgba(0, 212, 255, 0.4);
        }
        
        .score-display i {
            margin-right: 0.8rem;
            color: var(--neon-blue);
            animation: iconPulse 2s ease-in-out infinite;
        }
        
        @keyframes iconPulse {
            0%, 100% { 
                transform: scale(1);
                opacity: 0.8;
            }
            50% { 
                transform: scale(1.2);
                opacity: 1;
            }
        }
        
        /* SPECTACULAR PROGRAM CARDS WITH ADVANCED HOVER EFFECTS */
        .program-card {
            border-left: 5px solid var(--neon-purple);
            position: relative;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        /* ANIMATED SIDE GRADIENT */
        .program-card::after {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 120px;
            height: 100%;
            background: linear-gradient(90deg, 
                transparent 0%, 
                rgba(0, 212, 255, 0.08) 30%,
                rgba(183, 148, 246, 0.08) 70%,
                rgba(255, 107, 157, 0.06) 100%);
            opacity: 0;
            transition: all 0.4s ease;
            pointer-events: none;
        }
        
        .program-card:hover::after {
            opacity: 1;
            width: 200px;
        }
        
        .program-card:hover {
            border-left-color: var(--neon-blue);
            border-left-width: 8px;
            transform: translateX(8px);
        }
        
        .program-title {
            color: var(--text-white);
            font-weight: 800;
            font-size: 1.3rem;
            text-decoration: none;
            transition: all 0.3s ease;
            display: block;
            margin-bottom: 0.8rem;
            position: relative;
        }
        
        /* ANIMATED UNDERLINE FOR PROGRAM TITLES */
        .program-title::after {
            content: '';
            position: absolute;
            bottom: -4px;
            left: 0;
            width: 0;
            height: 2px;
            background: linear-gradient(90deg, var(--neon-blue), var(--neon-purple));
            transition: width 0.4s ease;
        }
        
        .program-title:hover {
            color: var(--neon-blue);
            text-decoration: none;
            text-shadow: 0 0 15px rgba(0, 212, 255, 0.5);
            transform: translateY(-2px);
        }
        
        .program-title:hover::after {
            width: 100%;
        }
        
        .university-info {
            color: var(--text-gray);
            font-size: 1rem;
            margin-bottom: 1.2rem;
            display: flex;
            align-items: center;
            gap: 0.8rem;
            transition: all 0.3s ease;
        }
        
        .university-info:hover {
            color: var(--text-white);
            transform: translateX(5px);
        }
        
        .university-info i {
            color: var(--neon-purple);
            font-size: 1.1rem;
            animation: universityPulse 3s ease-in-out infinite;
        }
        
        @keyframes universityPulse {
            0%, 100% { 
                transform: scale(1);
                opacity: 0.8;
            }
            50% { 
                transform: scale(1.15);
                opacity: 1;
            }
        }
        
        /* SPECTACULAR BADGES AND INDICATORS */
        .chance-badge {
            font-size: 0.9rem;
            font-weight: 700;
            padding: 0.8rem 1.5rem;
            border-radius: 30px;
            text-transform: uppercase;
            letter-spacing: 1px;
            border: none;
            box-shadow: 
                0 6px 20px rgba(0, 0, 0, 0.25),
                0 0 0 1px rgba(255, 255, 255, 0.1) inset;
            display: inline-flex;
            align-items: center;
            gap: 0.8rem;
            position: relative;
            overflow: hidden;
            transition: all 0.4s ease;
        }
        
        /* ANIMATED BADGE BACKGROUND */
        .chance-badge::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, 
                transparent, 
                rgba(255, 255, 255, 0.2), 
                transparent);
            transition: left 0.6s ease;
        }
        
        .chance-badge:hover::before {
            left: 100%;
        }
        
        .chance-badge:hover {
            transform: translateY(-4px) scale(1.05);
            box-shadow: 
                0 12px 30px rgba(0, 0, 0, 0.3),
                0 0 0 2px rgba(255, 255, 255, 0.2) inset;
        }
        
        .reason-badge {
            background: linear-gradient(45deg, 
                rgba(0, 212, 255, 0.15), 
                rgba(183, 148, 246, 0.15));
            border: 1px solid rgba(0, 212, 255, 0.4);
            color: var(--text-white);
            font-size: 0.85rem;
            font-weight: 600;
            padding: 0.6rem 1rem;
            border-radius: 25px;
            margin: 0.3rem;
            display: inline-block;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }
        
        /* REASON BADGE HOVER EFFECT */
        .reason-badge::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, var(--neon-blue), var(--neon-purple));
            opacity: 0;
            transition: opacity 0.3s ease;
            z-index: -1;
        }
        
        .reason-badge:hover {
            color: white;
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 8px 25px rgba(0, 212, 255, 0.4);
            border-color: var(--neon-blue);
        }
        
        .reason-badge:hover::before {
            opacity: 1;
        }
        
        .reason-badge i {
            margin-right: 0.5rem;
            animation: checkPulse 2s ease-in-out infinite;
        }
        
        @keyframes checkPulse {
            0%, 100% { 
                transform: scale(1);
                opacity: 0.8;
            }
            50% { 
                transform: scale(1.2);
                opacity: 1;
            }
        }
        
        /* Score comparison */
        .score-comparison {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 1rem;
            margin: 0.5rem 0;
            backdrop-filter: blur(10px);
        }
        
        .score-comparison .small {
            color: var(--text-gray);
            font-size: 0.9rem;
        }
        
        /* SPECTACULAR PROGRESS BARS WITH SHIMMER EFFECTS */
        .final-score-bar {
            height: 16px;
            border-radius: 12px;
            background: linear-gradient(90deg, 
                var(--neon-blue) 0%, 
                var(--neon-purple) 50%, 
                var(--neon-pink) 100%);
            position: relative;
            overflow: hidden;
            box-shadow: 
                0 4px 15px rgba(0, 212, 255, 0.4),
                0 0 0 1px rgba(255, 255, 255, 0.1) inset;
            transition: all 0.3s ease;
        }
        
        .final-score-bar:hover {
            transform: scaleY(1.2);
            box-shadow: 
                0 6px 25px rgba(0, 212, 255, 0.6),
                0 0 0 2px rgba(255, 255, 255, 0.2) inset;
        }
        
        /* ANIMATED SHIMMER EFFECT */
        .final-score-bar::after {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, 
                transparent, 
                rgba(255, 255, 255, 0.4), 
                transparent);
            animation: shimmer 2.5s infinite;
        }
        
        @keyframes shimmer {
            0% { left: -100%; }
            100% { left: 100%; }
        }
        
        /* ENHANCED SIDEBAR STYLING */
        .filter-section, .engagement-stats {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            border-radius: 20px;
            padding: 2.5rem;
            margin-bottom: 2.5rem;
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }
        
        .filter-section:hover, .engagement-stats:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 212, 255, 0.15);
            border-color: rgba(0, 212, 255, 0.3);
        }
        
        .engagement-stats {
            background: linear-gradient(135deg, 
                rgba(0, 212, 255, 0.12) 0%, 
                rgba(183, 148, 246, 0.12) 50%, 
                rgba(255, 107, 157, 0.12) 100%);
            border: 1px solid rgba(0, 212, 255, 0.3);
            position: relative;
            overflow: hidden;
        }
        
        /* FLOATING ENGAGEMENT BACKGROUND */
        .engagement-stats::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, 
                rgba(0, 212, 255, 0.08) 0%, 
                rgba(183, 148, 246, 0.06) 40%,
                transparent 70%);
            animation: engagementFloat 15s ease-in-out infinite;
            pointer-events: none;
        }
        
        @keyframes engagementFloat {
            0%, 100% { 
                transform: translateY(0px) rotate(0deg) scale(1);
                opacity: 0.6;
            }
            33% { 
                transform: translateY(-40px) rotate(120deg) scale(1.1);
                opacity: 0.8;
            }
            66% { 
                transform: translateY(30px) rotate(240deg) scale(0.9);
                opacity: 0.7;
            }
        }
        
        /* SPECTACULAR FORM CONTROLS WITH FOCUS ANIMATIONS */
        .form-control, .form-select {
            background: rgba(255, 255, 255, 0.08);
            border: 1px solid rgba(255, 255, 255, 0.15);
            border-radius: 16px;
            padding: 1rem 1.5rem;
            color: var(--text-white);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            backdrop-filter: blur(10px);
            position: relative;
        }
        
        .form-control:focus, .form-select:focus {
            background: rgba(255, 255, 255, 0.12);
            border-color: var(--neon-blue);
            box-shadow: 
                0 0 0 3px rgba(0, 212, 255, 0.25),
                0 0 20px rgba(0, 212, 255, 0.2);
            color: var(--text-white);
            transform: translateY(-2px) scale(1.02);
        }
        
        .form-control::placeholder {
            color: var(--text-muted);
            transition: all 0.3s ease;
        }
        
        .form-control:focus::placeholder {
            color: rgba(0, 212, 255, 0.6);
            transform: translateY(-2px);
        }
        
        .form-label {
            color: var(--text-white);
            font-weight: 600;
            margin-bottom: 0.8rem;
            font-size: 0.95rem;
            position: relative;
        }
        
        /* ANIMATED LABEL UNDERLINE */
        .form-label::after {
            content: '';
            position: absolute;
            bottom: -4px;
            left: 0;
            width: 0;
            height: 2px;
            background: linear-gradient(90deg, var(--neon-blue), var(--neon-purple));
            transition: width 0.3s ease;
        }
        
        .form-group:focus-within .form-label::after {
            width: 100%;
        }
        
        /* SPECTACULAR BUTTONS WITH ADVANCED EFFECTS */
        .btn-primary-custom {
            background: linear-gradient(135deg, var(--neon-blue), var(--neon-purple));
            border: none;
            border-radius: 30px;
            padding: 1rem 2.5rem;
            font-weight: 700;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: white;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 
                0 10px 30px rgba(0, 212, 255, 0.4),
                0 0 0 1px rgba(255, 255, 255, 0.1) inset;
            position: relative;
            overflow: hidden;
        }
        
        /* BUTTON SHINE EFFECT */
        .btn-primary-custom::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, 
                transparent, 
                rgba(255, 255, 255, 0.3), 
                transparent);
            transition: left 0.6s ease;
        }
        
        .btn-primary-custom:hover {
            transform: translateY(-5px) scale(1.05);
            box-shadow: 
                0 20px 40px rgba(0, 212, 255, 0.5),
                0 0 0 2px rgba(255, 255, 255, 0.2) inset;
            color: white;
        }
        
        .btn-primary-custom:hover::before {
            left: 100%;
        }
        
        .simulate-btn {
            background: linear-gradient(45deg, #ffc107, #ff8f00);
            border: none;
            border-radius: 30px;
            padding: 0.8rem 2rem;
            color: white;
            font-weight: 700;
            transition: all 0.4s ease;
            box-shadow: 
                0 6px 20px rgba(255, 193, 7, 0.4),
                0 0 0 1px rgba(255, 255, 255, 0.1) inset;
            position: relative;
            overflow: hidden;
        }
        
        .simulate-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, 
                transparent, 
                rgba(255, 255, 255, 0.3), 
