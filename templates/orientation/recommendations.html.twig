{% block body %}
<div class="orientation-page">
    <div class="orientation-container">
        <!-- Page Header -->
        <div class="page-header">
            <h1 class="page-title">
                <i class="fas fa-compass me-3"></i>Recommandations d'Orientation
            </h1>
            <p class="page-subtitle">
                Découvrez les programmes universitaires qui correspondent le mieux à votre profil académique
                {% if engagementStats.totalViews > 0 %}
                    et à votre engagement sur BacLab
                {% endif %}
            </p>
        </div>

        <!-- User Info Header -->
        <div class="card-modern">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h4 class="mb-3">
                            <i class="fas fa-user-graduate me-2" style="color: var(--neon-blue);"></i>
                            Votre Profil
                        </h4>
                        <p class="mb-1">
                            <strong>Filière:</strong> {{ filiereLabel }}
                        </p>
                        <p class="mb-0">
                            <strong>Score FG:</strong> {{ userScores.FG }}
                        </p>
                    </div>
                    <div class="col-md-6">
                        <div class="header-stats">
                            <div class="row text-center">
                                <div class="col-4">
                                    <div class="stat-item">
                                        <div class="score-display">
                                            <i class="fas fa-calculator"></i>
                                            {{ userScores.FG }}
                                        </div>
                                        <small class="text-muted">Formule Globale</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-item">
                                        <div class="score-display">
                                            <i class="fas fa-graduation-cap"></i>
                                            {{ recommendations|length }}
                                        </div>
                                        <small class="text-muted">Programmes</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-item">
                                        <div class="score-display">
                                            <i class="fas fa-chart-line"></i>
                                            {% if engagementStats.totalViews > 0 %}
                                                {{ (engagementStats.avgInterest * 100)|round }}%
                                            {% else %}
                                                Score
                                            {% endif %}
                                        </div>
                                        <small class="text-muted">
                                            {% if engagementStats.totalViews > 0 %}
                                                Engagement
                                            {% else %}
                                                Académique
                                            {% endif %}
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% if engagementStats.totalViews == 0 %}
        <!-- No Engagement Notice -->
        <div class="no-engagement-notice">
            <h5><i class="fas fa-info-circle me-2"></i>Recommandations basées sur votre score académique</h5>
            <p>
                Nous n'avons pas encore de données sur votre engagement avec les matières. 
                Les recommandations sont basées uniquement sur votre score BAC et les seuils d'admission officiels.
            </p>
            <button class="simulate-btn" onclick="simulateEngagement()">
                <i class="fas fa-magic me-2"></i>Simuler des données d'engagement
            </button>
        </div>
        {% endif %}

        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-4">
                {% if engagementStats.totalViews > 0 %}
                <!-- Engagement Stats -->
                <div class="engagement-stats mb-4">
                    <h5><i class="fas fa-chart-bar me-2"></i>Votre Engagement</h5>
                    <div class="row">
                        <div class="col-6">
                            <small>Ressources vues</small>
                            <div class="h6">{{ engagementStats.totalViews }}</div>
                        </div>
                        <div class="col-6">
                            <small>Quiz tentés</small>
                            <div class="h6">{{ engagementStats.totalQuizAttempts }}</div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <small>Engagement global</small>
                        <div class="progress progress-custom mt-1">
                            <div class="progress-bar progress-bar-custom" 
                                 style="width: {{ (engagementStats.avgInterest * 100)|round }}%"></div>
                        </div>
                    </div>
                </div>
                {% endif %}

                <!-- Filters -->
                <div class="filter-section">
                    <h5><i class="fas fa-filter me-2" style="color: var(--neon-blue);"></i>Filtres</h5>
                    <form method="GET" id="filterForm">
                        <div class="mb-3">
                            <label class="form-label">Université</label>
                            <select name="university" class="form-select">
                                <option value="">Toutes les universités</option>
                                {% for university in universities %}
                                    <option value="{{ university }}" 
                                            {% if filters.university == university %}selected{% endif %}>
                                        {{ university }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Domaine</label>
                            <select name="domain" class="form-select">
                                <option value="">Tous les domaines</option>
                                {% for domain in domains %}
                                    <option value="{{ domain }}" 
                                            {% if filters.domain == domain %}selected{% endif %}>
                                        {{ domain }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        
                        <div class="row">
                            <div class="col-6">
                                <label class="form-label">Score min</label>
                                <input type="number" name="minCutoff" class="form-control" 
                                       value="{{ filters.minCutoff }}" step="0.1" placeholder="Ex: 80">
                            </div>
                            <div class="col-6">
                                <label class="form-label">Score max</label>
                                <input type="number" name="maxCutoff" class="form-control" 
                                       value="{{ filters.maxCutoff }}" step="0.1" placeholder="Ex: 150">
                            </div>
                        </div>
                        
                        <div class="form-check mt-3">
                            <input class="form-check-input" type="checkbox" name="geographic_bonus" 
                                   {% if geographicBonus %}checked{% endif %}>
                            <label class="form-check-label">
                                <i class="fas fa-map-marker-alt me-1" style="color: var(--neon-pink);"></i>
                                Bonus géographique (7%)
                            </label>
                        </div>
                        
                        <button type="submit" class="btn btn-primary-custom w-100 mt-3">
                            <i class="fas fa-search me-2"></i>Appliquer les filtres
                        </button>
                    </form>
                </div>

                <!-- Top Subjects -->
                {% if topSubjects and engagementStats.totalViews > 0 %}
                <div class="card-modern">
                    <div class="card-body">
                        <h6><i class="fas fa-star me-2" style="color: var(--neon-pink);"></i>Vos matières fortes</h6>
                        {% for subject in topSubjects %}
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span>{{ subject.subjectCode }}</span>
                                <div class="progress" style="width: 60px; height: 6px;">
                                    <div class="progress-bar bg-success" 
                                         style="width: {{ (subject.interestScore * 100)|round }}%"></div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}
            </div>

            <!-- Recommendations -->
            <div class="col-lg-8">
                {% if recommendations is empty %}
                    <div class="card-modern">
                        <div class="empty-state">
                            <i class="fas fa-search"></i>
                            <h5>Aucune recommandation trouvée</h5>
                            <p>Essayez de modifier vos filtres ou vérifiez que votre score BAC a été calculé.</p>
                            <a href="{{ path('score_calcul') }}" class="btn btn-primary-custom">
                                <i class="fas fa-calculator me-2"></i>Recalculer mon score
                            </a>
                        </div>
                    </div>
                {% else %}
                    {% for recommendation in recommendations %}
                        <div class="card-modern program-card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <h5 class="card-title">
                                            <a href="{{ path('orientation_program_detail', {id: recommendation.program.id}) }}" 
                                               class="program-title">
                                                {{ recommendation.program.displayName }}
                                            </a>
                                        </h5>
                                        <p class="university-info">
                                            <i class="fas fa-university me-2"></i>
                                            {{ recommendation.program.fullInstitutionName }}
                                        </p>
                                        
                                        <!-- Reasons -->
                                        {% if recommendation.reasons %}
                                            <div class="mb-3">
                                                {% for reason in recommendation.reasons %}
                                                    <span class="reason-badge">
                                                        <i class="fas fa-check-circle me-1"></i>
                                                        {{ reason }}
                                                    </span>
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>
                                    
                                    <div class="col-md-4 text-end">
                                        <!-- Chance Badge -->
                                        <span class="badge bg-{{ recommendation.chanceLevel.color }} chance-badge mb-3">
                                            <i class="fas fa-chart-line me-1"></i>
                                            {{ recommendation.chanceLevel.level }}
                                        </span>
                                        
                                        <!-- Scores with Debug Info -->
                                        <div class="score-comparison">
                                            <div class="small mb-2">
                                                <div class="d-flex justify-content-between">
                                                    <span>Votre T:</span>
                                                    <strong>{{ recommendation.tUser }}</strong>
                                                </div>
                                                <div class="d-flex justify-content-between">
                                                    <span>Seuil 2024:</span>
                                                    <strong>{{ recommendation.cutoff2024 }}</strong>
                                                </div>
                                                <div class="d-flex justify-content-between">
                                                    <span>Marge:</span>
                                                    <strong class="{% if recommendation.margin > 0 %}text-success{% else %}text-danger{% endif %}">
                                                        {{ recommendation.margin > 0 ? '+' : '' }}{{ recommendation.margin }}
                                                    </strong>
                                                </div>
                                                <div class="d-flex justify-content-between mt-1">
                                                    <span><small>Score Chance:</small></span>
                                                    <small>{{ (recommendation.chanceScore * 100)|round }}%</small>
                                                </div>
                                                {% if recommendation.interestFit > 0 %}
                                                <div class="d-flex justify-content-between">
                                                    <span><small>Affinité:</small></span>
                                                    <small>{{ (recommendation.interestFit * 100)|round }}%</small>
                                                </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                        
                                        <!-- Final Score -->
                                        <div class="mt-3">
                                            <div class="final-score-bar" style="width: {{ (recommendation.finalScore * 100)|round }}%"></div>
                                            <small class="text-muted mt-1 d-block">
                                                Compatibilité: {{ (recommendation.finalScore * 100)|round }}%
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}

                <!-- What If Simulator -->
                <div class="what-if-section">
                    <h5><i class="fas fa-magic me-2"></i>Simulateur "Et si..."</h5>
                    <p class="text-muted">Voyez comment l'amélioration de vos notes pourrait changer vos recommandations.</p>
                    
                    <form id="whatIfForm">
                        <div class="row">
                            {% for subject, score in userScores %}
                                {% if subject != 'FG' %}
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label">{{ subject }}</label>
                                        <input type="number" name="{{ subject }}" class="form-control" 
                                               value="{{ score }}" min="0" max="20" step="0.1">
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                        
                        <button type="submit" class="btn btn-primary-custom">
                            <i class="fas fa-calculator me-2"></i>Simuler
                        </button>
                    </form>
                    
                    <div id="simulationResults" class="mt-3" style="display: none;">
                        <h6>Améliorations possibles:</h6>
                        <div id="improvementsList"></div>
                    </div>
                </div>
            </div>
    </div>
</div>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script>
        // Fix scroll behavior
        document.addEventListener('DOMContentLoaded', function() {
            // Ensure smooth scrolling
            document.documentElement.style.scrollBehavior = 'smooth';
            document.body.style.scrollBehavior = 'smooth';
            
            // Prevent scroll jumping
            window.addEventListener('scroll', function(e) {
                // Allow normal scrolling
            });
        });
        
        // What If Simulator
        document.addEventListener('DOMContentLoaded', function() {
            const whatIfForm = document.getElementById('whatIfForm');
            if (whatIfForm) {
                whatIfForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    const submitBtn = this.querySelector('button[type="submit"]');
                    const originalText = submitBtn.innerHTML;
                    
                    // Show loading state
                    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Simulation...';
                    submitBtn.disabled = true;
                    
                    const formData = new FormData(this);
                    
                    fetch('{{ path('orientation_what_if') }}', {
                        method: 'POST',
                        body: formData
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            displaySimulationResults(data.improvements);
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Erreur lors de la simulation. Veuillez réessayer.');
                    })
                    .finally(() => {
                        // Restore button state
                        submitBtn.innerHTML = originalText;
                        submitBtn.disabled = false;
                    });
                });
            }
        });
        
        function displaySimulationResults(improvements) {
            const resultsDiv = document.getElementById('simulationResults');
            const listDiv = document.getElementById('improvementsList');
            
            if (improvements.length === 0) {
                listDiv.innerHTML = '<p class="text-muted">Aucune amélioration détectée avec ces modifications.</p>';
            } else {
                let html = '';
                improvements.forEach(improvement => {
                    html += `
                        <div class="alert alert-success">
                            <strong>${improvement.program.programNameAr}</strong><br>
                            ${improvement.positionImprovement === 'NEW' ? 
                                'Nouveau dans le top 10!' : 
                                `Amélioration de ${improvement.positionImprovement} positions (${improvement.oldPosition} → ${improvement.newPosition})`
                            }
                        </div>
                    `;
                });
                listDiv.innerHTML = html;
            }
            
            resultsDiv.style.display = 'block';
        }
        
        // Simulate engagement data
        function simulateEngagement() {
            const btn = event.target;
            const originalText = btn.innerHTML;
            
            // Show loading state
            btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Simulation...';
            btn.disabled = true;
            
            fetch('{{ path('orientation_simulate_engagement') }}', {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Erreur lors de la simulation. Veuillez réessayer.');
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Erreur lors de la simulation. Veuillez réessayer.');
                btn.innerHTML = originalText;
                btn.disabled = false;
            });
        }
        
        // Filter form handling
        document.addEventListener('DOMContentLoaded', function() {
            const filterForm = document.getElementById('filterForm');
            if (filterForm) {
                filterForm.addEventListener('submit', function(e) {
                    const submitBtn = this.querySelector('button[type="submit"]');
                    const originalText = submitBtn.innerHTML;
                    
                    // Show loading state
                    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Filtrage...';
                    submitBtn.disabled = true;
                    
                    // Allow form to submit normally
                    // The loading state will be reset when page reloads
                });
            }
        });
        
        // Remove problematic smooth scrolling for anchor links
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    const href = this.getAttribute('href');
                    const target = document.querySelector(href);
                    if (target) {
                        e.preventDefault();
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });
        });
    </script>
{% endblock %}