        .bibliotheque-section::after {
            content: '';
            position: absolute;
            width: 400px;
            height: 400px;
            border-radius: 50%;
            background: radial-gradient(circle, rgba(255, 77, 141, 0.06) 0%, transparent 70%);
            bottom: -100px;
            left: -100px;
            animation: float 15s infinite ease-in-out reverse;
