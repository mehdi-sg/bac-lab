{% extends 'base.html.twig' %}

{% block title %}{{ edit ? 'Modifier Filière' : 'Ajouter Filière' }} | BacLab Admin{% endblock %}

{% block body %}
<style>
    /* === DESIGN SYSTEM === */
    :root {
        --primary: #6366f1;
        --primary-dark: #4f46e5;
        --primary-light: #818cf8;
        --primary-50: #eef2ff;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --gray-50: #f9fafb;
        --gray-100: #f3f4f6;
        --gray-200: #e5e7eb;
        --gray-300: #d1d5db;
        --gray-400: #9ca3af;
        --gray-500: #6b7280;
        --gray-600: #4b5563;
        --gray-700: #374151;
        --gray-800: #1f2937;
        --gray-900: #111827;
        --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        --shadow-glow: 0 0 0 3px rgba(99, 102, 241, 0.1);
        --radius-sm: 0.375rem;
        --radius: 0.5rem;
        --radius-md: 0.75rem;
        --radius-lg: 1rem;
        --radius-xl: 1.5rem;
        --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
        --transition: 300ms cubic-bezier(0.4, 0, 0.2, 1);
        --transition-slow: 500ms cubic-bezier(0.4, 0, 0.2, 1);
        --font-sans: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    /* === PAGE LAYOUT === */
    .form-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        position: relative;
        overflow: hidden;
    }

    /* Animated background shapes */
    .form-page::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: 
            radial-gradient(circle at 20% 80%, rgba(99, 102, 241, 0.08) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(16, 185, 129, 0.08) 0%, transparent 50%),
            radial-gradient(circle at 40% 40%, rgba(245, 158, 11, 0.05) 0%, transparent 40%);
        animation: float 20s ease-in-out infinite;
    }

    @keyframes float {
        0%, 100% { transform: translate(0, 0) rotate(0deg); }
        33% { transform: translate(30px, -30px) rotate(2deg); }
        66% { transform: translate(-20px, 20px) rotate(-2deg); }
    }

    /* === FORM CONTAINER === */
    .form-container {
        width: 100%;
        max-width: 480px;
        position: relative;
        z-index: 1;
    }

    .form-card {
        background: white;
        border-radius: var(--radius-xl);
        box-shadow: var(--shadow-xl);
        overflow: hidden;
        animation: slideUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px) scale(0.95);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    /* === FORM HEADER === */
    .form-header {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        padding: 2.5rem 2rem 2rem;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .form-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    }

    .form-icon {
        width: 64px;
        height: 64px;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: var(--radius-lg);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
        font-size: 1.75rem;
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.3);
        animation: iconPulse 2s ease-in-out infinite;
    }

    @keyframes iconPulse {
        0%, 100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.4); }
        50% { transform: scale(1.05); box-shadow: 0 0 0 15px rgba(255, 255, 255, 0); }
    }

    .form-title {
        color: white;
        font-size: 1.5rem;
        font-weight: 700;
        margin: 0;
        position: relative;
    }

    .form-subtitle {
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.875rem;
        margin-top: 0.5rem;
        position: relative;
    }

    /* === FORM BODY === */
    .form-body {
        padding: 2rem;
    }

    /* === INPUT GROUPS === */
    .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }

    .form-label {
        display: block;
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--gray-700);
        margin-bottom: 0.5rem;
        transition: var(--transition);
    }

    .input-wrapper {
        position: relative;
    }

    .input-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--gray-400);
        font-size: 1rem;
        transition: var(--transition);
        pointer-events: none;
    }

    .form-control-custom {
        width: 100%;
        padding: 0.875rem 1rem 0.875rem 2.75rem;
        font-size: 0.9375rem;
        font-weight: 500;
        color: var(--gray-800);
        background: var(--gray-50);
        border: 2px solid var(--gray-200);
        border-radius: var(--radius-lg);
        transition: var(--transition);
        font-family: var(--font-sans);
    }

    .form-control-custom:hover {
        border-color: var(--gray-300);
        background: white;
    }

    .form-control-custom:focus {
        outline: none;
        border-color: var(--primary);
        background: white;
        box-shadow: var(--shadow-glow);
    }

    .form-control-custom:focus + .input-icon,
    .input-wrapper:focus-within .input-icon {
        color: var(--primary);
    }

    /* Select styling */
    select.form-control-custom {
        appearance: none;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
        background-position: right 0.75rem center;
        background-repeat: no-repeat;
        background-size: 1.5em 1.5em;
        padding-right: 2.5rem;
    }

    /* Floating label animation */
    .floating-group {
        position: relative;
    }

    .floating-label {
        position: absolute;
        left: 2.75rem;
        top: 50%;
        transform: translateY(-50%);
        font-size: 0.9375rem;
        color: var(--gray-400);
        pointer-events: none;
        transition: var(--transition);
        background: transparent;
        padding: 0 0.25rem;
    }

    .form-control-custom:focus ~ .floating-label,
    .form-control-custom:not(:placeholder-shown) ~ .floating-label {
        top: 0;
        left: 0.75rem;
        font-size: 0.75rem;
        color: var(--primary);
        background: white;
        font-weight: 600;
    }

    /* === VALIDATION STATES === */
    .form-group.has-error .form-control-custom {
        border-color: var(--danger);
        background: #fef2f2;
    }

    .form-group.has-error .input-icon {
        color: var(--danger);
    }

    .error-message {
        display: flex;
        align-items: center;
        gap: 0.375rem;
        color: var(--danger);
        font-size: 0.8125rem;
        margin-top: 0.5rem;
        font-weight: 500;
        animation: shake 0.5s ease-in-out;
    }

    @keyframes shake {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-5px); }
        75% { transform: translateX(5px); }
    }

    .form-group.has-success .form-control-custom {
        border-color: var(--success);
    }

    .form-group.has-success .input-icon {
        color: var(--success);
    }

    .success-icon {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--success);
        font-size: 1rem;
        opacity: 0;
        transition: var(--transition);
    }

    .form-group.has-success .success-icon {
        opacity: 1;
    }

    /* === CHARACTER COUNTER === */
    .char-counter {
        position: absolute;
        right: 1rem;
        bottom: -1.25rem;
        font-size: 0.75rem;
        color: var(--gray-400);
        font-weight: 500;
    }

    .char-counter.warning {
        color: var(--warning);
    }

    /* === BUTTONS === */
    .btn-group {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        margin-top: 2rem;
    }

    .btn-primary-custom {
        position: relative;
        width: 100%;
        padding: 1rem 1.5rem;
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        color: white;
        font-weight: 600;
        font-size: 0.9375rem;
        border: none;
        border-radius: var(--radius-lg);
        cursor: pointer;
        overflow: hidden;
        transition: var(--transition);
        box-shadow: 0 4px 6px -1px rgba(99, 102, 241, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .btn-primary-custom::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.6s;
    }

    .btn-primary-custom:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px -5px rgba(99, 102, 241, 0.4);
    }

    .btn-primary-custom:hover::before {
        left: 100%;
    }

    .btn-primary-custom:active {
        transform: translateY(0);
    }

    .btn-primary-custom:disabled {
        opacity: 0.7;
        cursor: not-allowed;
        transform: none;
    }

    .btn-secondary-custom {
        width: 100%;
        padding: 0.875rem 1.5rem;
        background: white;
        color: var(--gray-600);
        font-weight: 600;
        font-size: 0.9375rem;
        border: 2px solid var(--gray-200);
        border-radius: var(--radius-lg);
        cursor: pointer;
        transition: var(--transition);
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .btn-secondary-custom:hover {
        border-color: var(--gray-300);
        color: var(--gray-800);
        background: var(--gray-50);
    }

    /* === LOADING STATE === */
    .btn-loading {
        pointer-events: none;
    }

    .btn-loading .btn-text {
        opacity: 0;
    }

    .spinner {
        position: absolute;
        width: 20px;
        height: 20px;
        border: 2px solid rgba(255,255,255,0.3);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    @keyframes spin {
        to { transform: rotate(360deg); }
    }

    /* === TOAST NOTIFICATIONS === */
    .toast-container {
        position: fixed;
        top: 1.5rem;
        right: 1.5rem;
        z-index: 1000;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .toast {
        background: white;
        border-radius: var(--radius-lg);
        padding: 1rem 1.25rem;
        box-shadow: var(--shadow-2xl);
        border-left: 4px solid var(--success);
        display: flex;
        align-items: center;
        gap: 0.75rem;
        min-width: 320px;
        animation: slideInRight 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        font-size: 0.875rem;
        color: var(--gray-700);
    }

    @keyframes slideInRight {
        from { transform: translateX(100%); opacity: 0; }
        to { transform: translateX(0); opacity: 1; }
    }

    /* === BREADCRUMB === */
    .breadcrumb-nav {
        position: absolute;
        top: 1.5rem;
        left: 1.5rem;
        z-index: 10;
    }

    .breadcrumb-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--gray-500);
        font-size: 0.875rem;
        font-weight: 500;
        text-decoration: none;
        padding: 0.5rem 1rem;
        background: white;
        border-radius: var(--radius);
        box-shadow: var(--shadow-sm);
        transition: var(--transition);
    }

    .breadcrumb-link:hover {
        color: var(--primary);
        box-shadow: var(--shadow-md);
        transform: translateY(-1px);
    }

    /* === RESPONSIVE === */
    @media (max-width: 640px) {
        .form-page { padding: 1rem; }
        .form-header { padding: 2rem 1.5rem 1.5rem; }
        .form-body { padding: 1.5rem; }
        .form-title { font-size: 1.25rem; }
        .breadcrumb-nav { position: relative; top: 0; left: 0; margin-bottom: 1rem; }
    }

    /* === ACCESSIBILITY === */
    @media (prefers-reduced-motion: reduce) {
        * { animation-duration: 0.01ms !important; transition-duration: 0.01ms !important; }
    }

    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
    }
</style>

<!-- Toast Container -->
<div class="toast-container" id="toast-container"></div>

<!-- Breadcrumb -->
     <section class="about-area1 fix pt-10">
<nav class="breadcrumb-nav" aria-label="Navigation">
    <a href="{{ path('filiere_index') }}" class="breadcrumb-link">
        <i class="fas fa-arrow-left"></i>
        <span>Retour à la liste</span>
    </a>
</nav>

<div class="form-page">
    <div class="form-container">
        <div class="form-card">
            <!-- Header -->
            <div class="form-header">
                <div class="form-icon">
                    <i class="fas {{ edit ? 'fa-edit' : 'fa-plus-circle' }}"></i>
                </div>
                <h1 class="form-title">
                    {{ edit ? 'Modifier la filière' : 'Nouvelle filière' }}
                </h1>
                <p class="form-subtitle">
                    {{ edit ? 'Mettez à jour les informations' : 'Créez une nouvelle filière d\'études' }}
                </p>
            </div>

            <!-- Body -->
            <div class="form-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate', 'id': 'filiere-form'}}) }}

                <!-- Nom Field -->
                <div class="form-group" id="group-nom">
                    <label for="{{ form.nom.vars.id }}" class="form-label">
                        Nom de la filière
                    </label>
                    <div class="input-wrapper">
                        <i class="fas fa-graduation-cap input-icon"></i>
                        {{ form_widget(form.nom, {
                            'attr': {
                                'class': 'form-control-custom',
                                'placeholder': 'Ex: Sciences Mathématiques',
                                'minlength': '2',
                                'maxlength': '100',
                                'required': true,
                                'autocomplete': 'off',
                                'data-validator': 'nom'
                            }
                        }) }}
                        <i class="fas fa-check-circle success-icon"></i>
                    </div>
                    <div class="char-counter" id="counter-nom">0/100</div>
                    {{ form_errors(form.nom) }}
                </div>

                <!-- Niveau Field -->
                <div class="form-group" id="group-niveau">
                    <label for="{{ form.niveau.vars.id }}" class="form-label">
                        Niveau d'études
                    </label>
                    <div class="input-wrapper">
                        <i class="fas fa-layer-group input-icon"></i>
                        {{ form_widget(form.niveau, {
                            'attr': {
                                'class': 'form-control-custom',
                                'required': true,
                                'data-validator': 'niveau'
                            }
                        }) }}
                    </div>
                    {{ form_errors(form.niveau) }}
                </div>

                <!-- Actions -->
                <div class="btn-group">
                    <button type="submit" class="btn-primary-custom" id="submit-btn">
                        <span class="btn-text">
                            <i class="fas {{ edit ? 'fa-save' : 'fa-plus' }}"></i>
                            {{ edit ? 'Enregistrer les modifications' : 'Créer la filière' }}
                        </span>
                    </button>
                    
                    <a href="{{ path('filiere_index') }}" class="btn-secondary-custom">
                        <i class="fas fa-times"></i>
                        Annuler
                    </a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
</section>

<script>
    // === FORM INTERACTION MODULE ===
    const FormManager = {
        init() {
            this.setupValidation();
            this.setupCharacterCounter();
            this.setupAnimations();
            this.setupSubmitHandler();
        },

        setupValidation() {
            const inputs = document.querySelectorAll('.form-control-custom');
            
            inputs.forEach(input => {
                // Real-time validation
                input.addEventListener('input', () => this.validateField(input));
                input.addEventListener('blur', () => this.validateField(input, true));
                
                // Initial state check
                if (input.value) this.validateField(input);
            });
        },

        validateField(input, showError = false) {
            const group = input.closest('.form-group');
            const value = input.value.trim();
            const type = input.dataset.validator;
            let isValid = true;
            let message = '';

            // Validation rules
            if (type === 'nom') {
                if (value.length === 0) {
                    isValid = false;
                    message = 'Le nom est requis';
                } else if (value.length < 2) {
                    isValid = false;
                    message = 'Minimum 2 caractères';
                } else if (value.length > 100) {
                    isValid = false;
                    message = 'Maximum 100 caractères';
                }
            } else if (type === 'niveau') {
                if (!value) {
                    isValid = false;
                    message = 'Veuillez sélectionner un niveau';
                }
            }

            // Update UI
            group.classList.remove('has-error', 'has-success');
            
            // Remove existing error messages
            const existingError = group.querySelector('.error-message');
            if (existingError) existingError.remove();

            if (!isValid && showError) {
                group.classList.add('has-error');
                const errorDiv = document.createElement('div');
                errorDiv.className = 'error-message';
                errorDiv.innerHTML = `<i class="fas fa-exclamation-circle"></i> ${message}`;
                group.appendChild(errorDiv);
            } else if (isValid && value.length > 0) {
                group.classList.add('has-success');
            }

            return isValid;
        },

        setupCharacterCounter() {
            const nomInput = document.querySelector('[data-validator="nom"]');
            const counter = document.getElementById('counter-nom');
            
            if (nomInput && counter) {
                const updateCounter = () => {
                    const length = nomInput.value.length;
                    counter.textContent = `${length}/100`;
                    
                    if (length >= 90) {
                        counter.classList.add('warning');
                    } else {
                        counter.classList.remove('warning');
                    }
                };

                nomInput.addEventListener('input', updateCounter);
                updateCounter(); // Initial count
            }
        },

        setupAnimations() {
            // Stagger animation for form elements
            const groups = document.querySelectorAll('.form-group');
            groups.forEach((group, index) => {
                group.style.opacity = '0';
                group.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    group.style.transition = 'all 0.5s cubic-bezier(0.4, 0, 0.2, 1)';
                    group.style.opacity = '1';
                    group.style.transform = 'translateY(0)';
                }, 100 + (index * 100));
            });
        },

        setupSubmitHandler() {
            const form = document.getElementById('filiere-form');
            const submitBtn = document.getElementById('submit-btn');

            form.addEventListener('submit', (e) => {
                // Validate all fields
                const inputs = form.querySelectorAll('.form-control-custom');
                let isValid = true;

                inputs.forEach(input => {
                    if (!this.validateField(input, true)) {
                        isValid = false;
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    this.showToast('Veuillez corriger les erreurs', 'error');
                    
                    // Shake animation on first error
                    const firstError = form.querySelector('.has-error');
                    if (firstError) {
                        firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    }
                } else {
                    // Show loading state
                    submitBtn.classList.add('btn-loading');
                    submitBtn.innerHTML += '<span class="spinner"></span>';
                    submitBtn.disabled = true;
                }
            });
        },

        showToast(message, type = 'info') {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            toast.className = 'toast';
            
            const icons = {
                success: 'check-circle',
                error: 'exclamation-circle',
                info: 'info-circle'
            };
            
            const colors = {
                success: '#10b981',
                error: '#ef4444',
                info: '#3b82f6'
            };

            toast.style.borderLeftColor = colors[type];
            toast.innerHTML = `
                <i class="fas fa-${icons[type]}" style="color: ${colors[type]}; font-size: 1.125rem;"></i>
                <span style="font-weight: 500;">${message}</span>
            `;

            container.appendChild(toast);

            setTimeout(() => {
                toast.style.animation = 'slideInRight 0.4s cubic-bezier(0.4, 0, 0.2, 1) reverse forwards';
                setTimeout(() => toast.remove(), 400);
            }, 3000);
        }
    };

    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
        FormManager.init();
    });
</script>
