{% extends 'base.html.twig' %}

{% block title %}Mon Profil - BacLab{% endblock %}

{% block body %}
<div class="container" style="padding: 80px 20px;">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success" style="padding: 18px 22px; border-radius: 12px; margin-bottom: 25px; font-size: 17px; font-weight: 600; background: #f0fff4; color: #2f855a; border: 2px solid #9ae6b4;">
            <i class="fas fa-check-circle" style="margin-right: 10px;"></i>
            {{ message }}
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-12">
            <div style="background: linear-gradient(135deg, #667eea, #764ba2); padding: 40px; border-radius: 20px; color: white; margin-bottom: 40px; box-shadow: 0 10px 40px rgba(102, 126, 234, 0.3);">
                <h1 style="font-size: 42px; font-weight: 800; margin-bottom: 15px;">
                    <i class="fas fa-user-circle" style="margin-right: 15px;"></i>
                    Mon Profil
                </h1>
                <p style="font-size: 18px; opacity: 0.95; margin: 0;">
                    Gérez vos informations personnelles et vos préférences
                </p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div style="background: white; padding: 30px; border-radius: 15px; box-shadow: 0 5px 20px rgba(0,0,0,0.1); text-align: center;">
                <div style="width: 120px; height: 120px; background: linear-gradient(135deg, #667eea, #764ba2); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 20px; font-size: 50px; color: white; font-weight: 800;">
                    {% if profil %}
                        {{ profil.prenom|first|upper }}{{ profil.nom|first|upper }}
                    {% else %}
                        ??
                    {% endif %}
                </div>
                <h2 style="font-size: 28px; font-weight: 700; color: #1a202c; margin-bottom: 5px;">
                    {% if profil %}
                        {{ profil.prenom }} {{ profil.nom }}
                    {% else %}
                        Profil incomplet
                    {% endif %}
                </h2>
                <p style="color: #718096; font-size: 16px; margin-bottom: 20px;">
                    <i class="fas fa-envelope" style="margin-right: 8px;"></i>
                    {{ user.email }}
                </p>
                <a href="{{ path('app_profile_edit') }}" class="btn" style="display: inline-block; padding: 12px 30px; background: #667eea; color: white; text-decoration: none; border-radius: 10px; font-weight: 600;">
                    <i class="fas fa-edit" style="margin-right: 8px;"></i>
                    Modifier mon profil
                </a>
            </div>
        </div>

        <div class="col-md-8">
            <div style="background: white; padding: 30px; border-radius: 15px; box-shadow: 0 5px 20px rgba(0,0,0,0.1); margin-bottom: 20px;">
                <h3 style="font-size: 24px; font-weight: 700; color: #1a202c; margin-bottom: 25px; border-bottom: 3px solid #667eea; padding-bottom: 15px;">
                    <i class="fas fa-info-circle" style="color: #667eea; margin-right: 10px;"></i>
                    Informations Personnelles
                </h3>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div style="padding: 15px; background: #f8fafc; border-radius: 10px;">
                            <p style="font-size: 14px; color: #718096; margin-bottom: 5px; font-weight: 600;">Nom</p>
                            <p style="font-size: 18px; color: #1a202c; margin: 0; font-weight: 700;">
                                {% if profil %}{{ profil.nom }}{% else %}<span style="color: #a0aec0;">Non renseigné</span>{% endif %}
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div style="padding: 15px; background: #f8fafc; border-radius: 10px;">
                            <p style="font-size: 14px; color: #718096; margin-bottom: 5px; font-weight: 600;">Prénom</p>
                            <p style="font-size: 18px; color: #1a202c; margin: 0; font-weight: 700;">
                                {% if profil %}{{ profil.prenom }}{% else %}<span style="color: #a0aec0;">Non renseigné</span>{% endif %}
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div style="padding: 15px; background: #f8fafc; border-radius: 10px;">
                            <p style="font-size: 14px; color: #718096; margin-bottom: 5px; font-weight: 600;">Date de Naissance</p>
                            <p style="font-size: 18px; color: #1a202c; margin: 0; font-weight: 700;">
                                {% if profil and profil.dateNaissance %}
                                    {{ profil.dateNaissance|date('d/m/Y') }}
                                {% else %}
                                    <span style="color: #a0aec0;">Non renseignée</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div style="padding: 15px; background: #f8fafc; border-radius: 10px;">
                            <p style="font-size: 14px; color: #718096; margin-bottom: 5px; font-weight: 600;">Gouvernorat</p>
                            <p style="font-size: 18px; color: #1a202c; margin: 0; font-weight: 700;">
                                {% if profil %}{{ profil.gouvernorat }}{% else %}<span style="color: #a0aec0;">Non renseigné</span>{% endif %}
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div style="background: white; padding: 30px; border-radius: 15px; box-shadow: 0 5px 20px rgba(0,0,0,0.1);">
                <h3 style="font-size: 24px; font-weight: 700; color: #1a202c; margin-bottom: 25px; border-bottom: 3px solid #f093fb; padding-bottom: 15px;">
                    <i class="fas fa-graduation-cap" style="color: #f093fb; margin-right: 10px;"></i>
                    Parcours Scolaire
                </h3>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div style="padding: 15px; background: #f8fafc; border-radius: 10px;">
                            <p style="font-size: 14px; color: #718096; margin-bottom: 5px; font-weight: 600;">Niveau</p>
                            <p style="font-size: 18px; color: #1a202c; margin: 0; font-weight: 700;">
                                {% if profil %}{{ profil.niveau }}{% else %}<span style="color: #a0aec0;">Non renseigné</span>{% endif %}
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div style="padding: 15px; background: #f8fafc; border-radius: 10px;">
                            <p style="font-size: 14px; color: #718096; margin-bottom: 5px; font-weight: 600;">Filière</p>
                            <p style="font-size: 18px; color: #1a202c; margin: 0; font-weight: 700;">
                                {% if profil and profil.filiere %}
                                    {{ profil.filiere }}
                                {% else %}
                                    <span style="color: #a0aec0;">Non renseignée</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
