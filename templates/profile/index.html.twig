{% extends 'base.html.twig' %}

{% block title %}üéì Mon Profil - BacLab{% endblock %}

{% block body %}
<div class="profile-page">
    <!-- Force browser refresh -->
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    
    <!-- COSMIC BACKGROUND -->
    <div class="profile-cosmic-bg"></div>
    <div class="profile-stars" id="profileStars"></div>
    
    <!-- SUCCESS MESSAGES -->
    {% for message in app.flashes('success') %}
        <div class="success-notification">
            <i class="fas fa-check-circle"></i>
            <span>{{ message }}</span>
        </div>
    {% endfor %}

    <!-- MAIN PROFILE CONTAINER -->
    <div class="profile-container">
        <!-- PROFILE HEADER -->
        <div class="profile-header">
            <div class="profile-header-bg"></div>
            <div class="profile-header-content">
                <div class="profile-avatar">
                    <div class="avatar-content">
                        {% if profil and profil.profilePicture %}
                            <img src="{{ asset('front/assets/img/profile_pictures/' ~ profil.profilePicture) }}" alt="Photo de profil" class="profile-picture">
                        {% elseif profil %}
                            {{ profil.prenom|first|upper }}{{ profil.nom|first|upper }}
                        {% else %}
                            <i class="fas fa-user"></i>
                        {% endif %}
                    </div>
                </div>
                
                <div class="profile-info">
                    <h1 class="profile-name">
                        {% if profil %}
                            {{ profil.prenom }} {{ profil.nom }}
                        {% else %}
                            Profil Incomplet
                        {% endif %}
                    </h1>
                    <p class="profile-email">
                        <i class="fas fa-envelope"></i>
                        {{ user.email }}
                    </p>
                    <div class="profile-badges">
                        <span class="badge badge-student">
                            <i class="fas fa-graduation-cap"></i>
                            √âtudiant
                        </span>
                        {% if profil and profil.filiere %}
                            <span class="badge badge-filiere">
                                <i class="fas fa-flask"></i>
                                {{ profil.filiere }}
                            </span>
                        {% endif %}
                    </div>
                </div>
                
                <div class="profile-actions">
                    <a href="{{ path('app_profile_edit') }}" class="btn-edit-profile">
                        <i class="fas fa-edit"></i>
                        <span>Modifier</span>
                    </a>
                </div>
            </div>
        </div>
        <!-- PROFILE CONTENT -->
        <div class="profile-content">
            <!-- STATS CARDS -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <div class="stat-info">
                        <div class="stat-number">
                            {% if user.createdAt %}
                                {{ (date().diff(user.createdAt).days) }}
                            {% else %}
                                0
                            {% endif %}
                        </div>
                        <div class="stat-label">Jours avec nous</div>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-trophy"></i>
                    </div>
                    <div class="stat-info">
                        <div class="stat-number">0</div>
                        <div class="stat-label">Fiches cr√©√©es</div>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-heart"></i>
                    </div>
                    <div class="stat-info">
                        <div class="stat-number">0</div>
                        <div class="stat-label">Favoris</div>
                    </div>
                </div>
            </div>

            <!-- INFORMATION CARDS -->
            <div class="info-grid">
                <!-- PERSONAL INFO CARD -->
                <div class="info-card">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-user"></i>
                        </div>
                        <h3 class="card-title">Informations Personnelles</h3>
                    </div>
                    
                    <div class="card-content">
                        <div class="info-row">
                            <div class="info-item">
                                <div class="info-label">
                                    <i class="fas fa-signature"></i>
                                    Nom
                                </div>
                                <div class="info-value">
                                    {% if profil %}{{ profil.nom }}{% else %}<span class="empty-value">Non renseign√©</span>{% endif %}
                                </div>
                            </div>
                            
                            <div class="info-item">
                                <div class="info-label">
                                    <i class="fas fa-user-tag"></i>
                                    Pr√©nom
                                </div>
                                <div class="info-value">
                                    {% if profil %}{{ profil.prenom }}{% else %}<span class="empty-value">Non renseign√©</span>{% endif %}
                                </div>
                            </div>
                        </div>
                        
                        <div class="info-row">
                            <div class="info-item">
                                <div class="info-label">
                                    <i class="fas fa-birthday-cake"></i>
                                    Date de Naissance
                                </div>
                                <div class="info-value">
                                    {% if profil and profil.dateNaissance %}
                                        {{ profil.dateNaissance|date('d/m/Y') }}
                                    {% else %}
                                        <span class="empty-value">Non renseign√©e</span>
                                    {% endif %}
                                </div>
                            </div>
                            
                            <div class="info-item">
                                <div class="info-label">
                                    <i class="fas fa-map-marker-alt"></i>
                                    Gouvernorat
                                </div>
                                <div class="info-value">
                                    {% if profil %}{{ profil.gouvernorat }}{% else %}<span class="empty-value">Non renseign√©</span>{% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- ACADEMIC INFO CARD -->
                <div class="info-card">
                    <div class="card-header">
                        <div class="card-icon academic">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <h3 class="card-title">Parcours Acad√©mique</h3>
                    </div>
                    
                    <div class="card-content">
                        <div class="info-row">
                            <div class="info-item">
                                <div class="info-label">
                                    <i class="fas fa-layer-group"></i>
                                    Niveau
                                </div>
                                <div class="info-value">
                                    {% if profil %}{{ profil.niveau }}{% else %}<span class="empty-value">Non renseign√©</span>{% endif %}
                                </div>
                            </div>
                            
                            <div class="info-item">
                                <div class="info-label">
                                    <i class="fas fa-flask"></i>
                                    Fili√®re
                                </div>
                                <div class="info-value">
                                    {% if profil and profil.filiere %}
                                        {{ profil.filiere }}
                                    {% else %}
                                        <span class="empty-value">Non renseign√©e</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        
                        <div class="academic-progress">
                            <div class="progress-item">
                                <div class="progress-label">Progression BAC</div>
                                <div class="progress-bar">
                                    <div class="progress-fill" style="width: 65%"></div>
                                </div>
                                <div class="progress-percent">65%</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- QUICK ACTIONS -->
            <div class="quick-actions">
                <h3 class="actions-title">Actions Rapides</h3>
                <div class="actions-grid">
                    <a href="{{ path('app_profile_edit') }}" class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-edit"></i>
                        </div>
                        <div class="action-content">
                            <div class="action-title">Modifier Profil</div>
                            <div class="action-desc">Mettre √† jour vos informations</div>
                        </div>
                    </a>
                    
                    <a href="{{ path('fiche_index') }}" class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-file-alt"></i>
                        </div>
                        <div class="action-content">
                            <div class="action-title">Mes Fiches</div>
                            <div class="action-desc">G√©rer vos fiches de r√©vision</div>
                        </div>
                    </a>
                    
                    <a href="{{ path('app_dashboard') }}" class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <div class="action-content">
                            <div class="action-title">Tableau de Bord</div>
                            <div class="action-desc">Voir vos statistiques</div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
