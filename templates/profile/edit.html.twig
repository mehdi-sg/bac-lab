{% extends 'base.html.twig' %}

{% block title %}✏️ Modifier mon Profil - BacLab{% endblock %}

{% block body %}
<div class="edit-profile-page">
    <!-- COSMIC BACKGROUND -->
    <div class="edit-cosmic-bg"></div>
    <div class="edit-stars" id="editStars"></div>
    
    <!-- MAIN CONTAINER -->
    <div class="edit-container">
        <!-- HEADER -->
        <div class="edit-header">
            <div class="edit-header-content">
                <div class="edit-icon">
                    <i class="fas fa-user-edit"></i>
                </div>
                <div class="edit-title-section">
                    <h1 class="edit-title">Modifier mon Profil</h1>
                    <p class="edit-subtitle">Mettez à jour vos informations personnelles</p>
                </div>
                <a href="{{ path('app_profile') }}" class="btn-back">
                    <i class="fas fa-arrow-left"></i>
                    <span>Retour</span>
                </a>
            </div>
        </div>

        <!-- FORM CONTAINER -->
        <div class="form-container">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'editProfileForm', 'enctype': 'multipart/form-data'}}) }}
            
            <!-- PERSONAL INFO SECTION -->
            <div class="form-section">
                <div class="section-header">
                    <div class="section-icon">
                        <i class="fas fa-user"></i>
                    </div>
                    <h3 class="section-title">Informations Personnelles</h3>
                </div>
                
                <!-- Profile Picture Upload -->
                <div class="profile-picture-section">
                    <div class="current-picture">
                        {% if profil.profilePicture %}
                            <img src="{{ asset('front/assets/img/profile_pictures/' ~ profil.profilePicture) }}" alt="Photo de profil" class="current-avatar">
                        {% else %}
                            <div class="current-avatar-placeholder">
                                {{ profil.prenom|first|upper }}{{ profil.nom|first|upper }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="picture-upload">
                        <div class="form-group-edit">
                            <label class="form-label-edit">
                                <i class="fas fa-camera"></i>
                                Photo de profil
                            </label>
                            {{ form_widget(form.profilePictureFile, {
                                'attr': {
                                    'class': 'form-control-edit file-input',
                                    'accept': 'image/*'
                                }
                            }) }}
                            {{ form_errors(form.profilePictureFile) }}
                            <small class="form-text">Formats acceptés: JPEG, PNG, GIF, WebP (max 5MB)</small>
                        </div>
                    </div>
                </div>
                
                <div class="form-grid">
                    <div class="form-group-edit">
                        <label class="form-label-edit">
                            <i class="fas fa-signature"></i>
                            Nom
                        </label>
                        {{ form_widget(form.nom, {
                            'attr': {
                                'class': 'form-control-edit',
                                'placeholder': 'Votre nom de famille'
                            }
                        }) }}
                        {{ form_errors(form.nom) }}
                    </div>
                    
                    <div class="form-group-edit">
                        <label class="form-label-edit">
                            <i class="fas fa-user-tag"></i>
                            Prénom
                        </label>
                        {{ form_widget(form.prenom, {
                            'attr': {
                                'class': 'form-control-edit',
                                'placeholder': 'Votre prénom'
                            }
                        }) }}
                        {{ form_errors(form.prenom) }}
                    </div>
                    
                    <div class="form-group-edit">
                        <label class="form-label-edit">
                            <i class="fas fa-birthday-cake"></i>
                            Date de Naissance
                        </label>
                        {{ form_widget(form.dateNaissance, {
                            'attr': {
                                'class': 'form-control-edit'
                            }
                        }) }}
                        {{ form_errors(form.dateNaissance) }}
                    </div>
                    
                    <div class="form-group-edit">
                        <label class="form-label-edit">
                            <i class="fas fa-map-marker-alt"></i>
                            Gouvernorat
                        </label>
                        {{ form_widget(form.gouvernorat, {
                            'attr': {
                                'class': 'form-select-edit'
                            }
                        }) }}
                        {{ form_errors(form.gouvernorat) }}
                    </div>
                </div>
            </div>

            <!-- ACADEMIC INFO SECTION -->
            <div class="form-section">
                <div class="section-header">
                    <div class="section-icon academic">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <h3 class="section-title">Parcours Académique</h3>
                </div>
                
                <div class="form-grid">
                    <div class="form-group-edit">
                        <label class="form-label-edit">
                            <i class="fas fa-layer-group"></i>
                            Niveau
                        </label>
                        {{ form_widget(form.niveau, {
                            'attr': {
                                'class': 'form-select-edit'
                            }
                        }) }}
                        {{ form_errors(form.niveau) }}
                    </div>
                    
                    <div class="form-group-edit">
                        <label class="form-label-edit">
                            <i class="fas fa-flask"></i>
                            Filière
                        </label>
                        {{ form_widget(form.filiere, {
                            'attr': {
                                'class': 'form-select-edit'
                            }
                        }) }}
                        {{ form_errors(form.filiere) }}
                    </div>
                </div>
            </div>

            <!-- FORM ACTIONS -->
            <div class="form-actions">
                <button type="submit" class="btn-save">
                    <i class="fas fa-save"></i>
                    <span>Enregistrer les Modifications</span>
                </button>
                
                <a href="{{ path('app_profile') }}" class="btn-cancel">
                    <i class="fas fa-times"></i>
                    <span>Annuler</span>
                </a>
            </div>
            
            {{ form_end(form) }}
        </div>

        <!-- DANGER ZONE -->
        <div class="danger-zone">
            <div class="danger-header">
                <div class="danger-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <h3 class="danger-title">Zone de Danger</h3>
            </div>
            
            <div class="danger-actions">
                <a href="{{ path('app_profile_disable_confirm', {'token': disableToken}) }}" class="btn-danger disable">
                    <i class="fas fa-user-slash"></i>
                    <span>Désactiver mon Compte</span>
                </a>
                
                <a href="{{ path('app_profile_delete_confirm', {'token': deleteToken}) }}" class="btn-danger delete">
                    <i class="fas fa-trash-alt"></i>
                    <span>Supprimer mon Compte</span>
                </a>
            </div>
        </div>
    </div>
</div>

