        /* Logo */
        .logo img {
            filter: brightness(1.2);
        }

        body {
            background: #f7fafc;
            padding-top: 100px; /* Ajouter un padding global */
        }

        .slider-area {
            display: none;
        }
        .result-container {
            max-width: 800px;
            margin: 50px auto;
            padding: 0 15px;
        }

        .result-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .result-icon {
            font-size: 80px;
            margin-bottom: 20px;
            animation: bounceIn 0.6s;
        }

        @keyframes bounceIn {
            0% { transform: scale(0); opacity: 0; }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); opacity: 1; }
        }

        .result-title {
            font-size: 32px;
            font-weight: 700;
            margin-bottom: 10px;
            color: #2d3748;
        }

        .result-message {
            font-size: 18px;
            color: #718096;
        }

        .score-card {
            background: white;
            border-radius: 20px;
            padding: 50px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            text-align: center;
        }

        .score-circle {
            width: 200px;
            height: 200px;
            margin: 0 auto 30px;
            position: relative;
        }

        .score-progress {
            width: 100%;
            height: 100%;
        }

        .score-value {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 48px;
            font-weight: 700;
            color: #2d3748;
        }

        .score-label {
            font-size: 16px;
            color: #718096;
            margin-top: 10px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 40px;
        }

        .stat-item {
            background: #f7fafc;
            padding: 25px;
            border-radius: 15px;
            text-align: center;
            border: 2px solid #e2e8f0;
        }

        .stat-value {
            font-size: 36px;
            font-weight: 700;
            margin-bottom: 5px;
        }

        .stat-value.correct {
            color: #48bb78;
        }

        .stat-value.incorrect {
            color: #f56565;
        }

        .stat-value.total {
            color: #667eea;
        }

        .stat-label {
            font-size: 14px;
            color: #718096;
            font-weight: 500;
        }

        .performance-message {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            border-radius: 15px;
            margin: 30px 0;
            text-align: center;
        }

        .performance-message.excellent {
            background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
        }

        .performance-message.good {
            background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);
        }

        .performance-message.average {
            background: linear-gradient(135deg, #ed8936 0%, #dd6b20 100%);
        }

        .performance-message.poor {
            background: linear-gradient(135deg, #f56565 0%, #e53e3e 100%);
        }

        .performance-message h3 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .performance-message p {
            font-size: 16px;
            opacity: 0.95;
            margin: 0;
        }

        .action-buttons {
            display: flex;
            gap: 15px;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 40px;
        }

        .btn-action {
            padding: 15px 35px;
            border-radius: 30px;
            border: none;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
            color: white;
        }

        .btn-secondary {
            background: white;
            color: #667eea;
            border: 2px solid #667eea;
        }

        .btn-secondary:hover {
            background: #667eea;
            color: white;
        }

        .btn-success {
            background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
            color: white;
        }

        .btn-success:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(72, 187, 120, 0.3);
            color: white;
        }

        .progress-bar-circular {
            transform: rotate(-90deg);
        }

        .progress-bar-circular circle {
            fill: none;
            stroke-width: 10;
            stroke-linecap: round;
            transition: stroke-dashoffset 1s ease;
        }

        .progress-bg {
            stroke: #e2e8f0;
        }

        .progress-fill {
            stroke: url(#gradient);
        }

        .share-section {
            background: #f7fafc;
            padding: 30px;
            border-radius: 15px;
            margin-top: 30px;
            text-align: center;
        }

        .share-section h4 {
            margin-bottom: 20px;
            color: #2d3748;
        }

        .share-buttons {
            display: flex;
            gap: 15px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn-share {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            border: none;
            cursor: pointer;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            color: white;
        }

        .btn-share.facebook {
            background: #1877f2;
        }

        .btn-share.twitter {
            background: #1da1f2;
        }

        .btn-share.whatsapp {
            background: #25d366;
        }

        .btn-share.linkedin {
            background: #0077b5;
        }

        .btn-share:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

        @media (max-width: 768px) {
            .score-card {
                padding: 30px 20px;
            }

            .score-circle {
                width: 150px;
                height: 150px;
            }

            .score-value {
                font-size: 36px;
            }

            .result-title {
                font-size: 24px;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
{% endblock %}

