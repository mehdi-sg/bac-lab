    <!-- Carte de score -->
    <div class="score-card">
        <div class="score-circle">
            <svg class="score-progress" viewBox="0 0 200 200">
                <defs>
                    <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
