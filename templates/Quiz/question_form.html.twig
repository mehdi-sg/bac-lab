{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function () {
    // Gestion du type de question pour soumettre le formulaire automatiquement
    const typeQuestionSelect = document.querySelector('select[name*="typeQuestion"]');
    const form = document.querySelector('form');
    
    if (typeQuestionSelect && form) {
        typeQuestionSelect.addEventListener('change', function() {
            // Soumettre le formulaire pour mettre à jour les choix
            form.submit();
        });
    }
    
    // Gestion VRAI/FAUX
    const vfOptions = document.querySelectorAll('.vf-option');
    vfOptions.forEach(function (option) {
        option.addEventListener('click', function () {
            vfOptions.forEach(function (opt) {
                opt.classList.remove('selected-vrai', 'selected-faux');
            });
            const radio = this.querySelector('input[type="radio"]');
            if (radio) {
                radio.checked = true;
                this.classList.add(radio.value === '0' ? 'selected-vrai' : 'selected-faux');
            }
        });
    });

    vfOptions.forEach(function (option) {
        const radio = option.querySelector('input[type="radio"]');
        if (radio && radio.checked) {
            option.classList.add(radio.value === '0' ? 'selected-vrai' : 'selected-faux');
        }
    });

    // Validation du formulaire avant soumission
    const saveButton = document.querySelector('button[name="action"][value="save"]');
    if (saveButton && form) {
        saveButton.addEventListener('click', function(e) {
            const typeQuestion = typeQuestionSelect ? typeQuestionSelect.value : '';
            
            if (typeQuestion === 'VRAI_FAUX') {
                const vfSelected = document.querySelector('input[name="choix_correct_vf"]:checked');
                if (!vfSelected) {
                    e.preventDefault();
                    alert('Veuillez sélectionner la réponse correcte (Vrai ou Faux).');
                    return false;
                }
            } else if (typeQuestion === 'QCM') {
                const choiceInputs = document.querySelectorAll('.choice-row input[type="text"]');
                const correctCheckboxes = document.querySelectorAll('.choice-row input[type="checkbox"]:checked');
                
                let hasText = false;
                choiceInputs.forEach(function(input) {
                    if (input.value.trim() !== '') {
                        hasText = true;
                    }
                });
                
                if (!hasText) {
                    e.preventDefault();
                    alert('Veuillez saisir au moins une réponse.');
                    return false;
                }
                
                if (correctCheckboxes.length === 0) {
                    e.preventDefault();
                    alert('Veuillez sélectionner au moins une réponse correcte.');
                    return false;
                }
            }
            
            return true;
        });
    }
});
</script>
