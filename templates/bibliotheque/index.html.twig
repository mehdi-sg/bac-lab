            background-size: 200% 100%;
            animation: gradientSlide 3s linear infinite;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .resource-card:hover::before {
            opacity: 1;
        }

        @keyframes gradientSlide {
            0% { background-position: 0% 0%; }
            100% { background-position: 200% 0%; }
        }

        .resource-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 25px 60px rgba(233, 69, 96, 0.15);
        }

        .card-header {
            padding: 30px 30px 20px;
            position: relative;
        }

        .card-type-badge {
            position: absolute;
            top: 20px;
            right: 20px;
            padding: 8px 16px;
            border-radius: 50px;
            font-size: 12px;
            font-weight: 700;
            text-transform: uppercase;
        }

        .card-type-badge.pdf {
            background: linear-gradient(135deg, #ffeaa7 0%, #fdcb6e 100%);
            color: #d63031;
        }

        .card-type-badge.video {
            background: linear-gradient(135deg, #a29bfe 0%, #6c5ce7 100%);
            color: white;
        }

        .card-type-badge.lien {
            background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
            color: white;
        }

        .card-icon {
            width: 70px;
            height: 70px;
            border-radius: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 32px;
            margin-bottom: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .card-icon.pdf {
            background: linear-gradient(135deg, #ffeaa7 0%, #fdcb6e 100%);
        }

        .card-icon.video {
            background: linear-gradient(135deg, #a29bfe 0%, #6c5ce7 100%);
        }

        .card-icon.lien {
            background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: #1a1a2e;
            margin-bottom: 12px;
            line-height: 1.4;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .card-meta {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 13px;
            color: #6c757d;
        }

        .meta-item i {
            color: #ffc107;
        }

        .card-body {
            padding: 20px 30px;
            border-top: 1px solid #f0f0f0;
        }

        .card-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin-bottom: 20px;
        }

        .card-tag {
            padding: 6px 14px;
            background: #f8f9fa;
            border-radius: 8px;
            font-size: 12px;
            color: #495057;
            font-weight: 500;
        }

        .card-actions {
            display: flex;
            gap: 12px;
        }

        .btn-card {
            flex: 1;
            padding: 14px 20px;
            border-radius: 12px;
            font-size: 14px;
            font-weight: 700;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .btn-card-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
        }

        .btn-card-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(233, 69, 96, 0.3);
            color: white;
        }

        .btn-card-secondary {
            background: white;
            color: #495057;
            border: 3px solid #f0f0f0;
        }

        .btn-card-secondary:hover {
            border-color: #667eea;
            color: #667eea;
        }

        /* ===== EMPTY STATE ===== */
        .empty-state {
            text-align: center;
            padding: 80px 40px;
            background: white;
            border-radius: 24px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        }

        .empty-icon {
            width: 120px;
            height: 120px;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 30px;
            font-size: 60px;
        }

        .empty-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1a1a2e;
            margin-bottom: 15px;
        }

        .empty-text {
            color: #6c757d;
            margin-bottom: 30px;
        }

        /* ===== STATS BAR ===== */
        .stats-bar {
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 40px;
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            gap: 30px;
        }

        .stat-item {
            text-align: center;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 800;
            color: white;
            margin-bottom: 5px;
        }

        .stat-label {
            font-size: 14px;
            color: rgba(255,255,255,0.7);
            font-weight: 500;
        }

        /* ===== CATEGORY PILLS ===== */
        .category-pills {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
            margin-bottom: 30px;
        }

        .category-pill {
            padding: 12px 24px;
            background: white;
            border: 3px solid #f0f0f0;
            border-radius: 50px;
            font-size: 14px;
            font-weight: 600;
            color: #495057;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .category-pill:hover, .category-pill.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-color: transparent;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(233, 69, 96, 0.3);
        }

        /* ===== RESPONSIVE ===== */
        @media (max-width: 992px) {
            .hero-title {
                font-size: 2.25rem;
            }
            
            .search-card {
                margin-top: -40px;
                padding: 30px;
            }
            
            .resource-grid {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .bibliotheque-hero {
                padding: 60px 0 100px;
            }
            
            .hero-title {
                font-size: 1.75rem;
            }
            
            .section-header {
                flex-direction: column;
                align-items: flex-start;
            }
            
            .stats-bar {
                flex-direction: column;
                gap: 20px;
            }
            
            .stat-item {
                padding: 15px 0;
                border-bottom: 1px solid rgba(255,255,255,0.1);
            }
            
            .stat-item:last-child {
                border-bottom: none;
            }
        }

        /* ===== ANIMATIONS ===== */
        .fade-in-up {
            animation: fadeInUp 0.6s ease forwards;
            opacity: 0;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .resource-card:nth-child(1) { animation-delay: 0.1s; }
        .resource-card:nth-child(2) { animation-delay: 0.2s; }
        .resource-card:nth-child(3) { animation-delay: 0.3s; }
        .resource-card:nth-child(4) { animation-delay: 0.4s; }
        .resource-card:nth-child(5) { animation-delay: 0.5s; }
        .resource-card:nth-child(6) { animation-delay: 0.6s; }
    </style>
{% endblock %}

