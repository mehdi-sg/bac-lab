{% extends 'base.html.twig' %}

{% block title %}{{ ressource.titre }} | BacLab{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        .resource-detail-container {
            padding: 40px 20px;
            background: #f8f9fa;
            min-height: 100vh;
            margin-top: 80px;
        }
        
        .resource-header {
            background: white;
            border-radius: 16px;
            padding: 40px;
            margin-bottom: 30px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        }
        
        .resource-title {
            font-size: 2rem;
            font-weight: 700;
            color: #2d3436;
            margin-bottom: 16px;
        }
        
        .resource-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-bottom: 20px;
            padding-bottom: 20px;
            border-bottom: 2px solid #f0f0f0;
        }
        
        .meta-item {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #636e72;
            font-size: 0.95rem;
        }
        
        .meta-item i {
            color: #667eea;
        }
        
        .resource-stats {
            display: flex;
            gap: 30px;
            margin-bottom: 20px;
        }
        
        .stat-item {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 1rem;
        }
        
        .stat-value {
            font-weight: 700;
            color: #2d3436;
        }
        
        .rating-display {
            display: flex;
            align-items: center;
            gap: 12px;
        }
        
        .stars-large {
            color: #fdcb6e;
            font-size: 1.5rem;
        }
        
        .rating-text {
            font-size: 1.2rem;
            font-weight: 700;
            color: #2d3436;
        }
        
        .resource-actions {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
        }
        
        .btn-primary-custom {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 14px 28px;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            border: none;
            transition: all 0.3s;
        }
        
        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
            color: white;
        }
        
        .btn-secondary-custom {
            background: white;
            color: #667eea;
            padding: 14px 28px;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            border: 2px solid #667eea;
            transition: all 0.3s;
        }
        
        .btn-secondary-custom:hover {
            background: #667eea;
            color: white;
        }
        
        .content-section {
            background: white;
            border-radius: 16px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        }
        
        .section-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: #2d3436;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 12px;
        }
        
        .section-title i {
            color: #667eea;
        }
        
        /* Evaluation Form */
        .evaluation-form {
            background: linear-gradient(135deg, #f8f9ff, #fff5f5);
            padding: 30px;
            border-radius: 12px;
            margin-bottom: 30px;
        }
        
        .star-rating-input {
            display: flex;
            gap: 8px;
            margin-bottom: 20px;
        }
        
        .star-rating-input input[type="radio"] {
            display: none;
        }
        
        .star-rating-input label {
            cursor: pointer;
            font-size: 2rem;
            color: #dfe6e9;
            transition: all 0.2s;
        }
        
        .star-rating-input input[type="radio"]:checked ~ label,
        .star-rating-input label:hover,
        .star-rating-input label:hover ~ label {
            color: #fdcb6e;
        }
        
        .comment-textarea {
            width: 100%;
            padding: 14px;
            border: 2px solid #e8e8e8;
            border-radius: 12px;
            font-size: 1rem;
            resize: vertical;
            min-height: 100px;
            margin-bottom: 16px;
        }
        
        .comment-textarea:focus {
            border-color: #667eea;
            outline: none;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }
        
        /* Comments List */
        .comment-item {
            padding: 20px;
            background: #f8f9fa;
            border-radius: 12px;
            margin-bottom: 16px;
        }
        
        .comment-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 12px;
        }
        
        .comment-author {
            display: flex;
            align-items: center;
            gap: 12px;
        }
        
        .author-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
        }
        
        .author-info h4 {
            margin: 0;
            font-size: 0.95rem;
            font-weight: 600;
            color: #2d3436;
        }
        
        .author-info p {
            margin: 0;
            font-size: 0.8rem;
            color: #636e72;
        }
        
        .comment-rating {
            color: #fdcb6e;
        }
        
        .comment-text {
            color: #2d3436;
            line-height: 1.6;
            margin: 0;
        }
        
        .empty-state {
            text-align: center;
            padding: 40px;
            color: #636e72;
        }
        
        .empty-state i {
            font-size: 3rem;
            color: #dfe6e9;
            margin-bottom: 16px;
        }
        
        .tags-list {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin-top: 16px;
        }
        
        .tag-badge {
            padding: 6px 14px;
            background: #e8eaff;
            color: #667eea;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
        }
    </style>
{% endblock %}

{% block body %}
<div class="resource-detail-container">
    <div class="container">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <a href="{{ path('app_bibliotheque_index') }}" class="btn btn-link mb-3">
            <i class="fas fa-arrow-left me-2"></i>Retour à la bibliothèque
        </a>

        <!-- Resource Header -->
        <div class="resource-header">
            <h1 class="resource-title">{{ ressource.titre }}</h1>
            
            <div class="resource-meta">
                <div class="meta-item">
                    <i class="fas fa-file"></i>
                    <span>{{ ressource.typeFichier }}</span>
                </div>
                {% if ressource.categorie %}
                <div class="meta-item">
                    <i class="fas fa-tag"></i>
                    <span>{{ ressource.categorie }}</span>
                </div>
                {% endif %}
                {% if ressource.auteur %}
                <div class="meta-item">
                    <i class="fas fa-user"></i>
                    <span>{{ ressource.auteur }}</span>
                </div>
                {% endif %}
                <div class="meta-item">
                    <i class="fas fa-calendar"></i>
                    <span>{{ ressource.dateAjout|date('d/m/Y') }}</span>
                </div>
            </div>
            
            <div class="resource-stats">
                <div class="stat-item">
                    <i class="fas fa-eye" style="color: #0984e3;"></i>
                    <span class="stat-value">{{ ressource.nombreVues }}</span>
                    <span>vues</span>
                </div>
                <div class="stat-item">
                    <i class="fas fa-download" style="color: #00b894;"></i>
                    <span class="stat-value">{{ ressource.nombreTelechargements }}</span>
                    <span>téléchargements</span>
                </div>
                <div class="rating-display">
                    <span class="stars-large">
                        {% set avgRating = ressource.noteMoyenne|number_format(0) %}
                        {% for i in 1..5 %}
                            <i class="fas fa-star{{ i <= avgRating ? '' : '-o' }}"></i>
                        {% endfor %}
                    </span>
                    <span class="rating-text">{{ ressource.noteMoyenne }}/5</span>
                    <span class="text-muted">({{ ressource.getRatings()|length }} avis)</span>
                </div>
            </div>

            {% if ressource.imageCouverture %}
                <img src="{{ ressource.imageCouverture }}" class="img-fluid rounded mb-3" alt="cover" style="max-height: 300px;">
            {% endif %}

            {% if ressource.description %}
                <p style="color: #636e72; line-height: 1.6; margin-bottom: 20px;">{{ ressource.description }}</p>
            {% endif %}

            {% if ressource.tags %}
                <div class="tags-list">
                    {% for tag in ressource.tags|split(',') %}
                        <span class="tag-badge">{{ tag|trim }}</span>
                    {% endfor %}
                </div>
            {% endif %}

            <div class="resource-actions mt-4">
                {% if is_granted('ROLE_USER') %}
                    <a href="{{ path('app_bibliotheque_telecharger', {id: ressource.id}) }}" class="btn-primary-custom">
                        <i class="fas fa-download"></i>
                        Télécharger / Ouvrir
                    </a>
                {% else %}
                    <a href="{{ path('app_register') }}" class="btn-primary-custom">
                        <i class="fas fa-lock"></i>
                        S'inscrire pour télécharger
                    </a>
                {% endif %}
            </div>
        </div>

        <!-- Evaluation Section -->
        <div class="content-section">
            <h2 class="section-title">
                <i class="fas fa-star"></i>
                Évaluations et Commentaires
            </h2>

            {% if is_granted('ROLE_USER') %}
                {% set userEvaluation = null %}
                {% for eval in ressource.evaluations %}
                    {% if eval.utilisateur == app.user %}
                        {% set userEvaluation = eval %}
                    {% endif %}
                {% endfor %}

                {% if userEvaluation %}
                    <!-- User's existing evaluation -->
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Vous avez déjà évalué cette ressource. 
                        <a href="{{ path('app_evaluation_edit', {id: userEvaluation.id}) }}">Modifier mon évaluation</a>
                    </div>
                {% else %}
                    <!-- Evaluation Form -->
                    <div class="evaluation-form">
                        <h3 style="font-size: 1.1rem; font-weight: 600; margin-bottom: 16px;">
                            <i class="fas fa-pen me-2"></i>Donnez votre avis
                        </h3>
                        
                        <form method="post" action="{{ path('app_evaluation_create', {id: ressource.id}) }}">
                            <div class="mb-3">
                                <label style="font-weight: 600; margin-bottom: 8px; display: block;">Votre note</label>
                                <div class="star-rating-input">
                                    <input type="radio" name="note" value="5" id="star5" required>
                                    <label for="star5"><i class="fas fa-star"></i></label>
                                    <input type="radio" name="note" value="4" id="star4">
                                    <label for="star4"><i class="fas fa-star"></i></label>
                                    <input type="radio" name="note" value="3" id="star3">
                                    <label for="star3"><i class="fas fa-star"></i></label>
                                    <input type="radio" name="note" value="2" id="star2">
                                    <label for="star2"><i class="fas fa-star"></i></label>
                                    <input type="radio" name="note" value="1" id="star1">
                                    <label for="star1"><i class="fas fa-star"></i></label>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label for="commentaire" style="font-weight: 600; margin-bottom: 8px; display: block;">
                                    Votre commentaire (optionnel)
                                </label>
                                <textarea 
                                    name="commentaire" 
                                    id="commentaire" 
                                    class="comment-textarea"
                                    placeholder="Partagez votre expérience avec cette ressource..."
                                ></textarea>
                            </div>
                            
                            <button type="submit" class="btn-primary-custom">
                                <i class="fas fa-paper-plane"></i>
                                Publier mon évaluation
                            </button>
                        </form>
                    </div>
                {% endif %}
            {% else %}
                <div class="alert alert-warning">
                    <i class="fas fa-lock me-2"></i>
                    <a href="{{ path('app_login') }}">Connectez-vous</a> pour évaluer cette ressource.
                </div>
            {% endif %}

            <!-- Comments List -->
            <h3 style="font-size: 1.1rem; font-weight: 600; margin: 30px 0 20px;">
                Avis de la communauté ({{ ressource.getComments()|length }})
            </h3>

            {% set comments = ressource.getComments() %}
            {% if comments|length > 0 %}
                {% for evaluation in comments %}
                    <div class="comment-item">
                        <div class="comment-header">
                            <div class="comment-author">
                                <div class="author-avatar">
                                    {{ evaluation.utilisateur.email|slice(0, 1)|upper }}
                                </div>
                                <div class="author-info">
                                    <h4>{{ evaluation.utilisateur.email|split('@')[0] }}</h4>
                                    <p>{{ evaluation.dateCommentaire|date('d/m/Y à H:i') }}</p>
                                </div>
                            </div>
                            {% if evaluation.note %}
                                <div class="comment-rating">
                                    {% for i in 1..5 %}
                                        <i class="fas fa-star{{ i <= evaluation.note ? '' : '-o' }}"></i>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                        <p class="comment-text">{{ evaluation.commentaire }}</p>
                    </div>
                {% endfor %}
            {% else %}
                <div class="empty-state">
                    <i class="fas fa-comments"></i>
                    <p>Aucun commentaire pour le moment. Soyez le premier à donner votre avis !</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<script>
// Star rating interaction
document.querySelectorAll('.star-rating-input label').forEach(label => {
    label.addEventListener('mouseover', function() {
        const input = document.getElementById(this.getAttribute('for'));
        const value = input.value;
        
        document.querySelectorAll('.star-rating-input label').forEach(l => {
            const lInput = document.getElementById(l.getAttribute('for'));
            if (lInput.value >= value) {
                l.style.color = '#fdcb6e';
            } else {
                l.style.color = '#dfe6e9';
            }
        });
    });
});

document.querySelector('.star-rating-input').addEventListener('mouseout', function() {
    const checked = document.querySelector('.star-rating-input input:checked');
    if (checked) {
        const value = checked.value;
        document.querySelectorAll('.star-rating-input label').forEach(l => {
            const lInput = document.getElementById(l.getAttribute('for'));
            if (lInput.value >= value) {
                l.style.color = '#fdcb6e';
            } else {
                l.style.color = '#dfe6e9';
            }
        });
    } else {
        document.querySelectorAll('.star-rating-input label').forEach(l => {
            l.style.color = '#dfe6e9';
        });
    }
});
</script>
{% endblock %}
