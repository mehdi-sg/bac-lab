{% extends 'back_base.html.twig' %}

{% block title %}Nouveau Chapitre | BacLab Admin{% endblock %}

{% block body %}
<style>
    :root {
        --primary: #f59e0b;
        --glass: rgba(255, 255, 255, 0.9);
    }

    /* BACKGROUND MODERNE MESH GRADIENT */
    .page-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        position: relative;
        background-color: #f1f5f9;
        background-image: 
            radial-gradient(at 0% 0%, rgba(245, 158, 11, 0.15) 0px, transparent 50%),
            radial-gradient(at 100% 0%, rgba(59, 130, 246, 0.1) 0px, transparent 50%),
            radial-gradient(at 100% 100%, rgba(245, 158, 11, 0.15) 0px, transparent 50%),
            radial-gradient(at 0% 100%, rgba(59, 130, 246, 0.1) 0px, transparent 50%);
        overflow: hidden;
    }

    /* Formulaire en "Verre" */
    .glass-card {
        width: 100%;
        max-width: 700px;
        background: var(--glass);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-radius: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.7);
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.1);
        padding: 3rem;
        z-index: 1;
        animation: fadeIn 0.8s ease-out;
    }

    @keyframes fadeIn { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }

    .header-section { text-align: center; margin-bottom: 3rem; }
    .badge-new { 
        background: #fef3c7; color: #d97706; padding: 0.5rem 1rem; 
        border-radius: 50px; font-size: 0.75rem; font-weight: 800; text-transform: uppercase;
        display: inline-block; margin-bottom: 1rem;
    }

    .form-label { font-weight: 700; color: #334155; margin-bottom: 0.6rem; display: block; font-size: 0.9rem; }
    
    .input-wrapper { position: relative; margin-bottom: 1.5rem; }
    
    .custom-input {
        width: 100%; padding: 1rem 1rem 1rem 3rem; border-radius: 1rem;
        border: 1px solid #e2e8f0; background: rgba(255, 255, 255, 0.5);
        transition: 0.3s; font-size: 1rem;
    }

    .custom-input:focus {
        outline: none; border-color: var(--primary); background: white;
        box-shadow: 0 0 0 4px rgba(245, 158, 11, 0.1);
    }

    .input-wrapper i { position: absolute; left: 1.1rem; top: 50%; transform: translateY(-50%); color: #94a3b8; }

    .btn-create {
        width: 100%; padding: 1.2rem; border-radius: 1rem; border: none;
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        color: white; font-weight: 700; cursor: pointer; transition: 0.3s;
        box-shadow: 0 10px 15px -3px rgba(245, 158, 11, 0.4);
        margin-top: 1.5rem;
    }

    .btn-create:hover { transform: translateY(-2px); box-shadow: 0 20px 25px -5px rgba(245, 158, 11, 0.5); }
</style>

<div class="page-container">
    <div class="glass-card">
        <div class="header-section">
            <span class="badge-new">Workspace</span>
            <h1 style="color: #1e293b; font-weight: 800; margin: 0;">Nouveau Chapitre</h1>
            <p style="color: #64748b; margin-top: 0.5rem;">Donnez vie à vos idées pédagogiques</p>
        </div>

        {{ form_start(form) }}
            <label class="form-label">Titre du chapitre</label>
            <div class="input-wrapper">
                <i class="fas fa-heading"></i>
                {{ form_widget(form.titre, {'attr': {'class': 'custom-input', 'placeholder': 'Ex: Introduction à l\'Algèbre'}}) }}
            </div>

            <div style="display: grid; grid-template-columns: 1.5fr 1fr; gap: 1rem;">
                <div>
                    <label class="form-label">Matière</label>
                    <div class="input-wrapper">
                        <i class="fas fa-book"></i>
                        {{ form_widget(form.matiere, {'attr': {'class': 'custom-input'}}) }}
                    </div>
                </div>
                <div>
                    <label class="form-label">Ordre</label>
                    <div class="input-wrapper">
                        <i class="fas fa-sort-numeric-down"></i>
                        {{ form_widget(form.ordre, {'attr': {'class': 'custom-input'}}) }}
                    </div>
                </div>
            </div>

            <label class="form-label">Contenu</label>
            <div class="input-wrapper">
                {{ form_widget(form.contenu, {'attr': {'class': 'custom-input', 'style': 'height: 120px; resize: none; padding-left: 1rem;'}}) }}
            </div>

            <button type="submit" class="btn-create">Publier le chapitre</button>
            <a href="{{ path('chapitre_index') }}" style="display: block; text-align: center; margin-top: 1.5rem; color: #94a3b8; text-decoration: none; font-size: 0.9rem; font-weight: 600;">Annuler l'opération</a>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}