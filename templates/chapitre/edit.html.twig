{% extends 'base.html.twig' %}

{% block title %}Modifier Chapitre{% endblock %}

{% block body %}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: #f8fafc;
        color: #1e293b;
    }

    /* Topbar */
    .topbar {
        background: white;
        border-bottom: 1px solid #e2e8f0;
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .brand-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
    }

    .brand-text h1 {
        font-size: 1.125rem;
        font-weight: 700;
        color: #1e293b;
    }

    /* Main */
    .main {
        max-width: 720px;
        margin: 2rem auto;
        padding: 0 1.5rem;
    }

    /* Form Card */
    .form-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05), 0 10px 15px -3px rgba(0,0,0,0.05);
        overflow: hidden;
    }

    .form-header {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        padding: 2rem;
        text-align: center;
        color: white;
    }

    .form-icon {
        width: 56px;
        height: 56px;
        background: rgba(255,255,255,0.2);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
        font-size: 1.5rem;
    }

    .form-title {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 0.25rem;
    }

    .form-subtitle {
        font-size: 0.875rem;
        opacity: 0.9;
    }

    .form-body {
        padding: 1.5rem;
    }

    /* Form Groups */
    .form-group {
        margin-bottom: 1.25rem;
    }

    .form-label {
        display: block;
        font-size: 0.8125rem;
        font-weight: 600;
        color: #374151;
        margin-bottom: 0.375rem;
        text-transform: uppercase;
        letter-spacing: 0.025em;
    }

    .input-wrap {
        position: relative;
    }

    .form-input {
        width: 100%;
        padding: 0.75rem 1rem 0.75rem 2.5rem;
        border: 2px solid #e5e7eb;
        border-radius: 8px;
        font-size: 0.9375rem;
        transition: all 0.2s;
        background: #f9fafb;
    }

    .form-input:focus {
        outline: none;
        border-color: #f59e0b;
        background: white;
        box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.1);
    }

    textarea.form-input {
        padding-left: 1rem;
        min-height: 120px;
        resize: vertical;
    }

    .input-icon {
        position: absolute;
        left: 0.875rem;
        top: 50%;
        transform: translateY(-50%);
        color: #9ca3af;
        font-size: 0.9375rem;
    }

    select.form-input {
        appearance: none;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
        background-position: right 0.75rem center;
        background-repeat: no-repeat;
        background-size: 1.25em;
        padding-right: 2.5rem;
    }

    /* Number input */
    input[type="number"].form-input {
        padding-left: 1rem;
    }

    /* Buttons */
    .btn-group {
        display: flex;
        gap: 0.75rem;
        margin-top: 1.5rem;
    }

    .btn-primary {
        flex: 1;
        padding: 0.875rem;
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 0.9375rem;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        transition: all 0.2s;
        box-shadow: 0 4px 6px -1px rgba(245, 158, 11, 0.3);
    }

    .btn-primary:hover {
        transform: translateY(-1px);
        box-shadow: 0 10px 20px -5px rgba(245, 158, 11, 0.4);
    }

    .btn-secondary {
        padding: 0.875rem 1.5rem;
        background: #f3f4f6;
        color: #4b5563;
        border: 2px solid #e5e7eb;
        border-radius: 8px;
        font-size: 0.9375rem;
        font-weight: 600;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        transition: all 0.2s;
    }

    .btn-secondary:hover {
        background: #e5e7eb;
        color: #1f2937;
    }

    /* Error */
    .error-message {
        color: #ef4444;
        font-size: 0.8125rem;
        margin-top: 0.375rem;
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    /* File info */
    .file-info {
        background: #f0fdf4;
        border: 1px solid #bbf7d0;
        border-radius: 8px;
        padding: 0.75rem 1rem;
        margin-bottom: 1.25rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 0.875rem;
        color: #166534;
    }

    .file-info i {
        color: #22c55e;
    }

    /* Responsive */
    @media (max-width: 640px) {
        .main {
            margin: 1rem auto;
        }
        
        .form-header {
            padding: 1.5rem;
        }
        
        .form-body {
            padding: 1.25rem;
        }

        .btn-group {
            flex-direction: column;
        }
    }
</style>

<!-- Topbar -->
<div class="topbar">
    <div class="brand">
        <div class="brand-icon">B</div>
        <div class="brand-text">
            <h1>Modifier Chapitre</h1>
        </div>
    </div>
    <a href="{{ path('chapitre_index') }}" class="btn-secondary" style="padding: 0.5rem 1rem; font-size: 0.875rem;">
        <i class="fas fa-arrow-left"></i>
        Retour
    </a>
</div>

<!-- Main -->
<div class="main">
    <div class="form-card">
        <div class="form-header">
            <div class="form-icon">
                <i class="fas fa-edit"></i>
            </div>
            <h2 class="form-title">Modifier le chapitre</h2>
            <p class="form-subtitle">Mettez à jour les informations du chapitre</p>
        </div>
        
        <div class="form-body">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                
                <div class="form-group">
                    <label class="form-label">Titre du chapitre</label>
                    <div class="input-wrap">
                        <i class="fas fa-heading input-icon"></i>
                        {{ form_widget(form.titre, {
                            'attr': {
                                'class': 'form-input',
                                'placeholder': 'Ex: Introduction à l\'algèbre',
                                'required': true,
                                'minlength': 3,
                                'maxlength': 255
                            }
                        }) }}
                    </div>
                    {{ form_errors(form.titre) }}
                </div>

                <div class="form-group">
                    <label class="form-label">Contenu / Description</label>
                    {{ form_widget(form.contenu, {
                        'attr': {
                            'class': 'form-input',
                            'placeholder': 'Décrivez le contenu de ce chapitre...',
                            'rows': 5,
                            'minlength': 10
                        }
                    }) }}
                    {{ form_errors(form.contenu) }}
                </div>

                <div class="form-group">
                    <label class="form-label">Numéro d'ordre</label>
                    <div class="input-wrap">
                        <i class="fas fa-sort-numeric-down input-icon"></i>
                        {{ form_widget(form.ordre, {
                            'attr': {
                                'class': 'form-input',
                                'min': 1,
                                'required': true
                            }
                        }) }}
                    </div>
                    {{ form_errors(form.ordre) }}
                </div>

                <div class="form-group">
                    <label class="form-label">Matière associée</label>
                    <div class="input-wrap">
                        <i class="fas fa-book input-icon"></i>
                        {{ form_widget(form.matiere, {
                            'attr': {
                                'class': 'form-input',
                                'required': true
                            }
                        }) }}
                    </div>
                    {{ form_errors(form.matiere) }}
                </div>

                <div class="btn-group">
                    <button type="submit" class="btn-primary">
                        <i class="fas fa-save"></i>
                        Mettre à jour
                    </button>
                    
                    <a href="{{ path('chapitre_index') }}" class="btn-secondary">
                        <i class="fas fa-times"></i>
                        Annuler
                    </a>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
