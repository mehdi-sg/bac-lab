{% extends 'back_base.html.twig' %}

{% block title %}Détails du Chapitre | BacLab Admin{% endblock %}

{% block body %}
<style>
    .show-container { max-width: 900px; margin: 3rem auto; padding: 0 1rem; }
    
    .detail-card {
        background: white; border-radius: 20px; overflow: hidden;
        box-shadow: 0 10px 25px rgba(0,0,0,0.05);
    }

    .detail-header {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        padding: 3rem 2rem; color: white; text-align: center;
    }

    .content-section { padding: 2rem; line-height: 1.6; color: #475569; }
    
    .meta-grid {
        display: grid; grid-template-columns: repeat(2, 1fr);
        gap: 1rem; padding: 1.5rem 2rem; background: #f8fafc;
        border-top: 1px solid #e2e8f0; border-bottom: 1px solid #e2e8f0;
    }

    .meta-item { display: flex; flex-direction: column; gap: 0.25rem; }
    .meta-label { font-size: 0.75rem; font-weight: 700; color: #94a3b8; text-transform: uppercase; }
    .meta-value { font-weight: 600; color: #1e293b; }

    .action-bar { padding: 1.5rem 2rem; display: flex; gap: 1rem; justify-content: center; }
</style>

<div class="show-container">
    <div class="detail-card">
        <div class="detail-header">
            <div style="font-size: 3rem; margin-bottom: 1rem;"><i class="fas fa-graduation-cap"></i></div>
            <h1 style="margin:0;">{{ chapitre.titre }}</h1>
            <p style="opacity: 0.9;">Ordre de lecture : N°{{ chapitre.ordre }}</p>
        </div>

        <div class="meta-grid">
            <div class="meta-item">
                <span class="meta-label">Matière liée</span>
                <span class="meta-value">{{ chapitre.matiere.nom }}</span>
            </div>
            <div class="meta-item">
                <span class="meta-label">ID Système</span>
                <span class="meta-value">#{{ chapitre.id }}</span>
            </div>
        </div>

        <div class="content-section">
            <h3 style="color: #1e293b; margin-bottom: 1rem;">Description / Contenu</h3>
            <div style="background: white; padding: 1.5rem; border-radius: 12px; border: 1px dashed #cbd5e1;">
                {{ chapitre.contenu|nl2br }}
            </div>
        </div>

        <div class="action-bar">
            <a href="{{ path('chapitre_index') }}" class="btn-secondary" style="text-decoration: none; padding: 0.75rem 1.5rem; border-radius: 10px; border: 2px solid #e2e8f0; color: #64748b; font-weight: 600;">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
            <a href="{{ path('chapitre_edit', {'id': chapitre.id}) }}" style="text-decoration: none; padding: 0.75rem 1.5rem; border-radius: 10px; background: #f59e0b; color: white; font-weight: 600;">
                <i class="fas fa-edit"></i> Modifier
            </a>
        </div>
    </div>
</div>
{% endblock %}