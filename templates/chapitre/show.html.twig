{% extends 'base.html.twig' %}

{% block title %}{{ chapitre.titre }}{% endblock %}

{% block body %}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: #f8fafc;
        color: #1e293b;
    }

    /* Topbar */
    .topbar {
        background: white;
        border-bottom: 1px solid #e2e8f0;
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .brand-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
    }

    .brand-text h1 {
        font-size: 1.125rem;
        font-weight: 700;
        color: #1e293b;
    }

    /* Main */
    .main {
        max-width: 800px;
        margin: 2rem auto;
        padding: 0 1.5rem;
    }

    /* Detail Card */
    .detail-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05), 0 10px 15px -3px rgba(0,0,0,0.05);
        overflow: hidden;
    }

    .detail-header {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        padding: 2rem;
        color: white;
        position: relative;
    }

    .detail-icon {
        width: 64px;
        height: 64px;
        background: rgba(255,255,255,0.2);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
        font-size: 1.75rem;
    }

    .detail-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        line-height: 1.3;
    }

    .detail-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        font-size: 0.875rem;
        opacity: 0.9;
    }

    .meta-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.375rem 0.875rem;
        background: rgba(255,255,255,0.2);
        border-radius: 20px;
        font-size: 0.8125rem;
        font-weight: 600;
    }

    .detail-body {
        padding: 1.5rem;
    }

    .info-section {
        margin-bottom: 1.5rem;
    }

    .info-section:last-child {
        margin-bottom: 0;
    }

    .section-label {
        font-size: 0.75rem;
        font-weight: 700;
        color: #94a3b8;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .section-label i {
        color: #f59e0b;
    }

    .section-content {
        font-size: 1rem;
        color: #374151;
        line-height: 1.6;
    }

    .content-box {
        background: #f8fafc;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        padding: 1rem;
        font-size: 0.9375rem;
        color: #475569;
        line-height: 1.7;
        white-space: pre-wrap;
    }

    .order-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: #fef3c7;
        color: #92400e;
        border-radius: 8px;
        font-size: 0.9375rem;
        font-weight: 700;
    }

    /* Actions */
    .detail-actions {
        display: flex;
        gap: 0.75rem;
        padding: 1.25rem 1.5rem;
        background: #f8fafc;
        border-top: 1px solid #e2e8f0;
    }

    .btn-edit {
        flex: 1;
        padding: 0.875rem;
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 0.9375rem;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        text-decoration: none;
        transition: all 0.2s;
        box-shadow: 0 4px 6px -1px rgba(245, 158, 11, 0.3);
    }

    .btn-edit:hover {
        transform: translateY(-1px);
        box-shadow: 0 10px 20px -5px rgba(245, 158, 11, 0.4);
    }

    .btn-back {
        padding: 0.875rem 1.5rem;
        background: white;
        color: #64748b;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        font-size: 0.9375rem;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        text-decoration: none;
        transition: all 0.2s;
    }

    .btn-back:hover {
        border-color: #cbd5e1;
        color: #475569;
    }

    /* Responsive */
    @media (max-width: 640px) {
        .main {
            margin: 1rem auto;
        }
        
        .detail-header {
            padding: 1.5rem;
        }
        
        .detail-title {
            font-size: 1.25rem;
        }
        
        .detail-body {
            padding: 1.25rem;
        }

        .detail-actions {
            flex-direction: column;
            padding: 1rem 1.25rem;
        }
    }
</style>

<!-- Topbar -->
<div class="topbar">
    <div class="brand">
        <div class="brand-icon">B</div>
        <div class="brand-text">
            <h1>Détail du Chapitre</h1>
        </div>
    </div>
    <a href="{{ path('chapitre_index') }}" class="btn-back" style="padding: 0.5rem 1rem; font-size: 0.875rem;">
        <i class="fas fa-arrow-left"></i>
        Retour
    </a>
</div>

<!-- Main -->
<div class="main">
    <div class="detail-card">
        <!-- Header -->
        <div class="detail-header">
            <div class="detail-icon">
                <i class="fas fa-file-alt"></i>
            </div>
            <h2 class="detail-title">{{ chapitre.titre }}</h2>
            <div class="detail-meta">
                <span class="meta-badge">
                    <i class="fas fa-book"></i>
                    {{ chapitre.matiere.nom }}
                </span>
                <span class="meta-badge">
                    <i class="fas fa-graduation-cap"></i>
                    {{ chapitre.matiere.filiere.nom|default('Sans filière') }}
                </span>
            </div>
        </div>

        <!-- Body -->
        <div class="detail-body">
            <div class="info-section">
                <div class="section-label">
                    <i class="fas fa-align-left"></i>
                    Contenu
                </div>
                <div class="content-box">
                    {{ chapitre.contenu|nl2br|default('Aucun contenu disponible.') }}
                </div>
            </div>

            <div class="info-section">
                <div class="section-label">
                    <i class="fas fa-sort-numeric-down"></i>
                    Ordre dans la matière
                </div>
                <div class="section-content">
                    <span class="order-badge">
                        <i class="fas fa-hashtag"></i>
                        Chapitre {{ chapitre.ordre }}
                    </span>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="detail-actions">
            <a href="{{ path('chapitre_edit', {'id': chapitre.id}) }}" class="btn-edit">
                <i class="fas fa-edit"></i>
                Modifier le chapitre
            </a>
            <a href="{{ path('chapitre_index') }}" class="btn-back">
                <i class="fas fa-list"></i>
                Voir la liste
            </a>
        </div>
    </div>
</div>
{% endblock %}