{# Search Results Dropdown #}
<div id="searchResultsDropdown" style="
    position: fixed;
    top: 80px;
    right: 22px;
    width: 380px;
    max-height: 500px;
    overflow-y: auto;
    background: rgba(15, 23, 42, 0.98);
    border: 1px solid rgba(255,255,255,0.12);
    border-radius: 16px;
    box-shadow: 0 20px 50px rgba(0,0,0,0.5);
    z-index: 1000;
    display: none;
    backdrop-filter: blur(20px);
">
    <div id="searchResultsContent" style="padding: 16px;">
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchForm = document.getElementById('globalSearchForm');
    const searchInput = document.getElementById('globalSearchInput');
    const dropdown = document.getElementById('searchResultsDropdown');
    const dropdownContent = document.getElementById('searchResultsContent');
    let searchTimeout;

    function showLoading() {
        dropdownContent.innerHTML = `
            <div style="text-align:center;padding:20px;color:var(--muted);">
                <i class="fa-solid fa-circle-notch fa-spin"></i> Recherche...
            </div>
        `;
        dropdown.style.display = 'block';
    }

    function showResults(data) {
        if (!data.q || data.count === 0) {
            dropdownContent.innerHTML = `
                <div style="text-align:center;padding:20px;color:var(--muted);">
                    <i class="fa-solid fa-search"></i> Aucune résultat pour "${data.q}"
                </div>
            `;
        } else {
            let html = `
                <div style="margin-bottom:12px;padding-bottom:12px;border-bottom:1px solid rgba(255,255,255,0.1);">
                    <div style="font-weight:900;font-size:14px;">${data.count} résultat${data.count > 1 ? 's' : ''} pour "${data.q}"</div>
                </div>
            `;
            
            if (data.users && data.users.length > 0) {
                html += `<div style="margin-bottom:12px;">
                    <div style="font-weight:800;font-size:12px;color:var(--muted);margin-bottom:8px;">UTILISATEURS</div>`;
                data.users.forEach(user => {
                    const status = user.isActive 
                        ? '<span class="pill success">Actif</span>' 
                        : '<span class="pill danger">Inactif</span>';
                    html += `
                        <a href="/admin/users/${user.id}/edit" style="
                            display:block;
                            padding:10px 12px;
                            margin-bottom:6px;
                            border-radius:10px;
                            background:rgba(255,255,255,0.04);
                            border:1px solid rgba(255,255,255,0.06);
                            text-decoration:none;
                            color:var(--text);
                            transition:0.15s ease;
                        " onmouseover="this.style.background='rgba(255,255,255,0.08)'" onmouseout="this.style.background='rgba(255,255,255,0.04)'">
                            <div style="font-weight:900;font-size:14px;">${user.email}</div>
                            <div style="margin-top:4px;">${status}</div>
                        </a>
                    `;
                });
                html += '</div>';
            }
            
            html += `
                <div style="text-align:center;margin-top:12px;padding-top:12px;border-top:1px solid rgba(255,255,255,0.1);">
                    <a href="/admin/search?q=${encodeURIComponent(data.q)}" style="
                        display:inline-block;
                        padding:8px 16px;
                        border-radius:10px;
                        background:rgba(255,255,255,0.08);
                        border:1px solid rgba(255,255,255,0.12);
                        color:var(--text);
                        font-weight:800;
                        font-size:13px;
                        text-decoration:none;
                    ">Voir tous les résultats</a>
                </div>
            `;
            
            dropdownContent.innerHTML = html;
        }
        dropdown.style.display = 'block';
    }

    function hideDropdown() {
        dropdown.style.display = 'none';
    }

    searchInput.addEventListener('input', function() {
        clearTimeout(searchTimeout);
        const value = this.value.trim();
        
        if (value.length < 2) {
            hideDropdown();
            return;
        }
        
        showLoading();
        
        searchTimeout = setTimeout(function() {
            fetch(`/admin/search/ajax?q=${encodeURIComponent(value)}`)
                .then(r => r.json())
                .then(showResults)
                .catch(err => {
                    console.error(err);
                    hideDropdown();
                });
        }, 300);
    });

    searchInput.addEventListener('focus', function() {
        if (this.value.trim().length >= 2 && dropdown.style.display !== 'none') {
            dropdown.style.display = 'block';
        }
    });

    document.addEventListener('click', function(e) {
        if (!searchInput.contains(e.target) && !dropdown.contains(e.target)) {
            hideDropdown();
        }
    });

    searchForm.addEventListener('submit', function(e) {
        e.preventDefault();
        window.location.href = `/admin/search?q=${encodeURIComponent(searchInput.value.trim())}`;
    });
});
</script>
  
