{# templates/back_base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{% block title %}BacLab - Admin{% endblock %}</title>

    {# Bootstrap #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    {# Font Awesome #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>

    {# Google Font #}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600;700;800&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="{{ asset('public\front\css\admin-crud.css') }}">


    <style>
        :root{
            --bg: #0B1020;
            --panel: rgba(255,255,255,0.06);
            --border: rgba(255,255,255,0.10);
            --text: #EAF0FF;
            --muted: rgba(234,240,255,0.70);

            --grad1: linear-gradient(135deg,#6D5BFF,#2ED3FF);
            --grad2: linear-gradient(135deg,#FF4D8D,#FFB86C);
            --grad3: linear-gradient(135deg,#35FFB6,#2E7BFF);
            --glow: 0 10px 40px rgba(109,91,255,0.25);

            --radius: 18px;
        }

        body{
            font-family: "Plus Jakarta Sans", system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
            background: radial-gradient(1200px 600px at 15% 10%, rgba(109,91,255,0.25), transparent 60%),
                        radial-gradient(900px 500px at 85% 20%, rgba(46,211,255,0.18), transparent 55%),
                        radial-gradient(900px 500px at 60% 95%, rgba(255,77,141,0.12), transparent 55%),
                        var(--bg);
            color: var(--text);
            min-height: 100vh;
        }

        .layout{
            display:flex;
            min-height:100vh;
        }

        /* Sidebar */
        .sidebar{
            width: 290px;
            padding: 22px 18px;
            position: sticky;
            top: 0;
            height: 100vh;
            border-right: 1px solid var(--border);
            background: linear-gradient(180deg, rgba(255,255,255,0.07), rgba(255,255,255,0.03));
            backdrop-filter: blur(14px);
        }

        .brand{
            display:flex;
            align-items:center;
            gap:12px;
            padding: 12px 12px;
            border-radius: var(--radius);
            background: rgba(255,255,255,0.05);
            border: 1px solid var(--border);
            box-shadow: var(--glow);
        }

        /* LOGO */
        .brand-logo{
            width:44px;
            height:44px;
            border-radius:14px;
            background: rgba(255,255,255,0.08);
            border: 1px solid var(--border);
            display:flex;
            align-items:center;
            justify-content:center;
            overflow:hidden;
        }
        .brand-logo img{
            width:100%;
            height:100%;
            object-fit:contain;
            padding:6px;
        }

        .brand h1{
            font-size: 16px;
            margin:0;
            font-weight: 800;
            line-height: 1.1;
        }
        .brand small{
            color: var(--muted);
            font-weight: 600;
        }

        .side-section-title{
            margin: 18px 10px 10px;
            color: var(--muted);
            font-weight: 800;
            font-size: 12px;
            letter-spacing: .08em;
            text-transform: uppercase;
        }

        .nav-pill{
            display:flex;
            align-items:center;
            gap:12px;
            padding: 12px 12px;
            border-radius: 14px;
            text-decoration:none;
            color: var(--text);
            border: 1px solid transparent;
            background: transparent;
            transition: 0.2s ease;
        }
        .nav-pill:hover{
            background: rgba(255,255,255,0.06);
            border-color: rgba(255,255,255,0.10);
        }

        .nav-pill.active{
            background: rgba(255,255,255,0.08);
            border-color: rgba(255,255,255,0.12);
            box-shadow: 0 10px 28px rgba(0,0,0,0.18);
        }

        .nav-icon{
            width:42px;height:42px;border-radius: 14px;
            display:flex;align-items:center;justify-content:center;
            border: 1px solid rgba(255,255,255,0.12);
            background: rgba(255,255,255,0.05);
        }
        .nav-icon.grad1{ background: var(--grad1); border-color: transparent; }
        .nav-icon.grad2{ background: var(--grad2); border-color: transparent; }
        .nav-icon.grad3{ background: var(--grad3); border-color: transparent; }

        .nav-text{ flex:1; }
        .nav-text strong{ display:block; font-size: 14px; font-weight: 800; }
        .nav-text span{ display:block; font-size: 12px; color: var(--muted); font-weight: 600; }

        .sidebar-footer{
            position:absolute;
            left:18px;
            right:18px;
            bottom:18px;
            border-radius: var(--radius);
            border: 1px solid var(--border);
            background: rgba(255,255,255,0.05);
            padding: 14px;
        }

        .sidebar-footer .meta{
            display:flex;gap:12px;align-items:center;
        }

        .avatar{
            width:42px;height:42px;border-radius: 14px;
            background: rgba(255,255,255,0.08);
            border: 1px solid var(--border);
            display:flex;align-items:center;justify-content:center;
            font-weight: 900;
        }

        .meta small{ color: var(--muted); font-weight: 600; display:block; }

        /* Main */
        .main{
            flex:1;
            padding: 22px 22px 40px;
        }

        /* Topbar */
        .topbar{
            display:flex;
            align-items:center;
            justify-content:space-between;
            gap: 14px;
            padding: 16px 18px;
            border-radius: var(--radius);
            border: 1px solid var(--border);
            background: rgba(255,255,255,0.06);
            backdrop-filter: blur(14px);
            box-shadow: 0 12px 40px rgba(0,0,0,0.18);
            margin-bottom: 20px;
        }

        .topbar-title h2{
            font-size: 18px;
            margin:0;
            font-weight: 900;
        }

        .topbar-title p{
            margin: 2px 0 0;
            color: var(--muted);
            font-weight: 600;
            font-size: 13px;
        }

        .topbar-actions{
            display:flex;align-items:center;gap:10px;
        }

        .search{
            width: 320px;
            max-width: 42vw;
            border-radius: 14px;
            border: 1px solid var(--border);
            background: rgba(0,0,0,0.18);
            padding: 10px 12px;
            color: var(--text);
            outline: none;
        }

        .btn-ghost{
            border-radius: 14px;
            border: 1px solid var(--border);
            background: rgba(255,255,255,0.05);
            color: var(--text);
            padding: 10px 12px;
            font-weight: 800;
            text-decoration:none;
        }
        .btn-ghost:hover{
            background: rgba(255,255,255,0.08);
        }
        

        /* Cards */
        .glass-card{
            border-radius: var(--radius);
            border: 1px solid var(--border);
            background: rgba(255,255,255,0.06);
            backdrop-filter: blur(14px);
            box-shadow: 0 18px 50px rgba(0,0,0,0.18);
        }

        @media (max-width: 992px){
            .sidebar{ width: 92px; padding: 18px 10px; }
            .brand h1, .brand small, .nav-text, .side-section-title, .sidebar-footer .meta div { display:none; }
            .sidebar-footer{ padding:10px; }
            .search{ display:none; }
        }
        
        /* ==========================================
           ADMIN FICHE STYLES
           ========================================== */
        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 1.5rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }
        
        .admin-title {
            font-size: 2rem;
            font-weight: 900;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        
        .admin-subtitle {
            color: var(--muted);
            font-size: 0.9375rem;
            margin: 0.5rem 0 0;
            font-weight: 600;
        }
        
        .admin-card {
            border-radius: var(--radius);
            border: 1px solid var(--border);
            background: rgba(255, 255, 255, 0.06);
            backdrop-filter: blur(14px);
            box-shadow: 0 18px 50px rgba(0, 0, 0, 0.18);
            overflow: hidden;
        }
        
        .card-header-admin {
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid var(--border);
            background: rgba(255, 255, 255, 0.03);
        }
        
        .card-body-admin {
            padding: 1.5rem;
        }
        
        .admin-input, .admin-input:focus {
            background: rgba(0, 0, 0, 0.25);
            border: 1px solid var(--border);
            border-radius: 12px;
            color: var(--text);
            padding: 0.75rem 1rem;
        }
        
        .admin-input:focus {
            border-color: rgba(109, 91, 255, 0.5);
            box-shadow: 0 0 0 3px rgba(109, 91, 255, 0.15);
            outline: none;
        }
        
        .admin-btn {
            padding: 0.75rem 1.5rem;
            border-radius: 12px;
            font-weight: 700;
            border: 1px solid var(--border);
            transition: all 0.2s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .admin-btn-primary {
            background: var(--grad1);
            border-color: transparent;
            color: white;
        }
        
        .admin-btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(109, 91, 255, 0.4);
            color: white;
        }
        
        .admin-btn-secondary {
            background: rgba(255, 255, 255, 0.05);
            color: var(--text);
        }
        
        .admin-btn-secondary:hover {
            background: rgba(255, 255, 255, 0.08);
            color: var(--text);
        }
        
        .admin-btn-danger {
            background: linear-gradient(135deg, #FF4D8D, #FF6B6B);
            border-color: transparent;
            color: white;
        }
        
        .admin-btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(255, 77, 141, 0.4);
            color: white;
        }
        
        .admin-btn-icon {
            padding: 0.5rem 0.75rem;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid var(--border);
            border-radius: 10px;
            color: var(--text);
            transition: all 0.2s ease;
        }
        
        .admin-btn-icon:hover {
            background: rgba(255, 255, 255, 0.1);
            color: var(--text);
        }
        
        .admin-btn-icon.admin-btn-danger:hover {
            background: linear-gradient(135deg, #FF4D8D, #FF6B6B);
            color: white;
        }
        
        .admin-table {
            width: 100%;
            color: var(--text);
        }
        
        .admin-table thead th {
            padding: 1rem 1.25rem;
            font-weight: 800;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: var(--muted);
            border-bottom: 1px solid var(--border);
        }
        
        .admin-table tbody td {
            padding: 1.25rem;
            border-bottom: 1px solid var(--border);
            vertical-align: middle;
        }
        
        .admin-table tbody tr:hover {
            background: rgba(255, 255, 255, 0.03);
        }
        
        .badge-id {
            display: inline-block;
            padding: 0.375rem 0.75rem;
            background: rgba(109, 91, 255, 0.15);
            border: 1px solid rgba(109, 91, 255, 0.3);
            border-radius: 8px;
            font-weight: 700;
            font-size: 0.875rem;
            color: #6D5BFF;
        }
        
        .fiche-icon-mini {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            background: var(--grad1);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            flex-shrink: 0;
        }
        
        .badge-filiere {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: rgba(46, 211, 255, 0.15);
            border: 1px solid rgba(46, 211, 255, 0.3);
            border-radius: 10px;
            font-weight: 700;
            font-size: 0.875rem;
            color: #2ED3FF;
        }
        
        .badge-status {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            border-radius: 10px;
            font-weight: 700;
            font-size: 0.875rem;
            border: 1px solid;
            cursor: pointer;
            transition: all 0.2s ease;
        }
        
        .badge-status:hover {
            transform: translateY(-2px);
        }
        
        .badge-public {
            background: rgba(53, 255, 182, 0.15);
            border-color: rgba(53, 255, 182, 0.3);
            color: #35FFB6;
        }
        
        .badge-private {
            background: rgba(255, 255, 255, 0.08);
            border-color: var(--border);
            color: var(--muted);
        }
        
        .empty-state {
            padding: 3rem;
            text-align: center;
            color: var(--muted);
        }
        
        .empty-state i {
            font-size: 3rem;
            opacity: 0.3;
            margin-bottom: 1rem;
        }
        
        .admin-pagination {
            padding: 1.5rem;
            border-top: 1px solid var(--border);
        }
        
        .pagination .page-link {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid var(--border);
            color: var(--text);
            padding: 0.5rem 0.75rem;
            margin: 0 0.25rem;
            border-radius: 8px;
            font-weight: 700;
        }
        
        .pagination .page-link:hover {
            background: rgba(255, 255, 255, 0.1);
            color: var(--text);
        }
        
        .pagination .page-item.active .page-link {
            background: var(--grad1);
            border-color: transparent;
            color: white;
        }
        
        .pagination .page-item.disabled .page-link {
            opacity: 0.5;
        }
        
        .admin-modal .modal-content {
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
            border: 1px solid var(--border);
            border-radius: var(--radius);
            backdrop-filter: blur(20px);
            color: var(--text);
        }
        
        .admin-modal .modal-header {
            border-bottom: 1px solid var(--border);
        }
        
        .admin-modal .modal-footer {
            border-top: 1px solid var(--border);
        }
    </style>

    {% block stylesheets %}{% endblock %}
</head>
