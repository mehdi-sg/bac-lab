    <script>
        // ULTIMATE REGISTRATION EXPERIENCE
        class UltimateRegistration {
            constructor() {
                this.currentStep = 1;
                this.totalSteps = 4;
                this.init();
            }
            
            init() {
                this.createStars();
                this.setupPasswordStrength();
                this.setupRealTimeValidation();
                this.setupFormSubmission();
                this.animateEntrance();
            }
            
            // CREATE FLOATING STARS
            createStars() {
                const container = document.getElementById('starsContainer');
                const starCount = 100;
                
                for (let i = 0; i < starCount; i++) {
                    const star = document.createElement('div');
                    star.className = 'star';
                    star.style.left = Math.random() * 100 + '%';
                    star.style.top = Math.random() * 100 + '%';
                    star.style.animationDelay = Math.random() * 3 + 's';
                    star.style.animationDuration = (Math.random() * 2 + 2) + 's';
                    container.appendChild(star);
                }
            }
            
            // PASSWORD STRENGTH INDICATOR
            setupPasswordStrength() {
                const passwordInput = document.querySelector('#registration_plainPassword');
                const strengthDiv = document.querySelector('.password-strength');
                
                if (passwordInput && strengthDiv) {
                    passwordInput.addEventListener('input', () => {
                        const value = passwordInput.value;
                        const hasNumber = /[0-9]/.test(value);
                        const hasSpecial = /[\W_]/.test(value);
                        const hasLength = value.length >= 8;
                        
                        if (value.length === 0) {
                            strengthDiv.textContent = "";
                            strengthDiv.style.color = "";
                            return;
                        }
                        
                        if (hasNumber && hasSpecial && hasLength) {
                            strengthDiv.textContent = "üöÄ Mot de passe excellent !";
                            strengthDiv.style.color = "#10b981";
                        } else {
                            strengthDiv.textContent = "üí° Suggestion : 8+ caract√®res, 1 chiffre, 1 caract√®re sp√©cial";
                            strengthDiv.style.color = "#00d4ff";
                        }
                    });
                }
            }
            
            // REAL-TIME VALIDATION
            setupRealTimeValidation() {
                const inputs = document.querySelectorAll('input, select');
                
                inputs.forEach(input => {
                    input.addEventListener('blur', () => {
                        this.validateSingleField(input);
                    });
                    
                    input.addEventListener('focus', () => {
                        input.classList.remove('is-invalid');
                        input.style.borderColor = '';
                        hideFieldError(input);
                    });
                    
                    // For email and password, validate on input with debounce
                    if (input.type === 'email' || input.name?.includes('plainPassword')) {
                        let timeout;
                        input.addEventListener('input', () => {
                            clearTimeout(timeout);
                            timeout = setTimeout(() => {
                                this.validateSingleField(input);
                            }, 1000);
                        });
                    }
                });
            }
            
            async validateSingleField(input) {
                const value = input.value ? input.value.trim() : '';
                let isValid = true;
                let errorMessage = '';
                
                if (!value) return;
                
                if (input.type === 'email') {
                    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                    if (!emailRegex.test(value)) {
                        isValid = false;
                        errorMessage = 'Veuillez entrer une adresse email valide';
                    } else {
                        // Check for duplicate email via AJAX
                        try {
                            const response = await fetch('/api/check-email', {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({ email: value })
                            });
                            
                            const data = await response.json();
                            if (data.exists) {
                                isValid = false;
                                errorMessage = data.message;
                            }
                        } catch (error) {
                            console.error('Error checking email:', error);
                        }
                    }
                }
                
                if (input.name && input.name.includes('plainPassword')) {
                    const hasLength = value.length >= 8;
                    const hasNumber = /[0-9]/.test(value);
                    const hasSpecial = /[\W_]/.test(value);
                    
                    if (!hasLength || !hasNumber || !hasSpecial) {
                        isValid = false;
                        errorMessage = 'Le mot de passe doit contenir au moins 8 caract√®res, 1 chiffre et 1 caract√®re sp√©cial';
                    }
                }
                
                // Visual feedback
                if (!isValid) {
                    input.classList.add('is-invalid');
                    input.style.borderColor = '#ff6b9d';
                    if (errorMessage) {
                        showFieldError(input, errorMessage);
                    }
                } else {
                    input.classList.remove('is-invalid');
                    input.style.borderColor = '#10b981';
                    hideFieldError(input);
                }
            }
            
            // FORM SUBMISSION
            setupFormSubmission() {
                const form = document.getElementById('registrationForm');
                if (form) {
                    form.addEventListener('submit', (e) => {
                        const submitBtn = document.querySelector('.btn-launch-3d');
                        if (submitBtn) {
                            submitBtn.classList.add('loading');
                            submitBtn.innerHTML = '';
                        }
                    });
                }
            }
            
            // ANIMATE ENTRANCE
            animateEntrance() {
                setTimeout(() => {
                    const activeCard = document.querySelector('.form-card.active');
                    if (activeCard) {
                        activeCard.style.transform = 'translateY(-5px) translateZ(10px)';
                    }
                }, 500);
            }
        }
        
        // STEP-BY-STEP VALIDATION
        function nextStep(step) {
            const currentCard = document.querySelector('.form-card.active');
            if (!validateCurrentStepFields(currentCard)) {
                return;
            }
            
            goToStep(step);
            updateProgress(step);
        }
        
        function validateCurrentStepFields(currentCard) {
            if (!currentCard) return false;
            
            const inputs = currentCard.querySelectorAll('input, select');
            let isValid = true;
            let firstInvalidField = null;
            
            inputs.forEach(input => {
                const value = input.value ? input.value.trim() : '';
                let fieldValid = true;
                
                if (!value || value === '') {
                    fieldValid = false;
                }
                
                if (fieldValid && input.type === 'email') {
                    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                    if (!emailRegex.test(value)) {
                        fieldValid = false;
                    }
                }
                
                if (fieldValid && input.name && input.name.includes('plainPassword')) {
                    const hasLength = value.length >= 8;
                    const hasNumber = /[0-9]/.test(value);
                    const hasSpecial = /[\W_]/.test(value);
                    
                    if (!hasLength || !hasNumber || !hasSpecial) {
                        fieldValid = false;
                    }
                }
                
                if (fieldValid && input.type === 'date') {
                    const date = new Date(value);
                    const today = new Date();
                    const hundredYearsAgo = new Date();
                    hundredYearsAgo.setFullYear(today.getFullYear() - 100);
                    
                    if (date >= today || date <= hundredYearsAgo) {
                        fieldValid = false;
                    }
                }
                
                if (!fieldValid) {
                    isValid = false;
                    input.classList.add('is-invalid');
                    input.style.borderColor = '#ff6b9d';
                    
                    if (!firstInvalidField) {
                        firstInvalidField = input;
                    }
                    
                    showFieldError(input, getFieldErrorMessage(input, value));
                } else {
                    input.classList.remove('is-invalid');
                    input.style.borderColor = '';
                    hideFieldError(input);
                }
            });
            
            if (firstInvalidField) {
                firstInvalidField.scrollIntoView({ behavior: 'smooth', block: 'center' });
                firstInvalidField.focus();
            }
            
            return isValid;
        }
        
        function getFieldErrorMessage(input, value) {
            const fieldName = input.name || input.id || 'Ce champ';
            
            if (!value || value === '') {
                return `${fieldName} est obligatoire`;
            }
            
            if (input.type === 'email') {
                return 'Veuillez entrer une adresse email valide';
            }
            
            if (input.name && input.name.includes('plainPassword')) {
                return 'Le mot de passe doit contenir au moins 8 caract√®res, 1 chiffre et 1 caract√®re sp√©cial';
            }
            
            if (input.type === 'date') {
                return 'Veuillez entrer une date de naissance valide';
            }
            
            return `${fieldName} n'est pas valide`;
        }
        
        function showFieldError(input, message) {
            // Remove existing error
            hideFieldError(input);
            
            // Create error element
            const errorDiv = document.createElement('div');
            errorDiv.className = 'field-error-message';
            errorDiv.textContent = message;
            errorDiv.style.cssText = `
                color: #ff6b9d;
                font-size: 0.9rem;
                font-weight: 600;
                margin-top: 8px;
                background: rgba(255, 107, 157, 0.1);
                padding: 8px 12px;
                border-radius: 8px;
                border: 1px solid rgba(255, 107, 157, 0.3);
                animation: slideDown 0.3s ease-out;
            `;
            
            // Insert after input
            input.parentNode.insertBefore(errorDiv, input.nextSibling);
        }
        
        function hideFieldError(input) {
            const existingError = input.parentNode.querySelector('.field-error-message');
            if (existingError) {
                existingError.remove();
            }
        }
        
        function prevStep(step) {
            goToStep(step);
        }
        
        function goToStep(step) {
            // Hide all cards
            document.querySelectorAll('.form-card').forEach(card => {
                card.style.display = 'none';
                card.classList.remove('active');
            });
            
            // Show target card
            const targetCard = document.querySelector(`.form-card[data-step="${step}"]`);
            if (targetCard) {
                targetCard.style.display = 'block';
                setTimeout(() => {
                    targetCard.classList.add('active');
                }, 100);
            }
            
            // Update journey steps
            document.querySelectorAll('.journey-step').forEach(journeyStep => {
                const stepNum = parseInt(journeyStep.dataset.step);
                journeyStep.classList.remove('active', 'completed');
                
                if (stepNum === step) {
                    journeyStep.classList.add('active');
                } else if (stepNum < step) {
                    journeyStep.classList.add('completed');
                }
            });
            
            if (window.ultimateReg) {
                window.ultimateReg.currentStep = step;
            }
        }
        
        function updateProgress(step) {
            // Add celebration effect for completed steps
            const completedSteps = document.querySelectorAll('.journey-step.completed');
            completedSteps.forEach(stepEl => {
                stepEl.style.animation = 'none';
                setTimeout(() => {
                    stepEl.style.animation = 'iconPulse 3s ease-in-out infinite';
                }, 100);
            });
        }
        
        function validateCurrentStep() {
            const currentCard = document.querySelector('.form-card.active');
            return validateCurrentStepFields(currentCard);
        }
        
        function showValidationMessage(message) {
            const currentCard = document.querySelector('.form-card.active');
            if (!currentCard) return;
            
            // Remove existing message
            const existingMessage = currentCard.querySelector('.step-validation-message');
            if (existingMessage) {
                existingMessage.remove();
            }
            
            // Create new message
            const messageEl = document.createElement('div');
            messageEl.className = 'step-validation-message';
            messageEl.textContent = message;
            messageEl.style.cssText = `
                margin-top: 20px;
                padding: 15px 20px;
                background: rgba(255, 107, 157, 0.15);
                border: 1px solid rgba(255, 107, 157, 0.4);
                border-radius: 12px;
                color: #ff6b9d;
                font-weight: 600;
                text-align: center;
                animation: slideDown 0.3s ease-out;
            `;
            
            currentCard.appendChild(messageEl);
            
            // Hide after 5 seconds
            setTimeout(() => {
                if (messageEl && messageEl.parentNode) {
                    messageEl.remove();
                }
            }, 5000);
        }
        
        // Initialize when DOM is loaded
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(() => {
                window.ultimateReg = new UltimateRegistration();
                
                // Check for validation errors after form submission
                const hasAnyErrors = document.querySelector('ul, .invalid-feedback');
                if (hasAnyErrors) {
                    checkForValidationErrors();
                }
            }, 100);
        });
        
        function checkForValidationErrors() {
            let errorStep = 1;
            
            const stepMappings = {
                1: ['email', 'plainPassword'],
                2: ['profil_nom', 'profil_prenom', 'profil_dateNaissance', 'profil_gouvernorat'],
                3: ['profil_niveau', 'profil_filiere']
            };
            
            // Look for form errors in the DOM
            document.querySelectorAll('ul, .invalid-feedback').forEach(errorElement => {
                const parentGroup = errorElement.closest('.form-group-3d');
                if (parentGroup) {
                    const input = parentGroup.querySelector('input, select');
                    if (input) {
                        const inputName = input.name || input.id;
                        
                        // Determine which step this field belongs to
                        for (const [step, fields] of Object.entries(stepMappings)) {
                            if (fields.some(field => inputName.includes(field.replace('profil_', '')))) {
                                errorStep = Math.max(errorStep, parseInt(step));
                                break;
                            }
                        }
                    }
                }
            });
            
            // Check by looking at which step cards contain errors
            for (let step = 1; step <= 4; step++) {
                const stepCard = document.querySelector(`[data-step="${step}"]`);
                if (stepCard && (stepCard.querySelector('ul') || stepCard.querySelector('.invalid-feedback'))) {
                    errorStep = Math.max(errorStep, step);
                }
            }
            
            // Go to the step with errors
            if (errorStep > 1) {
                goToStep(errorStep);
            }
            
            // Mark inputs with errors as invalid for visual feedback
            document.querySelectorAll('.form-group-3d').forEach(group => {
                const hasError = group.querySelector('ul') || group.querySelector('.invalid-feedback');
                const input = group.querySelector('input, select');
                if (hasError && input) {
                    input.classList.add('is-invalid');
                }
            });
        }
