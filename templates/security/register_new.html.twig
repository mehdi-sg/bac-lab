    <style>
        :root {
            --primary: #667eea;
            --primary-dark: #764ba2;
            --accent: #f093fb;
            --neon-blue: #00d4ff;
            --neon-purple: #b794f6;
            --neon-pink: #ff6b9d;
            --glass-bg: rgba(255, 255, 255, 0.08);
            --glass-border: rgba(255, 255, 255, 0.18);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            font-family: 'Inter', sans-serif;
            background: #0a0a0f;
            color: white;
            overflow-x: hidden;
            min-height: 100vh;
