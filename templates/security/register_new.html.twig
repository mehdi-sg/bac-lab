    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Password Strength Checker
            const passwordInput = document.getElementById('password');
            const strengthDiv = document.getElementById('password-strength');

            if (passwordInput && strengthDiv) {
                passwordInput.addEventListener('input', function() {
                    const value = this.value;
                    
                    if (value.length === 0) {
                        strengthDiv.innerHTML = '';
                        return;
                    }

                    const hasNumber = /[0-9]/.test(value);
                    const hasSpecial = /[\W_]/.test(value);
                    const hasLength = value.length >= 8;
                    const hasUpper = /[A-Z]/.test(value);
                    const hasLower = /[a-z]/.test(value);

                    let strength = 0;
                    let message = '';
                    let className = '';

                    if (hasLength) strength++;
                    if (hasNumber) strength++;
                    if (hasSpecial) strength++;
                    if (hasUpper) strength++;
                    if (hasLower) strength++;

                    if (strength < 3) {
                        message = '<i class="fas fa-times-circle"></i> Mot de passe faible';
                        className = 'strength-weak';
                    } else if (strength < 4) {
                        message = '<i class="fas fa-exclamation-circle"></i> Mot de passe moyen';
                        className = 'strength-medium';
                    } else {
                        message = '<i class="fas fa-check-circle"></i> Mot de passe fort';
                        className = 'strength-strong';
                    }

                    strengthDiv.innerHTML = message;
                    strengthDiv.className = 'password-strength ' + className;
                });
            }

            // Form Submission Loading
            const form = document.getElementById('registerForm');
            const submitBtn = document.getElementById('submitBtn');

            if (form && submitBtn) {
                form.addEventListener('submit', function() {
                    submitBtn.innerHTML = '<i class="fas fa-spinner"></i> Création en cours...';
                    form.classList.add('loading');
                });
            }

            // Enhanced Form Validation
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('blur', function() {
                    if (this.value.trim() === '' && this.hasAttribute('required')) {
                        this.style.borderColor = 'var(--neon-pink)';
                    } else {
                        this.style.borderColor = 'var(--glass-border)';
                    }
                });

                input.addEventListener('focus', function() {
                    this.style.borderColor = 'var(--neon-blue)';
                });
            });
        });
    </script>
