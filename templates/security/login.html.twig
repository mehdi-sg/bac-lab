{% extends 'security/base_auth.html.twig' %}

{% block title %}Connexion - BacLab{% endblock %}

{% block header_title %}Bon Retour !{% endblock %}
{% block header_subtitle %}Connectez-vous pour continuer votre préparation au Baccalauréat{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle" style="margin-right: 8px;"></i>
            <strong>Erreur :</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form method="post">
        <div class="form-group">
            <label for="inputEmail" class="form-label">
                <i class="fas fa-envelope" style="color: #667eea; margin-right: 8px;"></i>
                Adresse Email
            </label>
            <input type="email" 
                   value="{{ last_username }}" 
                   name="_username" 
                   id="inputEmail" 
                   class="form-control" 
                   placeholder="votre.email@exemple.com"
                   autocomplete="email" 
                   required 
                   autofocus>
        </div>

        <div class="form-group">
            <label for="inputPassword" class="form-label">
                <i class="fas fa-key" style="color: #667eea; margin-right: 8px;"></i>
                Mot de Passe
            </label>
            <input type="password" 
                   name="_password" 
                   id="inputPassword" 
                   class="form-control" 
                   placeholder="Votre mot de passe sécurisé"
                   autocomplete="current-password" 
                   required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="custom-checkbox">
            <input type="checkbox" name="_remember_me" id="rememberMe">
            <label for="rememberMe">
                <i class="fas fa-check-circle" style="color: #667eea; margin-right: 6px;"></i>
                Se souvenir de moi
            </label>
        </div>

        <button class="btn-auth" type="submit">
            <i class="fas fa-sign-in-alt" style="margin-right: 10px;"></i>
            Se Connecter
        </button>
        
        <div class="divider">
            <span>OU</span>
        </div>
        
        <a href="{{ path('app_register') }}" class="btn-auth" style="display: block; text-align: center; text-decoration: none; background: white; color: #667eea; border: 3px solid #667eea;">
            <i class="fas fa-user-plus" style="margin-right: 10px;"></i>
            Créer un Compte
        </a>
    </form>
    
    <div class="auth-link">
        <i class="fas fa-question-circle" style="margin-right: 6px;"></i>
        Mot de passe oublié ? <a href="#">Réinitialiser</a>
    </div>
{% endblock %}
